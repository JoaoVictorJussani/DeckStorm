<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Commencer l'exercice</title>
    <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    /* Copier ici tout le CSS de home.edge */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Style du corps de la page */
    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    /* Style pour le titre principal */
    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #6c8947;
      font-weight: 700;
      text-align: center;
    }

    /* Style pour les boutons */
    button {
      background: #6c8947;
      color: #000;
      border: 2px solid #6c8947;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    /* Effet au survol des boutons */
    button:hover {
      background: #008c95;
      color: white;
    }

    .open .dropdown-menu {
      display: block;
    }

    /* Ajout d'un espace en haut pour compenser la navbar fixe */
    .spacer {
      height: 80px;
    }
  </style>
</head>
<body>
  @include('components/header')
  <div class="spacer"></div>
  <!-- Titre dynamique basé sur le deck -->
  <h1>Commencer l'exercice pour le deck "{{ deck.title }}"</h1>

  @if(deck && deck.id)
    <!-- Formulaire pour démarrer l'exercice -->
    <form action="{{ route('exercise.presentQuestion', { deckId: deck.id, questionIndex: 0 }) }}" method="GET" onsubmit="handleSubmit(this)" style="display: flex; flex-direction: column; align-items: flex-start; gap: 0.5rem; max-width: 400px;">
      <!-- Champ caché pour enregistrer l'heure de début -->
      <input type="hidden" name="startTime" id="startTime" />
      <!-- Champ caché pour initialiser les résultats -->
      <input type="hidden" name="results" value="[]" />

      <label for="mode-select" style="font-size:1.2rem;">Choisissez un mode :</label>
      <select id="mode-select" name="mode" style="background: #6c8947; color: #000; border: 2px solid #6c8947; padding: 0.8rem 1.5rem; border-radius: 8px; cursor: pointer; font-size: 1.2rem; font-weight: 600; transition: background 0.3s ease, color 0.3s ease;">
        <option value="chronometre">Mode chronométré</option>
        <option value="basique">Mode basique</option>
        <option value="jusquaubout">Mode jusqu'au bout</option>
      </select>

      <label for="direction-select" style="font-size:1.2rem;">Sens de l'exercice :</label>
      <select id="direction-select" name="direction" style="background: #6c8947; color: #000; border: 2px solid #6c8947; padding: 0.8rem 1.5rem; border-radius: 8px; cursor: pointer; font-size: 1.2rem; font-weight: 600; transition: background 0.3s ease, color 0.3s ease;">
        <option value="question">Question → Réponse</option>
        <option value="answer">Réponse → Question</option>
      </select>

      @if(typeof retryCardIds !== 'undefined' && retryCardIds)
        @each(id in retryCardIds)
          <input type="hidden" name="retryCardIds" value="{{ id }}" />
        @endeach
      @endif
      <input type="hidden" name="attempts" value="{{ attempts || 1 }}" />
      <!-- Bouton pour soumettre le formulaire -->
      <button type="submit" style="margin-top: 1rem;">C'est parti</button>
    </form>
  @else
    <p style="color:#ff4d4d;">Erreur : deck introuvable ou invalide.</p>
  @endif

  <script>
    // Fonction pour gérer la soumission du formulaire
    function handleSubmit(form) {
      const mode = form.mode.value; // Récupère le mode sélectionné
      if(mode === 'chronometre'){
        document.getElementById('startTime').value = Date.now(); // Enregistre l'heure actuelle si mode chronométré
      }
      return true; // Permet la soumission du formulaire
    }
  </script>
</body>
</html>
