<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Commencer l'exercice</title>
    <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    /* Copier ici tout le CSS de home.edge */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Style du corps de la page */
    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }
    body.theme-light {
      background: #fff;
      color: #222;
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
    }

    /* Style pour le titre principal */
    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #1976d2;
      font-weight: 700;
      text-align: center;
      box-shadow: 0 0 15px #1976d2;
    }

    /* Style pour les boutons */
    button {
      background: #1976d2;
      color: #fff;
      border: 2px solid #1976d2;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }
    button:hover {
      background: #1565c0;
      color: #fff;
    }
    .abandon-button {
      background: #fff;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }
    body.theme-dark .abandon-button {
      background: #23272f;
      color: #ff4d4d;
      border-color: #ff4d4d;
    }
    body.theme-dark .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }

    .open .dropdown-menu {
      display: block;
    }

    /* Ajout d'un espace en haut pour compenser la navbar fixe */
    .spacer {
      height: 80px;
    }

    .card-link {
      color: #1976d2;
      text-decoration: none;
    }

    .card-link:hover {
      color: #1565c0; 
      opacity: 0.8;
    }

    /* Helpbox styles */
    .helpbox {
      display: inline-block;
      margin-left: 0.7rem;
      vertical-align: middle;
      position: relative;
    }
    .helpbox-btn {
      background: #1976d2;
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 28px;
      height: 28px;
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.2s;
      margin-left: 0.2rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);
    }
    .helpbox-btn:hover, .helpbox-btn:focus {
      background: #1565c0;
      outline: none;
    }
    .helpbox-content {
      display: none;
      position: absolute;
      left: 120%;
      top: 50%;
      transform: translateY(-50%);
      min-width: 260px;
      background: #fff;
      color: #222;
      border: 2px solid #1976d2;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(25, 118, 210, 0.10);
      padding: 1rem 1.2rem;
      z-index: 200;
      font-size: 1rem;
      text-align: left;
      line-height: 1.5;
    }
    body.theme-dark .helpbox-content {
      background: #23272f;
      color: #e0e0e0;
      border-color: #1976d2;
    }
    .helpbox-content strong {
      color: #1976d2;
    }
    .helpbox.open .helpbox-content {
      display: block;
    }
  </style>
</head>
<body>
    @include('components/header')
    <div class="spacer"></div>
    <!-- Titre dynamique basé sur le deck -->
    <h1>Commencer l'exercice pour le deck "{{ deck.title }}"</h1>

    @if(deck && deck.id)
      <!-- Formulaire pour démarrer l'exercice -->
      <form action="{{ route('exercise.presentQuestion', { deckId: deck.id, questionIndex: 0 }) }}" method="GET" onsubmit="handleSubmit(this)" style="display: flex; flex-direction: column; align-items: flex-start; gap: 0.5rem; max-width: 400px;">
        <!-- Champ caché pour enregistrer l'heure de début -->
        <input type="hidden" name="startTime" id="startTime" />
        <!-- Champ caché pour initialiser les résultats -->
        <input type="hidden" name="results" value="[]" />

        <label for="mode-select" style="font-size:1.2rem;">Choisissez un mode :</label>
        <span class="helpbox">
          <button type="button" class="helpbox-btn" onclick="toggleHelpbox('mode-helpbox')" aria-label="Aide sur les modes">?</button>
          <span class="helpbox-content" id="mode-helpbox">
            <strong>Mode chronométré :</strong> Répondez à toutes les questions le plus vite possible sans faire d'erreus.<br><br>
            <strong>Mode basique :</strong> Répondez à chaque carte une seule fois, sans contrainte de temps.<br><br>
            <strong>Mode jusqu'au bout :</strong> Vous devez répondre correctement à toutes les cartes. Les cartes ratées reviennent jusqu'à ce que vous réussissiez tout.
          </span>
        </span>
        <select id="mode-select" name="mode" style="background: #1976d2; color: #fff; border: 2px solid #1976d2; padding: 0.8rem 1.5rem; border-radius: 8px; cursor: pointer; font-size: 1.2rem; font-weight: 600; transition: background 0.3s ease, color 0.3s ease;">
          <option value="chronometre">Mode chronométré</option>
          <option value="basique">Mode basique</option>
          <option value="jusquaubout">Mode jusqu'au bout</option>
        </select>

        <label for="direction-select" style="font-size:1.2rem;">Sens de l'exercice :</label>
        <select id="direction-select" name="direction" style="background: #1976d2; color: #fff; border: 2px solid #1976d2; padding: 0.8rem 1.5rem; border-radius: 8px; cursor: pointer; font-size: 1.2rem; font-weight: 600; transition: background 0.3s ease, color 0.3s ease;">
          <option value="question">Question → Réponse</option>
          <option value="answer">Réponse → Question</option>
        </select>

        @if(typeof retryCardIds !== 'undefined' && retryCardIds)
          @each(id in retryCardIds)
            <input type="hidden" name="retryCardIds" value="{{ id }}" />
          @endeach
        @endif
        <input type="hidden" name="attempts" value="{{ attempts || 1 }}" />
        <!-- Boutons pour soumettre ou abandonner -->
        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
          <button type="submit">C'est parti</button>
          <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: deck.id }) }}'">Abandonner</button>
        </div>
      </form>
    @else
      <p style="color:#ff4d4d;">Erreur : deck introuvable ou invalide.</p>
    @endif

    <script>
      // Fonction pour gérer la soumission du formulaire
      function handleSubmit(form) {
        const mode = form.mode.value;
        if(mode === 'chronometre'){
          document.getElementById('startTime').value = Date.now();
        }
        return true;
      }
      // Dropdown JS
      function toggleDropdownMenu() {
        const menu = document.getElementById('dropdownMenu');
        menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
      }
      // Helpbox logic
      function toggleHelpbox(id) {
        document.querySelectorAll('.helpbox-content').forEach(function(box) {
          if (box.id !== id) box.parentElement.classList.remove('open');
        });
        var el = document.getElementById(id);
        if (el) {
          el.parentElement.classList.toggle('open');
        }
      }
      document.addEventListener('click', function(event) {
        document.querySelectorAll('.helpbox').forEach(function(box) {
          if (!box.contains(event.target)) box.classList.remove('open');
        });
        const menu = document.getElementById('dropdownMenu');
        if (menu && menu.style.display === 'block' && !menu.contains(event.target) && event.target.className !== 'dropdown-toggle') {
          menu.style.display = 'none';
        }
      });
    </script>
  </body>
</html>
