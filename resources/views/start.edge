<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Commencer l'exercice</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #f7faff;
      color: #222;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center; /* Ajouté pour centrage vertical */
      font-size: 1rem;
      transition: background 0.5s, color 0.5s;
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
    }
    .main-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 80vh;
      width: 100%;
    }
    .exercise-card {
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(25, 118, 210, 0.12), 0 1.5px 8px rgba(25, 118, 210, 0.06);
      padding: 2.5rem 2.5rem 2rem 2.5rem;
      max-width: 480px;
      width: 100%;
      margin: 2rem auto 0 auto;
      display: flex;
      flex-direction: column;
      align-items: stretch;
      transition: background 0.4s, box-shadow 0.4s;
    }
    body.theme-dark .exercise-card {
      background: #181c23;
      box-shadow: 0 8px 32px rgba(25, 118, 210, 0.18);
    }
    h1 {
      font-size: 2.2rem;
      margin-bottom: 2.2rem;
      color: #1976d2;
      font-weight: 700;
      text-align: center;
      letter-spacing: -1px;
      line-height: 1.2;
      text-shadow: 0 2px 12px #1976d222;
    }
    .exercise-form label {
      font-size: 1.15rem;
      font-weight: 600;
      color: #1976d2;
      margin-bottom: 0.5rem;
      display: block;
      letter-spacing: 0.2px;
      transition: color 0.3s;
    }
    body.theme-dark .exercise-form label {
      color: #90caf9;
    }
    .exercise-form select {
      width: 100%;
      background: #f2f6fc;
      color: #1976d2;
      border: 2px solid #1976d2;
      padding: 0.9rem 1.2rem;
      border-radius: 10px;
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 1.3rem;
      margin-top: 0.2rem;
      transition: background 0.3s, color 0.3s, border 0.3s;
      outline: none;
    }
    .exercise-form select:focus {
      border-color: #1565c0;
      background: #e3f2fd;
    }
    body.theme-dark .exercise-form select {
      background: #23272f;
      color: #90caf9;
      border-color: #1976d2;
    }
    body.theme-dark .exercise-form select:focus {
      background: #181c23;
      border-color: #90caf9;
    }
    .helpbox {
      display: inline-block;
      margin-left: 0.5rem;
      vertical-align: middle;
      position: relative;
    }
    .helpbox-btn {
      background: #1976d2;
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 28px;
      height: 28px;
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.2s;
      margin-left: 0.2rem;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);
    }
    .helpbox-btn:hover, .helpbox-btn:focus {
      background: #1565c0;
      outline: none;
    }
    .helpbox-content {
      display: none;
      position: absolute;
      left: 120%;
      top: 50%;
      transform: translateY(-50%);
      min-width: 260px;
      background: #fff;
      color: #222;
      border: 2px solid #1976d2;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(25, 118, 210, 0.10);
      padding: 1rem 1.2rem;
      z-index: 200;
      font-size: 1rem;
      text-align: left;
      line-height: 1.5;
    }
    body.theme-dark .helpbox-content {
      background: #23272f;
      color: #e0e0e0;
      border-color: #1976d2;
    }
    .helpbox-content strong {
      color: #1976d2;
    }
    .helpbox.open .helpbox-content {
      display: block;
    }
    .exercise-form .form-row {
      margin-bottom: 1.5rem;
      display: flex;
      flex-direction: column;
    }
    .exercise-form .form-actions {
      display: flex;
      gap: 1.2rem;
      margin-top: 1.5rem;
      justify-content: flex-end;
    }
    .exercise-form button, .exercise-form .abandon-button {
      padding: 0.9rem 2.2rem;
      border-radius: 10px;
      font-size: 1.15rem;
      font-weight: 700;
      cursor: pointer;
      border: none;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.08);
      transition: background 0.2s, color 0.2s, box-shadow 0.2s;
      outline: none;
    }
    .exercise-form button[type="submit"] {
      background: linear-gradient(90deg, #1976d2 60%, #1565c0 100%);
      color: #fff;
      border: 2px solid #1976d2;
    }
    .exercise-form button[type="submit"]:hover {
      background: #1565c0;
      color: #fff;
      box-shadow: 0 4px 16px rgba(25, 118, 210, 0.18);
    }
    .exercise-form .abandon-button {
      background: #fff;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
    }
    .exercise-form .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
      border-color: #ff4d4d;
    }
    body.theme-dark .exercise-form .abandon-button {
      background: #23272f;
      color: #ff4d4d;
      border-color: #ff4d4d;
    }
    body.theme-dark .exercise-form .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }
    .error-message {
      color: #ff4d4d;
      background: rgba(255,77,77,0.08);
      border: 1px solid #ff4d4d;
      border-radius: 8px;
      padding: 1rem;
      margin: 1.5rem 0;
      text-align: center;
      font-size: 1.1rem;
    }
    @media (max-width: 600px) {
      .exercise-card {
        padding: 1.2rem 0.7rem 1.2rem 0.7rem;
        max-width: 98vw;
      }
      h1 {
        font-size: 1.3rem;
        padding: 0 0.2rem;
      }
      .exercise-form button, .exercise-form .abandon-button {
        font-size: 1rem;
        padding: 0.7rem 1.2rem;
      }
      .helpbox-content {
        left: 0;
        top: 120%;
        transform: none;
        min-width: 180px;
        font-size: 0.97rem;
      }
    }
  </style>
</head>
<body>
  @include('components/header')
  <div class="main-wrapper">
    <div class="exercise-card">
      <h1>Commencer l'exercice pour le deck « {{ deck.title }} »</h1>
      @if(deck && deck.id)
        <form class="exercise-form" action="{{ route('exercise.presentQuestion', { deckId: deck.id, questionIndex: 0 }) }}" method="GET" onsubmit="handleSubmit(this)">
          <input type="hidden" name="startTime" id="startTime" />
          <input type="hidden" name="results" value="[]" />
          <div class="form-row">
            <label for="mode-select">
              Choisissez un mode :
              <span class="helpbox">
                <button type="button" class="helpbox-btn" onclick="toggleHelpbox('mode-helpbox')" aria-label="Aide sur les modes">?</button>
                <span class="helpbox-content" id="mode-helpbox">
                  <strong>Mode chronométré :</strong> Répondez à toutes les questions le plus vite possible sans faire d'erreurs.<br><br>
                  <strong>Mode basique :</strong> Répondez à chaque carte une seule fois, sans contrainte de temps.<br><br>
                  <strong>Mode jusqu'au bout :</strong> Vous devez répondre correctement à toutes les cartes. Les cartes ratées reviennent jusqu'à ce que vous réussissiez tout.<br><br>
                  <strong>Mode Quiz :</strong> Choisir la bonne réponse parmi 4 propositions.
                </span>
              </span>
            </label>
            <select id="mode-select" name="mode" required>
              <option value="chronometre">Mode chronométré</option>
              <option value="basique">Mode basique</option>
              <option value="jusquaubout">Mode jusqu'au bout</option>
              <option value="quiz">Mode Quiz</option>
            </select>
          </div>
          <div class="form-row">
            <label for="direction-select">Sens de l'exercice :</label>
            <select id="direction-select" name="direction" required>
              <option value="question">Question → Réponse</option>
              <option value="answer">Réponse → Question</option>
            </select>
          </div>
          @if(typeof retryCardIds !== 'undefined' && retryCardIds)
            @each(id in retryCardIds)
              <input type="hidden" name="retryCardIds" value="{{ id }}" />
            @endeach
          @endif
          <input type="hidden" name="attempts" value="{{ attempts || 1 }}" />
          <div class="form-actions">
            <button type="submit">C'est parti</button>
            <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: deck.id }) }}'">Abandonner</button>
          </div>
        </form>
      @else
        <div class="error-message">Erreur : deck introuvable ou invalide.</div>
      @endif
    </div>
  </div>
  <script>
    function handleSubmit(form) {
      const mode = form.mode.value;
      if(mode === 'chronometre'){
        document.getElementById('startTime').value = Date.now();
      }
      return true;
    }
    function toggleHelpbox(id) {
      document.querySelectorAll('.helpbox-content').forEach(function(box) {
        if (box.id !== id) box.parentElement.classList.remove('open');
      });
      var el = document.getElementById(id);
      if (el) {
        el.parentElement.classList.toggle('open');
      }
    }
    document.addEventListener('click', function(event) {
      document.querySelectorAll('.helpbox').forEach(function(box) {
        if (!box.contains(event.target)) box.classList.remove('open');
      });
    });
  </script>
</body>
</html>
