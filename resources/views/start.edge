<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Commencer l'exercice</title>
  <style>
    /* Styles globaux pour une mise en page cohérente */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Style du corps de la page */
    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    /* Style pour le titre principal */
    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    /* Style pour les boutons */
    button {
      background: #00adb5;
      color: #000;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    /* Effet au survol des boutons */
    button:hover {
      background: #008c95;
      color: white;
    }
  </style>
</head>
<body>
  <!-- Titre dynamique basé sur le deck -->
  <h1>Commencer l'exercice pour le deck "{{ deck.title }}"</h1>

  @if(deck && deck.id)
    <!-- Formulaire pour démarrer l'exercice -->
    <form action="{{ route('exercise.presentQuestion', { deckId: deck.id, questionIndex: 0 }) }}" method="GET" onsubmit="handleSubmit(this)">
      <!-- Champ caché pour enregistrer l'heure de début -->
      <input type="hidden" name="startTime" id="startTime" />
      <!-- Champ caché pour initialiser les résultats -->
      <input type="hidden" name="results" value="[]" />

      <!-- Sélecteur pour choisir le mode d'exercice -->
      <label for="mode-select" style="margin-bottom: 1rem; font-size:1.2rem;">Choisissez un mode :</label>
      <select id="mode-select" name="mode" style="background: #00adb5; color: #000; border: 2px solid #00adb5; padding: 0.8rem 1.5rem; border-radius: 8px; cursor: pointer; font-size: 1.2rem; font-weight: 600; transition: background 0.3s ease, color 0.3s ease; margin-bottom: 1.5rem;">
        <option value="chronometre">Mode chronométré</option> <!-- Option pour le mode chronométré -->
        <option value="basique">Mode basique</option> <!-- Option pour le mode basique -->
        <option value="jusquaubout">Mode jusqu'au bout</option> <!-- Option pour le mode jusqu'au bout -->
      </select>

      @if(typeof retryCardIds !== 'undefined' && retryCardIds)
        @each(id in retryCardIds)
          <input type="hidden" name="retryCardIds" value="{{ id }}" />
        @endeach
      @endif
      <input type="hidden" name="attempts" value="{{ attempts || 1 }}" />
      <!-- Bouton pour soumettre le formulaire -->
      <button type="submit">C'est parti</button>
    </form>
  @else
    <p style="color:#ff4d4d;">Erreur : deck introuvable ou invalide.</p>
  @endif

  <script>
    // Fonction pour gérer la soumission du formulaire
    function handleSubmit(form) {
      const mode = form.mode.value; // Récupère le mode sélectionné
      if(mode === 'chronometre'){
        document.getElementById('startTime').value = Date.now(); // Enregistre l'heure actuelle si mode chronométré
      }
      return true; // Permet la soumission du formulaire
    }
  </script>
</body>
</html>
