<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier un deck</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <script>
    // Apply theme as early as possible to avoid flash
    (function() {
      let theme = localStorage.getItem('theme');
      if (!theme) {
        theme = 'theme-light';
      }
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      });
      if (document.body) {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      }
    })();
  </script>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
      line-height: 1.6;
       
    }

    body.theme-light {
      background: #fff;
      color: #222;
       
    }

    body.theme-dark {
      background: #0a0c10;
      color: #e6e9ef;
       
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(255,255,255,0.95);
      border-bottom: 2px solid #1976d2;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
      backdrop-filter: blur(8px);
      box-shadow: 0 2px 15px rgba(25, 118, 210, 0.10);
      transition: all 0.3s ease;
    }

    body.theme-dark .navbar {
      background: rgba(10,12,16,0.95);
      border-bottom-color: #1976d2;
    }

    .navbar h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }

    .navbar button {
      background: #1976d2;
      color: white;
      border: 2px solid #1976d2;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    /* Dropdown styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-toggle {
      background: #1976d2;
      color: white;
      border: 2px solid #1976d2;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dropdown-toggle:hover, .dropdown-toggle:focus {
      background: #008c95;
      color: #fff;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      // box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #1976d2;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
    }
    .dropdown.open .dropdown-menu {
      display: block;
    }
    .dropdown-menu a, .dropdown-menu button {
      display: block;
      width: 100%;
      background: none;
      border: none;
      color: #1976d2;
      text-align: left;
      padding: 0.7rem 1.2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
      text-decoration: none;
    }
    .dropdown-menu a:hover, .dropdown-menu button:hover {
      background: #1976d2;
      color: #000;
    }
    .dropdown-menu .logout-btn {
      color: #ff4d4d;
    }
    .dropdown-menu .logout-btn:hover {
      background: #ff4d4d;
      color: #000;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #1976d2;
      font-weight: 700;
    }

    .form-container {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: rgba(255,255,255,0.92);
      padding: 2rem;
      border-radius: 12px;
      border: 1px solid rgba(25, 118, 210, 0.10);
      box-shadow: 0 4px 20px rgba(25, 118, 210, 0.08);
      backdrop-filter: blur(4px);
    }

    body.theme-dark .form-container {
      background: rgba(35, 39, 47, 0.92);
      border-color: rgba(25, 118, 210, 0.15);
    }

    label {
      font-size: 1.2rem;
      display: block;
      margin-top: 15px;
      color: #1976d2;
      text-align: left;
    }

    .description-container {
      position: relative;
      width: 100%;
      margin-top: 5px;
    }

    input, textarea, select {
      width: 100%;
      padding: 10px;
      border-radius: 8px;
      border: 2px solid rgba(25, 118, 210, 0.25);
      font-size: 1rem;
      background: rgba(255,255,255,0.9);
      color: #222;
      transition: all 0.3s ease;
    }

    body.theme-dark input,
    body.theme-dark textarea,
    body.theme-dark select {
      background: rgba(17, 19, 23, 0.9);
      color: #e6e9ef;
      border-color: rgba(25, 118, 210, 0.3);
    }

    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: #1976d2;
      box-shadow: 0 0 0 2px rgba(25, 118, 210, 0.2);
    }

    .submit-button {
      background: #1976d2;
      color: white;
      border: none;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.15);
    }

    .submit-button:hover {
      background: #1565c0;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(25, 118, 210, 0.2);
    }

    .abandon-button {
      background: transparent;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: white;
      transform: translateY(-2px);
    }

    .counter {
      position: absolute;
      bottom: 8px;
      right: 10px;
      font-size: 0.8rem;
      color: #1976d2;
      padding: 0 5px;
    }

    body.theme-dark .counter {
      color: #1976d2;
      background: transparent;
    }
  </style>
</head>
<body>
  @include('components/header')

  <div class="main-content">
    <h1>Modifier le deck</h1>
    <div class="form-container">
      <form action="{{ route('decks.update', { id: deck.id }) }}" method="POST">
        {{ csrfField() }}
        <label for="title">Titre du deck :</label>
        <input type="text" id="title" name="title" value="{{ deck.title }}" required />

        <label for="description">Description :</label>
        <div class="description-container">
          <textarea id="description" name="description" maxlength="125" required>{{ deck.description }}</textarea>
          <div class="counter">
            <span id="charCount">0</span><span>/125</span>
          </div>
        </div>

        <label for="visibility">Visibilité :</label>
        <select id="visibility" name="visibility" required>
          <option value="private" {{ deck.visibility === 'private' ? 'selected' : '' }}>Privé</option>
          <option value="public" {{ deck.visibility === 'public' ? 'selected' : '' }}>Public</option>
          <option value="restricted" {{ deck.visibility === 'restricted' ? 'selected' : '' }}>Restreint</option>
        </select>

        <button type="submit" class="submit-button">Enregistrer</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('home') }}'">Abandonner</button>
      </form>
    </div>
  </div>

  <script>
    const textarea = document.getElementById('description');
    const charCount = document.getElementById('charCount');

    function updateCounter() {
      const currentLength = textarea.value.length;
      charCount.textContent = currentLength;
      
      // Change la couleur quand on approche de la limite
      if (currentLength >= 100) {
        charCount.style.color = '#ff4d4d'; // Rouge
      } else if (currentLength >= 80) {
        charCount.style.color = '#ffa500'; // Orange
      } else {
        charCount.style.color = '#1976d2'; // Couleur par défaut
      }
    }

    // Initialisation au chargement
    document.addEventListener('DOMContentLoaded', updateCounter);
    // Mise à jour à chaque changement
    textarea.addEventListener('input', updateCounter);
  </script>
</body>
</html>
