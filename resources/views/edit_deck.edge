<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier un deck</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">

  <style>
    /* Copier ici tout le CSS de home.edge */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    /* Barre de navigation */
    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #6c8947;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }

    .navbar button {
      background: #6c8947;
      color: white;
      border: 2px solid #6c8947;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    .navbar a {
      text-decoration: none;
      color: #6c8947;
      font-size: 1.5rem;
      font-weight: bold;
    }

    /* Taille de l'image dans la navbar */
    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }

    /* Dropdown styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-toggle {
      background: #6c8947;
      color: white;
      border: 2px solid #6c8947;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dropdown-toggle:hover, .dropdown-toggle:focus {
      background: #008c95;
      color: #fff;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      // box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #6c8947;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
    }
    .dropdown.open .dropdown-menu {
      display: block;
    }
    .dropdown-menu a, .dropdown-menu button {
      display: block;
      width: 100%;
      background: none;
      border: none;
      color: #6c8947;
      text-align: left;
      padding: 0.7rem 1.2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
      text-decoration: none;
    }
    .dropdown-menu a:hover, .dropdown-menu button:hover {
      background: #6c8947;
      color: #000;
    }
    .dropdown-menu .logout-btn {
      color: #ff4d4d;
    }
    .dropdown-menu .logout-btn:hover {
      background: #ff4d4d;
      color: #000;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #6c8947;
      font-weight: 700;
    }

    .form-container {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: #000;
      padding: 2rem;
      border-radius: 12px;
      border: 2px solid #6c8947;
      // box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }

    label {
      font-size: 1.2rem;
      display: block;
      margin-top: 15px;
      color: #6c8947;
      text-align: left;
    }

    .description-container {
      position: relative;
      width: 100%;
      margin-top: 5px;
    }

    input, textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 2px solid #6c8947;
      font-size: 1rem;
      background: #000;
      color: #e0e0e0;
      margin-top: 5px;
    }

    textarea {
      padding-bottom: 30px; /* Ajout d'espace pour le compteur */
    }

    .counter {
      position: absolute;
      bottom: 8px;
      right: 10px;
      font-size: 0.8rem;
      color: #6c8947;
      background: #000;
      padding: 0 5px;
    }

    select {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 2px solid #6c8947;
      font-size: 1rem;
      background: #000;
      color: #e0e0e0;
      margin-top: 5px;
      appearance: none; /* Remove default dropdown arrow */
    }

    select:focus {
      outline: none;
      border-color: #6c8947;
    }

    .submit-button {
      background: #000;
      color: #6c8947;
      border: 2px solid #6c8947;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .submit-button:hover {
      background: #6c8947;
      color: black;
    }

    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

        /* Taille de l'image dans la navbar */
    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }
    .navbar a {
      text-decoration: none;
      color: #6c8947;
      font-size: 1.5rem;
      font-weight: bold;
    }
  </style>
</head>
<body>
  @include('components/header')

  <div class="main-content">
    <h1>Modifier le deck</h1>
    <div class="form-container">
      <form action="{{ route('decks.update', { id: deck.id }) }}" method="POST">
        {{ csrfField() }}
        <label for="title">Titre du deck :</label>
        <input type="text" id="title" name="title" value="{{ deck.title }}" required />

        <label for="description">Description :</label>
        <div class="description-container">
          <textarea id="description" name="description" maxlength="125" required>{{ deck.description }}</textarea>
          <div class="counter">
            <span id="charCount">0</span>/125
          </div>
        </div>

        <label for="visibility">Visibilité :</label>
        <select id="visibility" name="visibility" required>
          <option value="private" {{ deck.visibility === 'private' ? 'selected' : '' }}>Privé</option>
          <option value="public" {{ deck.visibility === 'public' ? 'selected' : '' }}>Public</option>
        </select>

        <button type="submit" class="submit-button">Enregistrer</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('home') }}'">Abandonner</button>
      </form>
    </div>
  </div>

  <script>
    const textarea = document.getElementById('description');
    const charCount = document.getElementById('charCount');

    function updateCounter() {
      const currentLength = textarea.value.length;
      charCount.textContent = currentLength;
      
      // Change la couleur quand on approche de la limite
      if (currentLength >= 100) {
        charCount.style.color = '#ff4d4d'; // Rouge
      } else if (currentLength >= 80) {
        charCount.style.color = '#ffa500'; // Orange
      } else {
        charCount.style.color = '#6c8947'; // Couleur par défaut
      }
    }

    // Initialisation au chargement
    document.addEventListener('DOMContentLoaded', updateCounter);
    // Mise à jour à chaque changement
    textarea.addEventListener('input', updateCounter);
  </script>
</body>
</html>
