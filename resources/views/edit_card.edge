<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier une carte</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    .spacer {
      height: 80px;
    }

    .edit-title {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #6c8947;
      font-weight: 700;
      text-align: center;
    }

    .edit-form {
      width: 100%;
      max-width: 500px;
      background: #000;
      padding: 2rem;
      border: 2px solid #6c8947;
      border-radius: 12px;
      // box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
      margin-bottom: 2rem;
    }

    .form-label {
      display: block;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }

    .form-input, .form-textarea {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 1.5rem;
      border: 2px solid #6c8947;
      border-radius: 8px;
      background: #000;
      color: #e0e0e0;
      font-size: 1rem;
      transition: background 0.3s, border-color 0.3s;
    }

    .form-input:focus, .form-textarea:focus {
      outline: none;
      background: rgba(0, 173, 181, 0.1);
      border-color: #6c8947;
    }

    .button-container {
      display: flex;
      justify-content: space-between;
      gap: 1rem;
    }

    .save-button {
      background: #6c8947;
      color: #000;
      border: 2px solid #6c8947;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .save-button:hover {
      background: #008c95;
      color: #fff;
    }

    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .message {
      padding: 1rem;
      margin-bottom: 1.5rem;
      border-radius: 8px;
      font-size: 1.1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .message.success {
      background: rgba(0, 255, 0, 0.1);
      color: #007700;
      border: 2px solid #00ff00;
    }

    .message.error {
      background: rgba(255, 0, 0, 0.1);
      color: #770000;
      border: 2px solid #ff0000;
    }

    .form-container {
      width: 100%;
      max-width: 600px;
      background: #000;
      padding: 2rem;
      border: 2px solid #6c8947;
      border-radius: 12px;
      // box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
      margin: 0 auto 2rem auto;
    }
  </style>
</head>
<body>
  @include('components/header')
  
  <div class="spacer"></div>
  @if(!user)
    <div class="form-container">
      <div class="message error">
        Vous devez être authentifié pour accéder à cette page.
      </div>
      <button class="save-button" onclick="window.location.href='{{ route('login') }}'">Se connecter</button>
    </div>
  @else
    <h1 class="edit-title">Modifier la carte</h1>
    <form class="edit-form" action="{{ route('cards.update', { deckId: card.deck_id, cardId: card.id }) }}" method="POST">
      {{ csrfField() }}
      <label class="form-label" for="question">Question :</label>
      <input class="form-input" type="text" id="question" name="question" value="{{ card.question }}" required />
      <label class="form-label" for="answer">Réponse :</label>
      <textarea class="form-textarea" id="answer" name="answer" required>{{ card.answer }}</textarea>
      <div class="button-container">
        <button type="submit" class="save-button">Enregistrer</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: card.deck_id }) }}'">Abandonner</button>
      </div>
    </form>
  @endif
</body>
</html>
