<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier une carte</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    form {
      width: 100%;
      max-width: 500px;
      background: #000;
      padding: 2rem;
      border: 2px solid #00adb5;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }

    label {
      display: block;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }

    input, textarea {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 1.5rem;
      border: 2px solid #00adb5;
      border-radius: 8px;
      background: #000;
      color: #e0e0e0;
      font-size: 1rem;
    }

    input:focus, textarea:focus {
      outline: none;
      border-color: #00adb5;
    }

    .button-container {
      display: flex;
      justify-content: space-between;
    }

    button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    button:hover {
      background: #00adb5;
      color: black;
    }

    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar a {
      color: #00adb5;
      text-decoration: none;
      font-size: 1.2rem;
      font-weight: 600;
      display: flex;
      align-items: center;
    }

    .navbar img {
      margin-right: 0.5rem;
    }

    .spacer {
      height: 80px;
    }

    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-toggle {
      background: none;
      border: none;
      color: #00adb5;
      font-size: 1.2rem;
      cursor: pointer;
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #000;
      border: 2px solid #00adb5;
      border-radius: 8px;
      margin-top: 0.5rem;
      z-index: 10;
    }

    .dropdown-menu a {
      color: #00adb5;
      padding: 0.8rem 1.5rem;
      text-decoration: none;
      display: block;
      font-size: 1rem;
    }

    .dropdown-menu a:hover {
      background: #00adb5;
      color: black;
    }

    .open .dropdown-menu {
      display: block;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="{{ route('home') }}"><img src="/images/icone.ico">DeckStorm</a>
    <div>
      <span>Bienvenue {{ user?.username }}</span>
      <div class="dropdown" id="userDropdown">
        <button class="dropdown-toggle" onclick="toggleDropdown()" aria-haspopup="true" aria-expanded="false">
          <span>▼</span>
        </button>
        <div class="dropdown-menu" id="dropdownMenu">
          <a href="/account/{{ user?.id }}">Mon compte</a>
          <form action="/logout" method="POST" style="margin:0;">
            {{ csrfField() }}
            <button type="submit" class="logout-btn">Se déconnecter</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    function toggleDropdown() {
      document.getElementById('userDropdown').classList.toggle('open');
    }
    document.addEventListener('click', function(event) {
      const dropdown = document.getElementById('userDropdown');
      if (!dropdown.contains(event.target)) {
        dropdown.classList.remove('open');
      }
    });
  </script>
  <div class="spacer"></div>
  <h1>Modifier la carte</h1>
  <!-- Formulaire pour modifier une carte -->
  <form action="{{ route('cards.update', { deckId: card.deck_id, cardId: card.id }) }}" method="POST">
    {{ csrfField() }} <!-- Protection CSRF -->
    <label for="question">Question :</label>
    <input type="text" id="question" name="question" value="{{ card.question }}" required /> <!-- Champ pour la question -->
    <label for="answer">Réponse :</label>
    <textarea id="answer" name="answer" required>{{ card.answer }}</textarea> <!-- Champ pour la réponse -->
    <div class="button-container">
      <button type="submit">Enregistrer</button> <!-- Bouton pour enregistrer -->
      <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: card.deck_id }) }}'">Abandonner</button> <!-- Bouton pour abandonner -->
    </div>
  </form>
</body>
</html>
