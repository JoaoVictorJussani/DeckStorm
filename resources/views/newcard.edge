  <style>
    /* --- Styles globaux et navbar (issus de home.edge) --- */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }
    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }
    .navbar h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }
    .navbar button {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }
    .navbar button:hover {
      background: #008c95;
    }
    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }
    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }
    /* Dropdown styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-toggle {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dropdown-toggle:hover, .dropdown-toggle:focus {
      background: #008c95;
      color: #fff;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #00adb5;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
    }
    .dropdown.open .dropdown-menu {
      display: block;
    }
    .dropdown-menu a, .dropdown-menu button {
      display: block;
      width: 100%;
      background: none;
      border: none;
      color: #00adb5;
      text-align: left;
      padding: 0.7rem 1.2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
      text-decoration: none;
    }
    .dropdown-menu a:hover, .dropdown-menu button:hover {
      background: #00adb5;
      color: #000;
    }
    .dropdown-menu .logout-btn {
      color: #ff4d4d;
    }
    .dropdown-menu .logout-btn:hover {
      background: #ff4d4d;
      color: #000;
    }
    /* --- Titres harmonisés --- */
    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }
    /* --- Formulaire et messages --- */
    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }
    .form-container {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: #000;
      padding: 2rem;
      border-radius: 12px;
      border: 2px solid #00adb5;
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }
    label {
      font-size: 1.2rem;
      display: block;
      margin-top: 15px;
      color: #00adb5;
      text-align: left;
    }
    input, textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 2px solid #00adb5;
      font-size: 1rem;
      background: #000;
      color: #e0e0e0;
      margin-top: 5px;
    }
    .submit-button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .submit-button:hover { background: #00adb5; color: black; }
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .abandon-button:hover { background: #ff4d4d; color: black; }
    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d;
      color: #fff;
    }
    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50;
      color: #fff;
    }
  </style>
</head>
<body>
  <!-- Barre de navigation -->
  <div class="navbar">
    <a href="{{ route('home') }}"><img src="/images/icone.ico">DeckStorm</a>
    <div>
      <span>Bienvenue {{ user?.username }}</span>
      <div class="dropdown" id="userDropdown">
        <button class="dropdown-toggle" onclick="toggleDropdown()" aria-haspopup="true" aria-expanded="false">
          <span>▼</span>
        </button>
        <div class="dropdown-menu" id="dropdownMenu">
          <a href="/account/{{ user?.id }}">Mon compte</a>
          <form action="/logout" method="POST" style="margin:0;">
            {{ csrfField() }}
            <button type="submit" class="logout-btn">Se déconnecter</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    function toggleDropdown() {
      document.getElementById('userDropdown').classList.toggle('open');
    }
    document.addEventListener('click', function(event) {
      const dropdown = document.getElementById('userDropdown');
      if (!dropdown.contains(event.target)) {
        dropdown.classList.remove('open');
      }
    });
  </script>
  @include('components/header')
  <div class="main-content">
    <h1>Ajouter une nouvelle carte</h1>
    <form action="{{ route('cards.store', { deckId: deck.id }) }}" method="POST">
      {{ csrfField() }}
      @if (flashMessages.has('error'))
        <div class="message error">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      @if (flashMessages.has('success'))
        <div class="message success">
          {{ flashMessages.get('success') }}
        </div>
      @endif
      <div class="form-container">
        <label for="question">Question :</label>
        <input type="text" id="question" name="question" value="{{ flashMessages.get('old.question', '') }}" />
        <label for="answer">Réponse :</label>
        <textarea id="answer" name="answer">{{ flashMessages.get('old.answer', '') }}</textarea>
        <div class="button-container">
          <button type="submit" class="submit-button">OK</button>
          <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: deck.id }) }}'">Abandonner</button>
        </div>
      </div>
    </form>
  </div>
</body>
</html>
