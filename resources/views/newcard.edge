  <!-- Contenu principal -->
  <div class="main-content">
    <h1>Ajouter une nouvelle carte</h1>
    <form action="{{ route('cards.store', { deckId: deck.id }) }}" method="POST">
      {{ csrfField() }}
      @if (flashMessages.has('error'))
        <div class="message error">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      @if (flashMessages.has('success'))
        <div class="message success">
          {{ flashMessages.get('success') }}
        </div>
      @endif
      <div class="form-container">
        <label for="question">Question :</label>
        <input type="text" id="question" name="question" value="{{ flashMessages.get('old.question', '') }}" />
        <label for="answer">Réponse :</label>
        <textarea id="answer" name="answer">{{ flashMessages.get('old.answer', '') }}</textarea>
        <div class="button-container">
          <button type="submit" class="submit-button">OK</button>
          <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: deck.id }) }}'">Abandonner</button>
        </div>
      </div>
    </form>
  </div>
