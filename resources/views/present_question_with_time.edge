<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Question</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <script>
    // Applique le même thème que la page précédente (start.edge)
    (function() {
      let theme = localStorage.getItem('theme');
      if (!theme) theme = 'theme-light';
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      });
      if (document.body) {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      }
    })();
  </script>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
       
    }
    body.theme-light {
      background: #fff;
      color: #222;
       
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
       
    }
    h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: #1976d2;
      font-weight: 700;
      text-align: center;
    }
    p {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }
    .card-container {
      perspective: 1000px;
      margin: 10px 0;
      display: inline-block;
      position: relative;
    }
    .card {
      width: 300px;
      height: 150px;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }
    .card.is-flipped {
      transform: rotateY(180deg);
    }
    .card-face {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #1976d2;
      border-radius: 10px;
      background: #fff;
      color: #222;
      font-size: 1.2rem;
      text-align: center;
    }
    body.theme-dark .card-face {
      background: #23272f;
      color: #e0e0e0;
      border-color: #1976d2;
    }
    .card-face.front {
      background: #1976d2;
      color: #fff;
    }
    .card-face.back {
      transform: rotateY(180deg);
      position: relative;
    }
    .card-buttons {
      position: absolute;
      bottom: 10px;
      right: 10px;
      display: flex;
      gap: 10px;
    }
    .card-buttons button {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .check-button {
      background: #4caf50;
      color: white;
    }
    .check-button:hover {
      background: #3e8e41;
    }
    .cross-button {
      background: #ff4d4d;
      color: white;
    }
    .cross-button:hover {
      background: #d43c3c;
    }
    button {
      background: #1976d2;
      color: #fff;
      border: 2px solid #1976d2;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
      margin-top: 20px;
    }
    button:hover {
      background: #1565c0;
      color: #fff;
    }
    /* Quiz Mode Styles */
    .quiz-container {
      max-width: 600px;
      width: 100%;
      margin: 2rem auto;
      text-align: center;
    }
    .quiz-question {
      font-size: 1.8rem;
      margin-bottom: 2rem;
      color: #333;
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }
    body.theme-dark .quiz-question {
      background: #181c23;
      color: #e0e0e0;
    }
    .quiz-options {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }
    .quiz-option-btn {
      background: #fff;
      color: #1976d2;
      border: 2px solid #1976d2;
      padding: 1.5rem;
      border-radius: 12px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 80px;
      box-shadow: 0 4px 6px rgba(25, 118, 210, 0.1);
    }
    body.theme-dark .quiz-option-btn {
      background: #181c23;
      color: #90caf9;
      border-color: #1565c0;
    }
    .quiz-option-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(25, 118, 210, 0.2);
      background: #e3f2fd;
    }
    body.theme-dark .quiz-option-btn:hover {
      background: #1e222b;
    }
    .quiz-option-btn.correct {
      background: #4caf50 !important;
      color: white !important;
      border-color: #4caf50 !important;
    }
    .quiz-option-btn.wrong {
      background: #ff4d4d !important;
      color: white !important;
      border-color: #ff4d4d !important;
    }
    @media (max-width: 600px) {
      .quiz-options {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="spacer"></div>
  <h1>Question {{ questionIndex + 1 }} sur {{ (typeof cards !== 'undefined' && cards ? cards.length : deck.cards.length) }}</h1>

    @if(mode === 'chronometre')
      <p>Temps écoulé : <span id="elapsed-time"></span></p>
    @endif

    @if(mode === 'quiz')
      <div class="quiz-container">
        <div class="quiz-question">
          @if(direction === 'question')
            {{ card.question }}
          @else
            {{ card.answer }}
          @endif
        </div>
        <div class="quiz-options">
          @if(quizOptions)
            @each(option in quizOptions)
              <button class="quiz-option-btn" onclick="checkQuizAnswer(this, {{ option.isCorrect }})">
                {{ option.text }}
              </button>
            @endeach
          @endif
        </div>
      </div>
    @else
      <div class="card-container">
        <div class="card" onclick="flipCard(this)">
          <div class="card-face front">
            @if(direction === 'question')
              {{ card.question }}
            @else
              {{ card.answer }}
            @endif
          </div>
          <div class="card-face back">
            @if(direction === 'question')
              {{ card.answer }}
            @else
              {{ card.question }}
            @endif
            <div class="card-buttons">
              <button class="check-button" onclick="markCard(event, true)">✔</button>
              <button class="cross-button" onclick="markCard(event, false)">✘</button>
            </div>
          </div>
        </div>
      </div>
    @endif

  <form 
    action="{{ questionIndex + 1 < (typeof cards !== 'undefined' && cards ? cards.length : deck.cards.length) 
      ? route('exercise.presentQuestion', { deckId: deck.id, questionIndex: questionIndex + 1 }) 
      : route('exercise.finish', { deckId: deck.id }) }}" 
    method="{{ questionIndex + 1 < (typeof cards !== 'undefined' && cards ? cards.length : deck.cards.length) ? 'GET' : 'POST' }}" id="next-form" style="display: none;">
    {{ csrfField() }}
    <input type="hidden" name="startTime" value="{{ startTime }}" />
    <input type="hidden" name="elapsedTime" value="0" />
    <input type="hidden" name="results" id="results" value="{{ results }}" />
    <input type="hidden" name="mode" value="{{ mode }}" />
    <input type="hidden" name="direction" value="{{ direction }}" />
    @if (retryCardIds)
      @each(id in retryCardIds)
        <input type="hidden" name="retryCardIds" value="{{ id }}" />
      @endeach
    @endif
    <input type="hidden" name="attempts" value="{{ attempts || 1 }}" />
    <button type="submit">{{ questionIndex + 1 < deck.cards.length ? 'Suivant' : 'Terminer' }}</button>
  </form>

  <script>
    const startTime = parseInt('{{ startTime }}', 10);
    const mode = '{{ mode }}';
    const results = JSON.parse('{{ results || "[]" }}');
    const cardId = parseInt('{{ card.id }}', 10);

    function flipCard(cardElement) {
      cardElement.classList.toggle('is-flipped');
    }

    function markCard(event, isCorrect) {
      event.stopPropagation();
      const cardButtons = event.currentTarget.parentElement;
      cardButtons.querySelectorAll('button').forEach(btn => btn.disabled = true);
      if (isCorrect) {
        results.push(cardId);
      }
      document.getElementById('results').value = JSON.stringify(results);
      document.getElementById('next-form').style.display = 'block';
    }

    function checkQuizAnswer(btn, isCorrect) {
      if (btn.classList.contains('disabled')) return;
      
      const allBtns = document.querySelectorAll('.quiz-option-btn');
      allBtns.forEach(b => {
        b.classList.add('disabled');
        b.onclick = null; // Disable click
      });

      if (isCorrect) {
        btn.classList.add('correct');
        results.push(cardId);
      } else {
        btn.classList.add('wrong');
        // Highlight the correct answer
        allBtns.forEach(b => {
           // Check if the original onclick string had "true" as second argument
           // Note: This relies on the rendered HTML onclick attribute
           const onclickStr = b.getAttribute('onclick');
           if (onclickStr && onclickStr.includes(', true)')) {
             b.classList.add('correct');
           }
        });
      }

      document.getElementById('results').value = JSON.stringify(results);
      
      // Show next button
      document.getElementById('next-form').style.display = 'block';
      // Auto submit after 1.5s? Maybe better to let user click Next to review.
      // User can click 'Suivant' manually.
    }

    if (mode === 'chronometre') {
      setInterval(() => {
        const elapsed = Math.floor((Date.now() - startTime) / 1000);
        document.getElementById('elapsed-time').textContent = `${Math.floor(elapsed / 60)}m ${elapsed % 60}s`;
        document.querySelector('input[name="elapsedTime"]').value = elapsed;
      }, 1000);
    }
  </script>
</body>
</html>
