<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscription - FlashCards</title>
    <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
    <script>
      (function() {
        let theme = localStorage.getItem('theme') || 'theme-light';
        document.documentElement.className = theme;
      })();
    </script>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }
      body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        color: #333;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        font-size: 1rem;
        transition: background 0.5s;
      }
      body.theme-dark {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: #e2e8f0;
      }

      .main-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding-top: 70px;
        padding-bottom: 2rem;
      }

      .register-card {
        width: 95%;
        max-width: 480px;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(12px);
        padding: 3rem 2.5rem;
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.5);
        text-align: center;
        animation: fadeIn 0.5s ease-out;
      }
      body.theme-dark .register-card {
        background: rgba(30, 41, 59, 0.7);
        border-color: rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      h2 {
        font-size: 2.2rem;
        margin-bottom: 2rem;
        background: linear-gradient(135deg, #1976d2, #42a5f5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
      }

      .form-group {
        margin-bottom: 1.5rem;
        text-align: left;
      }

      label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #64748b;
        margin-left: 4px;
      }
      body.theme-dark label {
        color: #94a3b8;
      }

      input {
        width: 100%;
        padding: 1rem 1.2rem;
        border-radius: 12px;
        border: 2px solid transparent;
        font-size: 1rem;
        background: #f1f5f9;
        color: #333;
        transition: all 0.3s ease;
        outline: none;
      }
      body.theme-dark input {
        background: #0f172a;
        color: #fff;
      }

      input:focus {
        background: #fff;
        border-color: #1976d2;
        box-shadow: 0 0 0 4px rgba(25, 118, 210, 0.1);
      }
      body.theme-dark input:focus {
        background: #1e293b;
      }

      .validation-msg {
        font-size: 0.85rem;
        margin-top: 0.5rem;
        margin-left: 4px;
        transition: color 0.3s;
        display: flex;
        align-items: center;
        gap: 6px;
      }
      .validation-msg::before {
        content: '•';
        font-size: 1.2em;
      }
      .valid { color: #22c55e; }
      .invalid { color: #ef4444; }

      button {
        width: 100%;
        background: linear-gradient(135deg, #1976d2, #1565c0);
        color: #fff;
        border: none;
        padding: 1rem;
        border-radius: 12px;
        cursor: pointer;
        font-size: 1.1rem;
        font-weight: 700;
        margin-top: 1rem;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(25, 118, 210, 0.3);
      }

      button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(25, 118, 210, 0.4);
        background: linear-gradient(135deg, #1e88e5, #1976d2);
      }

      button:disabled {
        background: #94a3b8;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }
      
      .error-msg {
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        padding: 0.8rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
        border: 1px solid rgba(239, 68, 68, 0.2);
      }

      .footer-text {
        margin-top: 2rem;
        color: #64748b;
        font-size: 0.95rem;
      }
      body.theme-dark .footer-text {
        color: #94a3b8;
      }

      a {
        color: #1976d2;
        text-decoration: none;
        font-weight: 700;
        transition: color 0.2s;
      }
      a:hover {
        color: #42a5f5;
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    @include('components/header_login')
    
    <div class="main-content">
      <div class="register-card">
        <h2>Créer un compte</h2>
        
        @if(flashMessages.has('error'))
          <div class="error-msg">
            {{ flashMessages.get('error') }}
          </div>
        @endif

        <form action="/register" method="POST">
          {{ csrfField() }}
          
          <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="username" required placeholder="Votre pseudo" />
          </div>

          <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password" required placeholder="• • • • • • • •" />
            <p id="password-length-msg" class="validation-msg invalid">
              8 caractères minimum
            </p>
          </div>

          <div class="form-group">
            <label for="confirm_password">Confirmation</label>
            <input type="password" id="confirm_password" name="confirm_password" required placeholder="Répétez le mot de passe" />
            <p id="password-match-msg" class="validation-msg invalid">
              Les mots de passe correspondent
            </p>
          </div>

          <button type="submit" id="submit-button" disabled>S'inscrire</button>
        </form>
        
        <p class="footer-text">
          Déjà un compte ? <a href="/login">Se connecter</a>
        </p>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const usernameInput = document.querySelector("#username");
        const passwordInput = document.querySelector("#password");
        const confirmPasswordInput = document.querySelector("#confirm_password");
        const submitButton = document.querySelector("#submit-button");
        const passwordLengthMsg = document.getElementById("password-length-msg");
        const passwordMatchMsg = document.getElementById("password-match-msg");

        function validateForm() {
          const usernameValid = usernameInput.value.trim().length >= 3;
          const passwordLen = passwordInput.value.length;
          const passwordValid = passwordLen >= 8;
          const passwordsMatch = passwordInput.value === confirmPasswordInput.value && passwordLen > 0;

          // Update UI styles
          if (passwordValid) {
            passwordLengthMsg.classList.remove('invalid');
            passwordLengthMsg.classList.add('valid');
            passwordLengthMsg.innerHTML = "Longueur correcte";
          } else {
            passwordLengthMsg.classList.remove('valid');
            passwordLengthMsg.classList.add('invalid');
            passwordLengthMsg.innerHTML = "8 caractères minimum";
          }

          if (passwordsMatch) {
            passwordMatchMsg.classList.remove('invalid');
            passwordMatchMsg.classList.add('valid');
            passwordMatchMsg.innerHTML = "Les mots de passe correspondent";
          } else {
            passwordMatchMsg.classList.remove('valid');
            passwordMatchMsg.classList.add('invalid');
            passwordMatchMsg.innerHTML = "Les mots de passe ne correspondent pas";
          }

          if (usernameValid && passwordValid && passwordsMatch) {
            submitButton.disabled = false;
            submitButton.style.opacity = "1";
          } else {
            submitButton.disabled = true;
            submitButton.style.opacity = "0.7";
          }
        }

        [ usernameInput, passwordInput, confirmPasswordInput ].forEach(input => {
          input.addEventListener("input", validateForm);
        });
      });
    </script>
  </body>
</html>
