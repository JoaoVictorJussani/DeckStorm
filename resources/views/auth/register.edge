<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscription</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background: #000;
        color: #e0e0e0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-size: 1rem;
      }

      .container {
        width: 95%;
        max-width: 400px;
        background: #000;
        padding: 2rem;
        border-radius: 12px;
        border: 2px solid #00adb5;
        box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
        text-align: center;
      }

      h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #00adb5;
        font-weight: 700;
      }

      .error {
        color: #ff4d4d;
        margin-bottom: 1rem;
      }

      .form-group {
        margin-bottom: 1rem;
      }

      /* Centrage du bouton */
      .form-actions {
        display: flex;
        justify-content: center;
      }

      label {
        display: block;
        margin-bottom: 0.5rem;
        color: #00adb5;
      }

      input {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 2px solid #00adb5;
        font-size: 1rem;
        background: #000;
        color: #e0e0e0;
        margin-top: 10px;
      }

      button {
        background: #000;
        color: #00adb5;
        border: 2px solid #00adb5;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.1rem;
        font-weight: 600;
        transition: background 0.3s ease, color 0.3s ease;
      }

      button:hover {
        background: #00adb5;
        color: black;
      }

      p {
        margin-top: 1rem;
      }

      a {
        color: #00adb5;
        text-decoration: none;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Inscription</h2>

      @if(flashMessages.has('error'))
        <div class="error">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      
      <form action="/register" method="POST">
        {{ csrfField() }}
        <div class="form-group">
          <label for="username">Nom d'utilisateur:</label>
          <input type="text" id="username" name="username" required />
        </div>
        <div class="form-group">
          <label for="password">Mot de passe:</label>
          <input type="password" id="password" name="password" required />
          <p id="password-length-msg" style="color: #ff4d4d; font-size: 0.85em; margin-top: 0.3em; margin-bottom: 0;">
            le mot de passe doit avoir 8 caractères
          </p>
        </div>
        <div class="form-group">
          <label for="confirm_password">Confirmation du mot de passe:</label>
          <input type="password" id="confirm_password" name="confirm_password" required />
          <p id="password-match-msg" style="color: #ff4d4d; font-size: 0.85em; margin-top: 0.3em; margin-bottom: 0;">
            la vérification de mot de passe est correcte
          </p>
        </div>
        <div class="form-actions">
          <button type="submit" id="submit-button" style="display: none;">Inscription</button>
        </div>
      </form>
      <p>Vous avez déjà un compte ? <a href="/login">se connecter</a></p>
    </div>
    <!-- Les messages ont été déplacés sous les inputs correspondants -->
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const usernameInput = document.querySelector("#username");
        const passwordInput = document.querySelector("#password");
        const confirmPasswordInput = document.querySelector("#confirm_password");
        const submitButton = document.querySelector("#submit-button");
        const passwordLengthMsg = document.getElementById("password-length-msg");
        const passwordMatchMsg = document.getElementById("password-match-msg");

        function validateForm() {
          const usernameValid = usernameInput.value.trim().length >= 3;
          const passwordValid = passwordInput.value.length >= 8;
          const passwordsMatch = passwordInput.value === confirmPasswordInput.value && passwordInput.value.length > 0;

          // Mot de passe longueur
          if (passwordValid) {
            passwordLengthMsg.style.color = "#00c853"; // vert
          } else {
            passwordLengthMsg.style.color = "#ff4d4d"; // rouge
          }

          // Vérification mot de passe
          if (passwordsMatch) {
            passwordMatchMsg.style.color = "#00c853"; // vert
          } else {
            passwordMatchMsg.style.color = "#ff4d4d"; // rouge
          }

          if (usernameValid && passwordValid && passwordsMatch) {
            submitButton.style.display = "block";
            submitButton.textContent = "Inscription ready";
          } else {
            submitButton.style.display = "none";
          }
        }
        [ usernameInput, passwordInput, confirmPasswordInput ].forEach(input => {
          input.addEventListener("input", validateForm);
        });
      });
    </script>
  </body>
</html>
