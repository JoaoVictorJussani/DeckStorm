<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Visualisation du deck</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <script>
    // Aplica o tema o mais cedo poss√≠vel para evitar flash
    (function() {
      let theme = localStorage.getItem('theme');
      if (!theme) theme = 'theme-light';
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      });
      if (document.body) {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      }
    })();
  </script>
  <style>
    /* Copier ici tout le CSS de home.edge */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }
    body.theme-light {
      background: #fff;
      color: #222;
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #1976d2;
      font-weight: 700;
    }

    .deck-details {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      border: 2px solid #1976d2;
      box-shadow: 0 8px 30px rgba(25, 118, 210, 0.1);
      backdrop-filter: blur(10px);
    }
    body.theme-dark .deck-details {
      background: #181c23;
      border-color: #1976d2;
      box-shadow: 0 8px 30px rgba(25, 118, 210, 0.1);
    }

    .deck-details p {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .button-container {
      text-align: center;
      margin-top: 2rem;
    }

    .button-container button {
      background: #fff;
      color: #1976d2;
      border: 2px solid #1976d2;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 10px;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .button-container button:hover {
      background: #1976d2;
      color: #fff;
    }
    body.theme-dark .button-container button {
      background: #23272f;
    }
    body.theme-dark .button-container button:hover {
      background: #1976d2;
      color: #fff;
    }

    .abandon-button {
      background: #fff;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }
    body.theme-dark .abandon-button {
      background: #23272f;
      color: #ff4d4d;
      border: 2px solid #ff4d4d; /* mant√©m a borda vermelha no escuro */
    }
    body.theme-dark .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
      border: 2px solid #ff4d4d; /* mant√©m a borda vermelha no hover escuro */
    }

    /* Add styles for the card flip effect */
    .card-container {
      perspective: 1000px;
      margin: 10px 0;
      display: inline-block;
      position: relative;
      z-index: 1; /* Garante que as cartas fiquem abaixo do dropdown */
    }

    .card {
      width: 300px;
      height: 150px;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }

    .card.is-flipped {
      transform: rotateY(180deg);
    }

    .card-face {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #1976d2;
      border-radius: 10px;
      background: #fff;
      color: #222;
      font-size: 1.2rem;
      text-align: center;
    }
    body.theme-dark .card-face {
      background: #23272f;
      color: #e0e0e0;
    }

    .card-face.front {
      background: #1976d2;
      color: #fff;
    }

    .card-face.back {
      transform: rotateY(180deg);
      position: relative;
    }

    .card-buttons {
      position: absolute;
      bottom: 10px;
      right: 10px;
      display: flex;
      gap: 10px;
    }

    .card-buttons button {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .check-button {
      background: #4caf50;
      color: white;
    }

    .check-button:hover {
      background: #3e8e41;
    }

    .cross-button {
      background: #ff4d4d;
      color: white;
    }

    .cross-button:hover {
      background: #d43c3c;
    }

    .card-actions {
      display: flex;
      justify-content: center;
      margin-top: 5px;
    }

    .action-button {
      width: 20px;
      height: 20px;
      margin: 0 5px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
    }

    .delete-button {
      background: #ff4d4d;
      color: white;
      border: none;
    }

    .edit-button {
      background: #1976d2;
      color: white;
      border: none;
    }

    .delete-button:hover {
      background: #d43c3c;
    }

    .edit-button:hover {
      background: #008c95;
    }

    .summary-container {
      display: none;
      text-align: center;
      margin-top: 20px;
    }

    .summary-container.active {
      display: block;
    }

    .summary-buttons button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .retry-button {
      background: #1976d2;
      color: white;
    }

    .retry-button:hover {
      background: #008c95;
    }

    .restart-button {
      background: #4caf50;
      color: white;
    }

    .restart-button:hover {
      background: #3e8e41;
    }

    /* Add red button styles for "Supprimer" and "Abandonner" */
    .abandon-button {
      background: #fff;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }

    .message {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 8px;
      text-align: center;
      background: rgba(108, 137, 71, 0.1);
      border: 1px solid #1976d2;
      color: #1976d2;
    }

    .message.error {
      background: rgba(255, 77, 77, 0.1);
      border-color: #ff4d4d;
      color: #ff4d4d;
    }

    .message.success {
      background: rgba(76, 175, 80, 0.1);
      border-color: #4caf50;
      color: #4caf50;
    }

    .exercice-container button{
      background: #0a0c10;
      color: #4caf50;
      border: 2px solid #4caf50;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 10px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .exercice-container button:hover {
      background: #4caf50;
      color: black;
    }

    .supprimer-container button{
      background: #fff;
      color: rgb(209, 60, 60);
      border: 2px solid rgb(209, 60, 60);
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 10px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .supprimer-container button:hover {
      background:rgb(209, 60, 60);
      color: black;
    }

    /* Supprimer le flex deck-share-wrapper et ajuster .deck-details/.share-container */
    .share-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 2rem 0 1rem 0;
    }
    #qrcode {
      display: inline-block;
      margin-bottom: 1rem;
    }
    #share-btn {
      background: #1976d2;
      color: #fff;
      border: 2px solid #1976d2;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      transition: background 0.3s, color 0.3s;
    }
    #share-btn:hover {
      background: #1565c0;
      color: #fff;
    }
    body.theme-dark #share-btn {
      background: #1565c0;
      color: #fff;
      border-color: #1976d2;
    }
    body.theme-dark #share-btn:hover {
      background: #1976d2;
      color: #fff;
    }
    .share-menu-wrapper {
      position: relative;
      display: inline-block;
      z-index: 9999; /* Garante que o dropdown fique acima de tudo */
    }
    #share-menu {
      display: none;
      background: rgba(17, 17, 17, 0.95);  
      border: 1px solid #1976d2;
      border-radius: 12px;
      margin-top: 0.5rem;
      padding: 1.2rem;
      position: absolute;
      z-index: 100;
      min-width: 220px;
      backdrop-filter: blur(10px);
      box-shadow: 0 8px 30px rgba(108, 137, 71, 0.1);
    }
    .share-menu-btn {
      display: flex;
      align-items: center;
      width: 100%;
      background: transparent;
      color: #1976d2;
      border: 1px solid transparent;
      font-size: 1rem;
      font-weight: 600;
      padding: 0.8rem 1rem;
      margin: 0.3rem 0;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      text-align: left;
      gap: 0.8rem;
    }
    .share-menu-btn:hover {
      background: rgba(108, 137, 71, 0.1);
      border-color: #1976d2;
      transform: translateX(5px);
    }
    .share-menu-btn:last-child {
      color: #ff4d4d;
      border-color: transparent;
    }
    .share-menu-btn:last-child:hover {
      background: rgba(255, 77, 77, 0.1);
      border-color: #ff4d4d;
    }
    .share-menu-wrapper {
      position: relative;
      display: inline-block;
    }

    .add-deck-btn {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: linear-gradient(135deg, #1976d2, #1565c0);
      color: white;
      border: none;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      font-size: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(25, 118, 210, 0.18);
      transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
      z-index: 100;
      text-decoration: none;
    }
    .add-deck-btn:focus, .add-deck-btn:hover {
      background: linear-gradient(135deg, #1565c0, #1976d2);
      box-shadow: 0 6px 24px rgba(25, 118, 210, 0.25);
      transform: scale(1.08);
      outline: none;
    }
    .add-deck-btn span {
      margin-top: -2px;
    }

    /* QR Code */
    #qrcode canvas, #qrcode img {
      border-radius: 12px;
      background: #fff;
      padding: 8px;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);
      border: 2px solid #1976d2;
    }
    body.theme-dark #qrcode canvas, body.theme-dark #qrcode img {
      background: #23272f;
      border-color: #1976d2;
    }
  </style>
</head>
<body>
  @include('components/header')

  <!-- Contenu principal -->
  <div class="main-content">
    <h1>{{ deck.title }}</h1> <!-- Titre du deck -->
    <div class="deck-details">
      <!-- Messages flash -->
      @if (flashMessages.has('error'))
        <div class="message error">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      @if (flashMessages.has('success'))
        <div class="message success">
          {{ flashMessages.get('success') }}
        </div>
      @endif
      <!-- QR Code et partage √† l'int√©rieur du deck-details -->
      <div class="share-container">
        <div class="share-menu-wrapper">
          <button id="share-btn">Partager √†</button>
          <div id="share-menu">
            <button class="share-menu-btn" onclick="copyLink()">üìã Copier le lien</button>
            <button class="share-menu-btn" onclick="shareWhatsapp()">üü¢ WhatsApp</button>
            <button class="share-menu-btn" onclick="shareDiscord()">üíú Discord</button>
            <button class="share-menu-btn" onclick="shareSnapchat()">üü° Snapchat</button>
            <button class="share-menu-btn" onclick="shareInstagram()">üü£ Instagram</button>
            <button class="share-menu-btn" onclick="closeShareMenu()">Fermer</button>
          </div>
        </div>
        <div id="qrcode"></div>
      </div>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
      <script>
        // G√©n√©rer le QR code avec l'URL du deck
        const deckUrl = window.location.origin + '/deck/{{ deck.id }}';
        new QRCode(document.getElementById("qrcode"), {
          text: deckUrl,
          width: 128,
          height: 128,
          colorDark : "#1976d2", // azul
          colorLight : "#fff",
        });

        // Partage
        const shareBtn = document.getElementById('share-btn');
        const shareMenu = document.getElementById('share-menu');
        shareBtn.onclick = function(event) {
          event.stopPropagation();
          shareMenu.style.display = shareMenu.style.display === 'block' ? 'none' : 'block';
        };
        function closeShareMenu() {
          shareMenu.style.display = 'none';
        }
        function copyLink() {
          navigator.clipboard.writeText(deckUrl);
          alert('Lien copi√© !');
          closeShareMenu();
        }
        function shareWhatsapp() {
          window.open('https://wa.me/?text=' + encodeURIComponent(deckUrl), '_blank');
          closeShareMenu();
        }
        function shareDiscord() {
          window.open('https://discord.com/channels/@me', '_blank');
          setTimeout(() => { copyLink(); }, 500);
          closeShareMenu();
        }
        function shareSnapchat() {
          window.open('https://www.snapchat.com/scan?attachmentUrl=' + encodeURIComponent(deckUrl), '_blank');
          closeShareMenu();
        }
        function shareInstagram() {
          window.open('https://www.instagram.com/', '_blank');
          setTimeout(() => { copyLink(); }, 500);
          closeShareMenu();
        }
        // Fermer le menu si clic en dehors
        document.addEventListener('click', function(event) {
          if (!shareMenu.contains(event.target) && event.target !== shareBtn) {
            shareMenu.style.display = 'none';
          }
        });
      </script>
      <!-- Fin QR Code et partage -->
      <p><strong>Description:</strong> {{ deck.description }}</p>
      <p><strong>Visibilit√©:</strong> 
        <span title="{{ deck.visibility === 'public' ? 'Public' : 'Priv√©' }}">
          {{ deck.visibility === 'public' ? 'üîì Public' : 'üîí Priv√©' }}
        </span>
      </p>
      <p><strong>Cr√©ateur: </strong>
      <span>{{deck.user.username}}</span></p>

      <!-- Like system -->
      <div style="margin: 1rem 0;">
        <form action="{{ hasLiked ? route('decks.unlike', { id: deck.id }) : route('decks.like', { id: deck.id }) }}" method="POST" style="display:inline;">
          {{ csrfField() }}
          <button type="submit" style="background: none; border: none; cursor: pointer; font-size: 1.3rem; color: {{ hasLiked ? '#ff4d4d' : '#1976d2' }};">
            <span title="{{ hasLiked ? 'Je n\'aime plus' : 'J\'aime' }}">
              {{ hasLiked ? '‚ù§Ô∏è' : 'ü§ç' }}
            </span>
            <span style="font-size:1rem; color:#1976d2; margin-left:0.5rem;">
              {{ deck.likes.length }}
            </span>
          </button>
        </form>
      </div>
      <!-- End Like system -->

      

      <div class="button-container">
        <!-- Bouton pour supprimer le deck -->
        @if(deck.user_id === user.id)
          <button onclick="window.location.href='{{ route('decks.edit', { id: deck.id }) }}'">Modifier</button>
        @endif

        {{--  Bouton pour exercer les cartes  --}}
        @if(deck.cards.length > 0)
          <div class="exercice-container" style="display: inline-block;">
            <button onclick="window.location.href='{{ route('exercise.start', { deckId: deck.id }) }}'">Exercer</button>
          </div>
        @endif

        {{--  Bouton pour supprimer le deck  --}}
        @if(deck.user_id === user.id)
          <div class="supprimer-container" style="display: inline-block;">
          <button class="abandon-button" onclick="confirmDelete()">Supprimer</button>
          </div>
        @endif
      </div>
    </div>

    <!-- Liste des cartes -->
    <h2>Cartes</h2>
    <div id="cards-container">
      @if(deck.cards.length)
        @each(card in deck.cards)
          <div class="card-container" data-card-id="{{ card.id }}">
            <div class="card" onclick="flipCard(this)">
              <div class="card-face front">
                {{ card.question }}
              </div>
              <div class="card-face back">
                {{ card.answer }}
                <div class="card-buttons">
                  <button class="check-button" onclick="markCard(this, true)">‚úî</button>
                  <button class="cross-button" onclick="markCard(this, false)">‚úò</button>
                </div>
              </div>
            </div>
            <div class="card-actions">
              @if(deck.user_id === user.id) 
                <button class="action-button delete-button" onclick="confirmDeleteCard({{ card.id }})">X</button>
                <button class="action-button edit-button" onclick="window.location.href='{{ route('cards.edit', { deckId: deck.id, cardId: card.id }) }}'">‚úé</button>
              @endif
            </div>
          </div>
        @endeach
      @else
        <p>Aucune carte disponible.</p>
      @endif
    </div>

    <!-- Bouton pour ajouter une carte -->
    @if(deck.user_id === user.id)
      <div class="button-container">
        <button onclick="window.location.href='{{ route('cards.create', { deckId: deck.id }) }}'">Ajouter une carte</button>
      </div>
    @endif

    <!-- R√©sum√© apr√®s l'exercice -->
    <div id="summary-container" class="summary-container">
      <h2>Vous avez termin√© !</h2>
      <p>Que voulez-vous faire ensuite ?</p>
      <div class="summary-buttons">
        <button class="retry-button" id="retry-button" onclick="retryIncorrect()" style="display: none;">Revoir les cartes rat√©es</button>
        <button class="restart-button" onclick="restartAll()">Recommencer avec toutes les cartes</button>
      </div>
    </div>

  </div>

  <script>
    let incorrectCards = [];
    let remainingCards = [...document.querySelectorAll('.card-container')];

    function flipCard(cardElement) {
      cardElement.classList.toggle('is-flipped');
    }

    function markCard(button, isCorrect) {
      const cardContainer = button.closest('.card-container');
      const cardId = cardContainer.dataset.cardId;

      if (!isCorrect) {
        // Stocker l'HTML et l'ID de la carte dans le tableau incorrectCards
        incorrectCards.push({
          id: cardId,
          html: cardContainer.outerHTML,
        });
      }

      cardContainer.remove();
      remainingCards = remainingCards.filter((card) => card !== cardContainer);

      if (remainingCards.length === 0) {
        showSummary();
      }
    }

    function showSummary() {
      document.getElementById('cards-container').style.display = 'none';
      document.getElementById('summary-container').classList.add('active');

      // Assurez-vous que le bouton "Revoir les cartes rat√©es" est cach√© s'il n'y a pas de cartes incorrectes
      const retryButton = document.getElementById('retry-button');
      retryButton.style.display = incorrectCards.length > 0 ? 'inline-block' : 'none';
    }

    function retryIncorrect() {
      const cardsContainer = document.getElementById('cards-container');
      cardsContainer.style.display = 'block';
      document.getElementById('summary-container').classList.remove('active');

      // R√©-ajouter les cartes incorrectes au DOM
      incorrectCards.forEach((card) => {
        const tempDiv = document.createElement('div');
        tempDiv.innerHTML = card.html.trim();
        const cardElement = tempDiv.firstChild;
        cardsContainer.appendChild(cardElement);
      });

      // Vider le tableau incorrectCards et mettre √† jour remainingCards
      incorrectCards = [];
      remainingCards = [...document.querySelectorAll('.card-container')];
    }

    function restartAll() {
      location.reload();
    }

    function confirmDelete() {
      if (confirm('√ätes-vous s√ªr de vouloir supprimer ce deck ?')) {
        document.getElementById('delete-form').submit();
      }
    }

    function confirmDeleteCard(cardId) {
      if (confirm('√ätes-vous s√ªr de vouloir supprimer cette carte ?')) {
        const form = document.getElementById(`delete-card-form-${cardId}`);
        if (form) {
          form.submit();
        }
      }
    }
  </script>

  <!-- Formulaires cach√©s pour la suppression -->
  @each(card in deck.cards)
    <form id="delete-card-form-{{ card.id }}" action="{{ route('cards.delete', { deckId: deck.id, cardId: card.id }) }}" method="POST" style="display: none;">
      {{ csrfField() }}
    </form>
  @endeach

  <form id="delete-form" action="{{ route('decks.delete', { id: deck.id }) }}" method="POST" style="display: none;">
    {{ csrfField() }}
  </form>

  <a href="{{ route('decks.create') }}" class="add-deck-btn" title="Cr√©er un nouveau deck">
    <span>+</span>
  </a>
</body>
</html>
