<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Visualisation du deck</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar button {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
    }

    .deck-details {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: #000;
      padding: 2rem;
      border-radius: 12px;
      border: 2px solid #00adb5;
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }

    .deck-details p {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .button-container {
      text-align: center;
      margin-top: 2rem;
    }

    .button-container button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 10px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .button-container button:hover {
      background: #00adb5;
      color: black;
    }

    /* Add styles for the card flip effect */
    .card-container {
      perspective: 1000px;
      margin: 10px 0;
      display: inline-block;
      position: relative;
    }

    .card {
      width: 300px;
      height: 150px;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }

    .card.is-flipped {
      transform: rotateY(180deg);
    }

    .card-face {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #00adb5;
      border-radius: 10px;
      background: #000;
      color: #e0e0e0;
      font-size: 1.2rem;
      text-align: center;
    }

    .card-face.front {
      background: #00adb5;
      color: #000;
    }

    .card-face.back {
      transform: rotateY(180deg);
      position: relative;
    }

    .card-buttons {
      position: absolute;
      bottom: 10px;
      right: 10px;
      display: flex;
      gap: 10px;
    }

    .card-buttons button {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .check-button {
      background: #4caf50;
      color: white;
    }

    .check-button:hover {
      background: #3e8e41;
    }

    .cross-button {
      background: #ff4d4d;
      color: white;
    }

    .cross-button:hover {
      background: #d43c3c;
    }

    .card-actions {
      display: flex;
      justify-content: center;
      margin-top: 5px;
    }

    .action-button {
      width: 20px;
      height: 20px;
      margin: 0 5px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
    }

    .delete-button {
      background: #ff4d4d;
      color: white;
      border: none;
    }

    .edit-button {
      background: #00adb5;
      color: white;
      border: none;
    }

    .delete-button:hover {
      background: #d43c3c;
    }

    .edit-button:hover {
      background: #008c95;
    }

    .summary-container {
      display: none;
      text-align: center;
      margin-top: 20px;
    }

    .summary-container.active {
      display: block;
    }

    .summary-buttons button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .retry-button {
      background: #00adb5;
      color: white;
    }

    .retry-button:hover {
      background: #008c95;
    }

    .restart-button {
      background: #4caf50;
      color: white;
    }

    .restart-button:hover {
      background: #3e8e41;
    }

    /* Add red button styles for "Supprimer" and "Abandonner" */
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .message {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Blue background */
      color: #fff;
    }

    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Red background */
      color: #fff;
    }

    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50; /* Green background */
      color: #fff;
    }

.exercice-container button{
  background: #000;
  color: #4caf50;
  border: 2px solid #4caf50;
  padding: 0.8rem 1.5rem;
  border-radius: 8px;
