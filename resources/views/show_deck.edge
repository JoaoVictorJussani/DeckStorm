    }

    .retry-button {
      background: #1976d2;
      color: white;
    }

    .retry-button:hover {
      background: #008c95;
    }

    .restart-button {
      background: #4caf50;
      color: white;
    }

    .restart-button:hover {
      background: #3e8e41;
    }

    /* Add red button styles for "Supprimer" and "Abandonner" */
    .abandon-button {
