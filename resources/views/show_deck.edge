      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(25, 118, 210, 0.18);
      transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
      z-index: 100;
      text-decoration: none;
    }
    .add-deck-btn:focus, .add-deck-btn:hover {
      background: linear-gradient(135deg, #1565c0, #1976d2);
      box-shadow: 0 6px 24px rgba(25, 118, 210, 0.25);
      transform: scale(1.08);
      outline: none;
    }
    .add-deck-btn span {
      margin-top: -2px;
    }

    /* QR Code */
    #qrcode canvas, #qrcode img {
      border-radius: 12px;
      background: #fff;
      padding: 8px;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);
      border: 2px solid #1976d2;
    }
    body.theme-dark #qrcode canvas, body.theme-dark #qrcode img {
      background: #23272f;
      border-color: #1976d2;
    }

    #like-count {
      color: #222222;
    }
    body.theme-dark #like-count {
      color: #e0e0e0;
    }

    /* Bot√£o de convite */
    .invite-btn {
      background: linear-gradient(90deg, #1976d2 60%, #1565c0 100%);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 0.7rem 1.5rem;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      margin-right: 0.5rem;
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.10);
      transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
    }
    .invite-btn:hover {
      background: #1565c0;
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 4px 16px rgba(25, 118, 210, 0.18);
    }
    .invite-btn.refuse {
      background: #fff;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      box-shadow: 0 2px 8px rgba(255,77,77,0.08);
    }
    .invite-btn.refuse:hover {
      background: #ff4d4d;
      color: #fff;
      border-color: #ff4d4d;
    }

    /* Modal de convite */
    /* Modal de convite premium */
    .invite-modal {
      display: none;
      position: fixed;
      z-index: 10000; /* Increased z-index */
      top: 0; left: 0; right: 0; bottom: 0; /* Cover entire viewport */
      background-color: rgba(0, 0, 0, 0.6); /* Darker background */
      backdrop-filter: blur(5px); /* Reduced blur for clearer dark background */
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    .invite-modal.active {
      display: flex;
      opacity: 1;
    }
    .invite-modal-content {
      background: #ffffff;
      color: #333;
      border-radius: 24px;
      margin: auto; /* Extra safety for centering */
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); /* Better shadow */
      padding: 3rem;
      max-width: 480px;
      width: 90%; /* flexible width */
      position: relative;
      text-align: center;
      transform: translateY(20px);
      transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .invite-modal.active .invite-modal-content {
      transform: translateY(0);
    }
    body.theme-dark .invite-modal-content {
      background: #1e222b;
      color: #e6e9ef;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .invite-modal-close {
      position: absolute;
      top: 20px; right: 20px;
      background: rgba(25, 118, 210, 0.1);
      color: #1976d2;
      border: none;
      border-radius: 50%;
      font-size: 1.5rem;
      width: 40px; height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    .invite-modal-close:hover {
      background: #1976d2;
      color: #fff;
      transform: rotate(90deg);
    }
    body.theme-dark .invite-modal-close {
      background: rgba(255, 255, 255, 0.1);
      color: #fff;
    }
    body.theme-dark .invite-modal-close:hover {
      background: #fff;
      color: #1976d2;
    }
    
    /* Input improvement inside modal */
    .invite-modal-input {
      width: 100%;
      padding: 1rem 1.2rem;
      margin-top: 0.5rem;
      margin-bottom: 1.5rem;
      border-radius: 12px;
      border: 2px solid #e0e6ed;
      background: #f8fafc;
      font-size: 1rem;
      color: #333;
      transition: all 0.3s ease;
    }
    .invite-modal-input:focus {
      border-color: #1976d2;
      background: #fff;
      outline: none;
      box-shadow: 0 0 0 4px rgba(25, 118, 210, 0.1);
    }
    body.theme-dark .invite-modal-input {
      background: #11141a;
      border-color: #333;
      color: #fff;
    }
    body.theme-dark .invite-modal-input:focus {
      border-color: #1976d2;
      box-shadow: 0 0 0 4px rgba(25, 118, 210, 0.2);
    }
    .invite-btn-main {
      background: linear-gradient(135deg, #1976d2, #1565c0);
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 0.8rem 1.5rem;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      box-shadow: 0 4px 12px rgba(25, 118, 210, 0.2);
      transition: all 0.3s ease;
