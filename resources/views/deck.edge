<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Créer un deck</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    /* --- Styles globaux --- */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    /* --- Titres harmonisés pour toutes les pages --- */
    .main-title {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #6c8947;
      font-weight: 700;
      text-align: center;
    }
    /* Titre principal */
    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #6c8947;
      font-weight: 700;
    }
    h2 {
      font-size: 2rem;
      margin-bottom: 1rem;
      color: #6c8947;
      font-weight: 600;
      text-align: center;
      margin-top: 1.5rem;
    }
    h3 {
      font-size: 1.4rem;
      margin-bottom: 0.7rem;
      color: #6c8947;
      font-weight: 500;
      text-align: center;
      margin-top: 1rem;
    }

    /* --- Formulaire et messages --- */
    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }
    .form-container {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: #000;
      padding: 2rem;
      border-radius: 12px;
      border: 2px solid #6c8947;
      box-shadow: 0 5px 15px #6c8947;
    }
    label {
      font-size: 1.2rem;
      display: block;
      margin-top: 15px;
      color: #6c8947;
      text-align: left;
    }
    input, textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 2px solid #6c8947;
      font-size: 1rem;
      background: #000;
      color: #e0e0e0;
      margin-top: 5px;
    }
    select {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 2px solid #6c8947;
      font-size: 1rem;
      background: #000;
      color: #e0e0e0;
      margin-top: 5px;
      appearance: none;
    }
    select:focus { outline: none; border-color: #6c8947; }
    .submit-button {
      background: #000;
      color: #6c8947;
      border: 2px solid #6c8947;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .submit-button:hover { background: #6c8947; color: black; }
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .abandon-button:hover { background: #ff4d4d; color: black; }
    .error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d;
      color: #fff;
    }
    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d;
      color: #fff;
    }
    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50;
      color: #fff;
    }
    .description-container {
      position: relative;
      width: 100%;
    }

    .counter {
      position: absolute;
      bottom: 5px;
      right: 10px;
      font-size: 0.8rem;
      color: #6c8947;
    }
  </style>
</head>
<body>
  @include('components/header')

  <div class="main-content">
    <h1>Créer un nouveau deck</h1>
    <div class="form-container">
      @if (flashMessages.has('error'))
        <div class="message error">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      @if (flashMessages.has('success'))
        <div class="message success">
          {{ flashMessages.get('success') }}
        </div>
      @endif
      <form action="{{ route('decks.store') }}" method="POST">
        {{ csrfField() }}
        <label for="title">Titre du deck :</label>
        <input type="text" id="title" name="title" value="{{ flashMessages.get('old.title', '') }}" required />

        <label for="description">Description :</label>
        <div class="description-container">
          <textarea id="description" name="description" maxlength="125" onkeyup="updateCounter()" required>{{ flashMessages.get('old.description', '') }}</textarea>
          <div class="counter" style="position: absolute; bottom: 5px; right: 10px; font-size: 0.8rem; color: #6c8947;">
            <span id="charCount">0</span>/125
          </div>
        </div>

        <label for="visibility">Visibilité :</label>
        <select id="visibility" name="visibility" required>
          <option value="private" {{ flashMessages.get('old.visibility', 'private') === 'private' ? 'selected' : '' }}>Privé</option>
          <option value="public" {{ flashMessages.get('old.visibility', 'private') === 'public' ? 'selected' : '' }}>Public</option>
        </select>

        <button type="submit" class="submit-button">Créer</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('home') }}'">Abandonner</button>
      </form>
    </div>
  </div>

  <script>
    const textarea = document.getElementById('description');
    const charCount = document.getElementById('charCount');

    function updateCounter() {
      const currentLength = textarea.value.length;
      charCount.textContent = currentLength;
      
      // Change la couleur quand on approche de la limite
      if (currentLength >= 100) {
        charCount.style.color = '#ff4d4d'; // Rouge
      } else if (currentLength >= 80) {
        charCount.style.color = '#ffa500'; // Orange
      } else {
        charCount.style.color = '#6c8947'; // Couleur par défaut
      }
    }

    // Initialisation au chargement
    document.addEventListener('DOMContentLoaded', updateCounter);
    // Mise à jour à chaque changement
    textarea.addEventListener('input', updateCounter);
  </script>
</body>
</html>
