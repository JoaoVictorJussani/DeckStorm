<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Carte</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    p {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .button-container {
      display: flex;
      justify-content: center;
      gap: 1rem;
    }

    button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    button:hover {
      background: #00adb5;
      color: black;
    }

    /* Add red button styles for "Supprimer" and "Abandonner" */
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .message {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Blue background */
      color: #fff;
    }

    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Red background */
      color: #fff;
    }

    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50; /* Green background */
      color: #fff;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar a {
      color: #00adb5;
      text-decoration: none;
      font-size: 1.2rem;
      font-weight: 600;
      display: flex;
      align-items: center;
    }

    .navbar img {
      width: 40px;
      height: 40px;
      margin-right: 0.5rem;
    }

    .spacer {
      height: 80px;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="{{ route('home') }}"><img src="/public/images/icone.ico">DeckStorm</a>
  </div>
  <div class="spacer"></div>
  <h1>{{ card.question }}</h1>
  <div class="form-container">
    @if (flashMessages.has('error'))
      <div class="message error">
        {{ flashMessages.get('error') }}
      </div>
    @endif
    @if (flashMessages.has('success'))
      <div class="message success">
        {{ flashMessages.get('success') }}
      </div>
    @endif
    <p>{{ card.answer }}</p>
    <div class="button-container">
      <button onclick="window.location.href='{{ route('decks.show', { id: card.deck_id }) }}'">OK</button>
      <button onclick="window.location.href='{{ route('cards.edit', { deckId: card.deck_id, cardId: card.id }) }}'">Modifier</button>
      <button class="abandon-button" onclick="confirmDelete()">Supprimer</button>
    </div>
  </div>
  <script>
    function confirmDelete() {
      if (confirm('Êtes-vous sûr de vouloir supprimer cette carte ?')) {
        document.getElementById('delete-form').submit()
      }
    }
  </script>

  <form id="delete-form" action="{{ route('cards.delete', { deckId: card.deck_id, cardId: card.id }) }}" method="POST" style="display: none;">
    {{ csrfField() }}
  </form>
</body>
</html>
