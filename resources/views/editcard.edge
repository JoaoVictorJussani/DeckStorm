<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier Carte</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <script>
    (function() {
      let theme = localStorage.getItem('theme');
      if (!theme) theme = 'theme-light';
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      });
      if (document.body) {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      }
    })();
  </script>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
      transition: background 0.5s, color 0.5s; /* Adiciona transição suave */
    }
    body.theme-light {
      background: #fff;
      color: #222;
      transition: background 0.5s, color 0.5s; /* Adiciona transição suave */
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
      transition: background 0.5s, color 0.5s; /* Adiciona transição suave */
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #1976d2;
      font-weight: 700;
      text-align: center;
    }

    form {
      width: 100%;
      max-width: 500px;
      background: #fff;
      padding: 2rem;
      border: 2px solid #1976d2;
      border-radius: 12px;
    }
    body.theme-dark form {
      background: #181c23;
      border-color: #1976d2;
    }

    label {
      display: block;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: #1976d2;
    }

    input, textarea {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 1.5rem;
      border: 2px solid #1976d2;
      border-radius: 8px;
      background: #fff;
      color: #222;
      font-size: 1rem;
      transition: background 0.2s, color 0.2s;
    }
    body.theme-dark input,
    body.theme-dark textarea {
      background: #23272f;
      color: #e0e0e0;
      border-color: #1976d2;
    }

    input:focus, textarea:focus {
      outline: none;
      border-color: #1976d2;
    }

    .button-container {
      display: flex;
      justify-content: space-between;
    }

    button {
      background: #fff;
      color: #1976d2;
      border: 2px solid #1976d2;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }
    button:hover {
      background: #1976d2;
      color: #fff;
    }
    body.theme-dark button {
      background: #23272f;
      color: #1976d2;
      border-color: #1976d2;
    }
    body.theme-dark button:hover {
      background: #1976d2;
      color: #fff;
    }

    .abandon-button {
      background: #fff;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }
    .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }
    body.theme-dark .abandon-button {
      background: #23272f;
      color: #ff4d4d;
      border-color: #ff4d4d;
    }
    body.theme-dark .abandon-button:hover {
      background: #ff4d4d;
      color: #fff;
    }

    .message {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d;
      color: #fff;
    }

    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d;
      color: #fff;
    }

    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50;
      color: #fff;
    }
  </style>
</head>
<body>
  @include('components/header')
  
  <div class="spacer"></div>
  <h1>Modifier la carte</h1>
  <div class="form-container">
    @if (flashMessages.has('error'))
      <div class="message error">
        {{ flashMessages.get('error') }}
      </div>
    @endif
    @if (flashMessages.has('success'))
      <div class="message success">
        {{ flashMessages.get('success') }}
      </div>
    @endif
    <form action="{{ route('cards.update', { deckId: card.deck_id, cardId: card.id }) }}" method="POST">
      {{ csrfField() }}
      <label for="question">Question :</label>
      <input type="text" id="question" name="question" value="{{ card.question }}" required />
      <label for="answer">Réponse :</label>
      <textarea id="answer" name="answer" required>{{ card.answer }}</textarea>
      <div class="button-container">
        <button type="submit">Enregistrer</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('cards.show', { deckId: card.deck_id, cardId: card.id }) }}'">Abandonner</button>
      </div>
    </form>
  </div>
</body>
</html>
