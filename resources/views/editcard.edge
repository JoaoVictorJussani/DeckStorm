<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier Carte</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #6c8947;
      font-weight: 700;
      text-align: center;
    }

    form {
      width: 100%;
      max-width: 500px;
      background: #000;
      padding: 2rem;
      border: 2px solid #6c8947;
      border-radius: 12px;
      // box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }

    label {
      display: block;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }

    input, textarea {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 1.5rem;
      border: 2px solid #6c8947;
      border-radius: 8px;
      background: #000;
      color: #e0e0e0;
      font-size: 1rem;
    }

    input:focus, textarea:focus {
      outline: none;
      border-color: #6c8947;
    }

    .button-container {
      display: flex;
      justify-content: space-between;
    }

    button {
      background: #000;
      color: #6c8947;
      border: 2px solid #6c8947;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    button:hover {
      background: #6c8947;
      color: black;
    }

    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .message {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Blue background */
      color: #fff;
    }

    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Red background */
      color: #fff;
    }

    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50; /* Green background */
      color: #fff;
    }

     /* Barre de navigation */
    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #6c8947;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }

    .navbar button {
      background: #6c8947;
      color: white;
      border: 2px solid #6c8947;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    .navbar a {
      text-decoration: none;
      color: #6c8947;
      font-size: 1.5rem;
      font-weight: bold;
    }

    /* Taille de l'image dans la navbar */
    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }

    /* Harmonisation du dropdown avec home.edge */
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-toggle {
      background: #6c8947;
      color: white;
      border: 2px solid #6c8947;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dropdown-toggle:hover, .dropdown-toggle:focus {
      background: #008c95;
      color: #fff;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      // box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #6c8947;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
    }
    .dropdown.open .dropdown-menu {
      display: block;
    }
    .dropdown-menu a, .dropdown-menu button {
      display: block;
      width: 100%;
      background: none;
      border: none;
      color: #6c8947;
      text-align: left;
      padding: 0.7rem 1.2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
      text-decoration: none;
    }
    .dropdown-menu a:hover, .dropdown-menu button:hover {
      background: #6c8947;
      color: #000;
    }
    .dropdown-menu .logout-btn {
      color: #ff4d4d;
    }
    .dropdown-menu .logout-btn:hover {
      background: #ff4d4d;
      color: #000;
    }
  </style>
</head>
<body>
  @include('components/header')
  
  <div class="spacer"></div>
  <h1>Modifier la carte</h1>
  <div class="form-container">
    @if (flashMessages.has('error'))
      <div class="message error">
        {{ flashMessages.get('error') }}
      </div>
    @endif
    @if (flashMessages.has('success'))
      <div class="message success">
        {{ flashMessages.get('success') }}
      </div>
    @endif
    <form action="{{ route('cards.update', { deckId: card.deck_id, cardId: card.id }) }}" method="POST">
      {{ csrfField() }}
      <label for="question">Question :</label>
      <input type="text" id="question" name="question" value="{{ card.question }}" required />
      <label for="answer">RÃ©ponse :</label>
      <textarea id="answer" name="answer" required>{{ card.answer }}</textarea>
      <div class="button-container">
        <button type="submit">Enregistrer</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('cards.show', { deckId: card.deck_id, cardId: card.id }) }}'">Abandonner</button>
      </div>
    </form>
  </div>
</body>
</html>
