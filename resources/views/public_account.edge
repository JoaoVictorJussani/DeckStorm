<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Profil public de {{ user.username }}</title>
  <link rel="shortcut icon" href="/resources/images/icone.ico" type="image/x-icon">
  <style>
    /* Styles globaux */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    /* Barre de navigation */
    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }

    .navbar button {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }

    /* Taille de l'image dans la navbar */
    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }

    /* Dropdown styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-toggle {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dropdown-toggle:hover, .dropdown-toggle:focus {
      background: #008c95;
      color: #fff;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #00adb5;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
    }
    .dropdown.open .dropdown-menu {
      display: block;
    }
    .dropdown-menu a, .dropdown-menu button {
      display: block;
      width: 100%;
      background: none;
      border: none;
      color: #00adb5;
      text-align: left;
      padding: 0.7rem 1.2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
      text-decoration: none;
    }
    .dropdown-menu a:hover, .dropdown-menu button:hover {
      background: #00adb5;
      color: #000;
    }
    .dropdown-menu .logout-btn {
      color: #ff4d4d;
    }
    .dropdown-menu .logout-btn:hover {
      background: #ff4d4d;
      color: #000;
    }

    /* Contenu principal */
    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
    }

    h1 {
      color: #00adb5;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    .decks-container {
      width: 100%;
      margin: auto;
    }
    table {
      width: 100%;
      text-align: left;
      background: #000;
      border: 2px solid #00adb5;
      border-radius: 10px;
      overflow: hidden;
      margin-top: 2rem;
    }
    th, td {
      padding: 15px;
      border-bottom: 1px solid #00adb5;
    }
    th {
      font-size: 1.2rem;
      font-weight: bold;
      background: #000;
      color: #00adb5;
      border-bottom: 2px solid #00adb5;
    }
    td {
      font-size: 1.1rem;
    }
    tr:hover {
      cursor: pointer;
      background: #111;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="{{ route('home') }}"><img src="./resources/images/icone.ico">DeckStorm</a>
    <div>
      <span>Bienvenue {{ authUser?.username }}</span>
      <div class="dropdown" id="userDropdown">
        <button class="dropdown-toggle" onclick="toggleDropdown()" aria-haspopup="true" aria-expanded="false">
          <span>▼</span>
        </button>
        <div class="dropdown-menu" id="dropdownMenu">
          <a href="/account/{{ authUser?.id }}">Mon compte</a>
          <form action="/logout" method="POST" style="margin:0;">
            {{ csrfField() }}
            <button type="submit" class="logout-btn">Se déconnecter</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    function toggleDropdown() {
      document.getElementById('userDropdown').classList.toggle('open');
    }
    document.addEventListener('click', function(event) {
      const dropdown = document.getElementById('userDropdown');
      if (!dropdown.contains(event.target)) {
        dropdown.classList.remove('open');
      }
    });
  </script>
  <div class="main-content">
    <h1>Decks de {{ user.username }} : {{ publicDecks.length }}</h1>
    <div style="margin-bottom: 2rem;">
      <span><b>Abonnés :</b> {{ followersCount }}</span> &nbsp;|&nbsp;
      <span><b>Abonnements :</b> {{ followingCount }}</span>
      @if(authUser.id !== user.id)
        <form action="{{ isFollowing ? route('user.unfollow', { id: user.id }) : route('user.follow', { id: user.id }) }}" method="POST" style="display:inline;">
          {{ csrfField() }}
          <button type="submit" style="margin-left:1rem; background: {{ isFollowing ? '#ff4d4d' : '#00adb5' }}; color: #fff; border: none; border-radius: 8px; padding: 0.5rem 1.2rem; cursor: pointer;">
            {{ isFollowing ? 'Se désabonner' : 'Suivre' }}
          </button>
        </form>
      @endif
    </div>
    <div class="decks-container">
      <table>
        <thead>
          <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Cartes</th>
          </tr>
        </thead>
        <tbody>
          @if(publicDecks.length)
            @each(deck in publicDecks)
              <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                <td><a style="text-decoration: none; color: white" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                <td>{{ deck.description }}</td>
                <td>{{ deck.cards.length }}</td>
              </tr>
            @endeach
          @else
            <tr>
              <td colspan="3">Aucun deck public disponible.</td>
            </tr>
          @endif
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
