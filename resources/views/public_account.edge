<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Profil de {{ user.username }}</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

  <script>
    // Theme init
    (function() {
      let theme = localStorage.getItem('theme');
      if (!theme) theme = 'theme-light';
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      });
      if (document.body) {
        document.body.classList.remove('theme-light', 'theme-dark');
        document.body.classList.add(theme);
      }
    })();
  </script>

  <style>
    :root {
      /* Premium HSL Color Palette */
      --color-primary: 37, 99, 235; /* #2563eb */
      --color-primary-light: 96, 165, 250; /* #60a5fa */
      --color-primary-dark: 29, 78, 216; /* #1d4ed8 */
      --color-accent: 124, 58, 237; /* #7c3aed */
      
      --color-bg-light: 248, 250, 252;
      --color-bg-dark: 15, 23, 42;
      
      --color-surface-light: 255, 255, 255;
      --color-surface-dark: 30, 41, 59;
      
      --color-text-main-light: 15, 23, 42;
      --color-text-main-dark: 241, 245, 249;
      --color-text-muted: 100, 116, 139;

      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
      --shadow-glow: 0 20px 25px -5px rgba(37, 99, 235, 0.15);
      
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --radius-full: 9999px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Outfit', 'Segoe UI', sans-serif;
    }

    body {
      background: rgb(var(--color-bg-light));
      color: rgb(var(--color-text-main-light));
      min-height: 100vh;
      font-weight: 400;
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      transition: background 0.4s, color 0.4s;
    }

    body.theme-light {
      background: rgb(var(--color-bg-light));
      color: rgb(var(--color-text-main-light));
    }
    
    body.theme-dark {
      background: rgb(var(--color-bg-dark));
      color: rgb(var(--color-text-main-dark));
    }

    .main-content {
      margin-top: 80px;
      padding: 2rem 1.5rem;
      width: 100%;
      max-width: 1000px;
      margin-left: auto;
      margin-right: auto;
      display: flex;
      flex-direction: column;
      gap: 2.5rem;
    }

    /* User Profile Card */
    .profile-card {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: var(--radius-lg);
      border: 1px solid rgba(255,255,255, 0.6);
      padding: 3rem 2rem;
      box-shadow: var(--shadow-md);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      position: relative;
      text-align: center;
    }
    body.theme-dark .profile-card {
      background: rgba(30, 41, 59, 0.6);
      border-color: rgba(255,255,255, 0.08);
      box-shadow: 0 4px 6px rgba(0,0,0,0.2);
    }

    .profile-avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: linear-gradient(135deg, #bfdbfe, #ddd6fe);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      box-shadow: var(--shadow-md);
      border: 4px solid rgba(255,255,255,0.8);
    }
    body.theme-dark .profile-avatar {
      border-color: rgba(255,255,255,0.1);
      background: linear-gradient(135deg, #1e3a8a, #4c1d95);
      color: #fff;
    }

    .profile-name {
      font-size: 2rem;
      font-weight: 700;
      color: rgb(var(--color-text-main-light));
      background: linear-gradient(135deg, rgb(var(--color-primary)), rgb(var(--color-accent)));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    body.theme-dark .profile-name {
      background: none;
      -webkit-text-fill-color: rgb(var(--color-text-main-dark));
      color: rgb(var(--color-text-main-dark));
    }

    /* Stats Grid */
    .stats-grid {
      display: flex;
      gap: 3rem;
      margin: 1.5rem 0;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
      cursor: pointer;
      position: relative;
    }
    .stat-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: rgb(var(--color-primary));
    }
    .stat-label {
      font-size: 0.9rem;
      font-weight: 500;
      color: rgb(var(--color-text-muted));
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* Buttons */
    .btn {
      padding: 0.75rem 2rem;
      border-radius: var(--radius-full);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1rem;
      border: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
    }
    
    .btn-follow {
      background: linear-gradient(135deg, rgb(var(--color-primary)), rgb(var(--color-primary-dark)));
      color: white;
      box-shadow: 0 4px 12px rgba(var(--color-primary), 0.3);
    }
    .btn-follow:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(var(--color-primary), 0.4);
    }
    
    .btn-unfollow {
      background: transparent;
      border: 2px solid #ef4444;
      color: #ef4444;
    }
    .btn-unfollow:hover {
      background: #ef4444;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.2);
    }
    
    /* Decks Section */
    .decks-container {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-radius: var(--radius-lg);
      border: 1px solid rgba(255,255,255, 0.6);
      padding: 2rem;
      box-shadow: var(--shadow-sm);
    }
    body.theme-dark .decks-container {
      background: rgba(30, 41, 59, 0.6);
      border-color: rgba(255,255,255, 0.08);
    }

    .section-header {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      color: rgb(var(--color-text-main-light));
    }
    body.theme-dark .section-header { color: rgb(var(--color-text-main-dark)); }

    /* New Table Style */
    .table-responsive {
      width: 100%;
      overflow-x: auto;
    }
    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 0.8rem;
    }
    th {
      text-align: left;
      padding: 1rem;
      color: rgb(var(--color-text-muted));
      font-weight: 600;
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    td {
      background: rgba(var(--color-primary-light), 0.05);
      padding: 1.25rem 1rem;
      font-size: 1rem;
      transition: transform 0.2s;
    }
    body.theme-dark td {
      background: rgba(255,255,255,0.03);
    }
    
    tr:hover td {
      background: rgba(var(--color-primary), 0.05);
      transform: scale(1.01);
      cursor: pointer;
    }
    body.theme-dark tr:hover td {
      background: rgba(255,255,255,0.06);
    }

    td:first-child { border-radius: var(--radius-md) 0 0 var(--radius-md); font-weight: 600; color: rgb(var(--color-primary)); }
    td:last-child { border-radius: 0 var(--radius-md) var(--radius-md) 0; }

    /* Floating Window for Followers */
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100vh;
      background: rgba(0,0,0,0.4);
      backdrop-filter: blur(4px);
      z-index: 999;
      opacity: 0;
      transition: opacity 0.3s;
    }
    .modal-overlay.active {
      display: block;
      opacity: 1;
    }

    .follow-box {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.95);
      background: rgb(var(--color-bg-light));
      border: 1px solid rgba(255,255,255,0.2);
      border-radius: var(--radius-lg);
      padding: 2rem;
      width: 90%;
      max-width: 420px;
      z-index: 1000;
      box-shadow: var(--shadow-lg);
      opacity: 0;
      transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    body.theme-dark .follow-box {
      background: rgb(var(--color-surface-dark));
      border-color: rgba(255,255,255,0.1);
    }
    
    .follow-box.active {
      display: block;
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }

    .follow-box-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      font-size: 1.25rem;
      font-weight: 700;
    }

    .follow-box-list {
      list-style: none;
      max-height: 400px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .follow-box-item {
      padding: 0.8rem;
      border-radius: var(--radius-md);
      background: rgba(0,0,0,0.03);
      transition: background 0.2s;
    }
    body.theme-dark .follow-box-item { background: rgba(255,255,255,0.05); }
    
    .follow-box-item:hover {
      background: rgba(var(--color-primary), 0.1);
    }
    
    .follow-box-link {
      color: rgb(var(--color-text-main-light));
      font-weight: 500;
      text-decoration: none;
      display: block;
    }
    body.theme-dark .follow-box-link { color: rgb(var(--color-text-main-dark)); }

    .fab-add {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      width: 3.5rem;
      height: 3.5rem;
      background: linear-gradient(135deg, rgb(var(--color-primary)), rgb(var(--color-primary-dark)));
      color: #fff;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      box-shadow: var(--shadow-glow);
      transition: all 0.3s;
      z-index: 50;
      text-decoration: none;
    }
    .fab-add:hover {
      transform: scale(1.1) rotate(90deg);
      box-shadow: 0 10px 30px rgba(37, 99, 235, 0.4);
    }
    .fab-add span { margin-top: -4px; }
    
    @media (max-width: 640px) {
      .stats-grid { gap: 1.5rem; }
      .profile-card { padding: 2rem 1rem; }
      .profile-name { font-size: 1.5rem; }
    }
  </style>
</head>
<body>
  @include('components/header')

  <div class="main-content">
    
    <!-- Profile Header -->
    <div class="profile-card">
       <div class="profile-avatar">
          üë§
       </div>
       <h1 class="profile-name">{{ user.username }}</h1>
       
       <div class="stats-grid">
         <div class="stat-item" onclick="showFollowBox('followers-box')" id="followers-link">
           <span class="stat-value">{{ followersCount }}</span>
           <span class="stat-label">Abonn√©s</span>
         </div>
         <div class="stat-item" onclick="showFollowBox('following-box')" id="following-link">
           <span class="stat-value">{{ followingCount }}</span>
           <span class="stat-label">Abonnements</span>
         </div>
         <div class="stat-item">
            <span class="stat-value" style="color: gray">{{ publicDecks.length }}</span>
            <span class="stat-label">Decks Publics</span>
         </div>
       </div>

       @if(authUser && authUser.id !== user.id)
        <form action="{{ isFollowing ? route('user.unfollow', { id: user.id }) : route('user.follow', { id: user.id }) }}" method="POST">
          {{ csrfField() }}
          <button type="submit" class="btn {{ isFollowing ? 'btn-unfollow' : 'btn-follow' }}">
            {{ isFollowing ? 'Se d√©sabonner' : 'Suivre' }}
          </button>
        </form>
       @endif
    </div>

    <!-- Decks List -->
    <div class="decks-container">
      <h2 class="section-header">Decks de {{ user.username }}</h2>
      <div class="table-responsive">
        <table>
          <thead>
            <tr>
              <th>Titre</th>
              <th>Description</th>
              <th>Cartes</th>
            </tr>
          </thead>
          <tbody>
            @if(publicDecks.length)
              @each(deck in publicDecks)
                <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                  <td>{{ deck.title }}</td>
                  <td style="color: rgb(var(--color-text-muted));">{{ deck.description || '-' }}</td>
                  <td><b>{{ deck.cards.length }}</b></td>
                </tr>
              @end
            @else
              <tr>
                <td colspan="3" style="text-align:center; color: rgb(var(--color-text-muted));">Aucun deck public disponible.</td>
              </tr>
            @endif
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <!-- Hidden Overlay for Modals -->
  <div id="modal-overlay" class="modal-overlay" onclick="closeAllBoxes()"></div>

  <!-- Followers Modal -->
  <div id="followers-box" class="follow-box">
    <div class="follow-box-header">
      <span>Abonn√©s ({{ followersCount }})</span>
      <button onclick="closeAllBoxes()" style="background:none; border:none; font-size:1.5rem; cursor:pointer; color:inherit;">&times;</button>
    </div>
    <div class="follow-box-list">
      @if(followersList && followersList.length)
        @each(f in followersList)
          <div class="follow-box-item">
            <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
          </div>
        @end
      @else
        <div style="text-align:center; color: rgb(var(--color-text-muted)); padding: 1rem;">Aucun abonn√©.</div>
      @endif
    </div>
  </div>

  <!-- Following Modal -->
  <div id="following-box" class="follow-box">
    <div class="follow-box-header">
      <span>Abonnements ({{ followingCount }})</span>
      <button onclick="closeAllBoxes()" style="background:none; border:none; font-size:1.5rem; cursor:pointer; color:inherit;">&times;</button>
    </div>
    <div class="follow-box-list">
      @if(followingList && followingList.length)
        @each(f in followingList)
           <div class="follow-box-item">
            <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
          </div>
        @end
      @else
        <div style="text-align:center; color: rgb(var(--color-text-muted)); padding: 1rem;">Aucun abonnement.</div>
      @endif
    </div>
  </div>

  <a href="{{ route('decks.create') }}" class="fab-add" title="Cr√©er un nouveau deck">
    <span>+</span>
  </a>

  <script>
    function showFollowBox(boxId) {
      document.getElementById('modal-overlay').classList.add('active');
      const box = document.getElementById(boxId);
      box.classList.add('active');
    }

    function closeAllBoxes() {
      document.getElementById('modal-overlay').classList.remove('active');
      document.querySelectorAll('.follow-box').forEach(box => {
        box.classList.remove('active');
      });
    }

    // Close on escape key
    document.addEventListener('keydown', function(event) {
      if (event.key === "Escape") {
        closeAllBoxes();
      }
    });
  </script>
</body>
</html>
