<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Profil public de {{ user.username }}</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    /* Styles globaux home.edge */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
       
    }
    body.theme-light {
      background: #fff;
      color: #222;
       
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
       
    }
    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
    }
    .user-stats {
      background: #fff;
      border: 2px solid #1976d2;
      box-shadow: 0 8px 30px rgba(25, 118, 210, 0.08);
      border-radius: 16px;
      padding: 1.5rem 2rem;
      margin: 0 auto 2.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 3rem;
      max-width: 600px;
      position: relative;
    }
    body.theme-dark .user-stats {
      background: #181c23;
      border-color: #1976d2;
      box-shadow: 0 8px 30px rgba(25, 118, 210, 0.08);
    }
    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
      padding: 0.5rem 1.5rem;
    }
    .stat-item:not(:last-child):after {
      content: '';
      position: absolute;
      right: -1.5rem;
      top: 50%;
      transform: translateY(-50%);
      height: 70%;
      width: 1px;
      background: linear-gradient(to bottom, transparent, #1976d2 60%, transparent);
    }
    .stat-label {
      font-size: 0.85rem;
      color: #1976d2;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 0.3rem;
    }
    .stat-value {
      font-size: 1.5rem;
      color: #1976d2;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }
    .stat-value:hover {
      color: #1565c0;
      transform: translateY(-2px);
    }
    .stat-value::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 100%;
      height: 2px;
      background: #1976d2;
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    .stat-value:hover::after {
      transform: scaleX(1);
    }
    .follow-btn, .unfollow-btn {
      position: relative;
      padding: 0.8rem 2rem;
      font-size: 0.95rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
      z-index: 1;
    }
    .follow-btn {
      background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(25, 118, 210, 0.12);
      border: 2px solid #1976d2;
    }
    .unfollow-btn {
      background: linear-gradient(135deg, #ff7676 0%, #ff9999 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(255, 118, 118, 0.2);
      border: 2px solid #ff7676;
    }
    .follow-btn:hover, .unfollow-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(25, 118, 210, 0.18);
      opacity: 0.95;
    }
    .decks-container {
      width: 100%;
      margin: auto;
    }
    h1 {
      color: #1976d2;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    table {
      width: 100%;
      text-align: left;
      background: #fff;
      border: 2px solid #1976d2;
      border-radius: 10px;
      overflow: hidden;
      margin-top: 2rem;
      box-shadow: 0 2px 10px rgba(25, 118, 210, 0.08);
    }
    body.theme-dark table {
      background: #181c23;
      border-color: #1976d2;
    }
    th, td {
      padding: 15px;
      border-bottom: 1px solid #1976d2;
    }
    th {
      font-size: 1.2rem;
      font-weight: bold;
      background: #e3f2fd;
      color: #1976d2;
      border-bottom: 2px solid #1976d2;
    }
    body.theme-dark th {
      background: #23272f;
      color: #1976d2;
    }
    td {
      font-size: 1.1rem;
    }
    tr:hover {
      cursor: pointer;
      background: #e3f2fd;
    }
    body.theme-dark tr:hover {
      background: #23272f;
    }
    .link-action {
      color: #1976d2;
      cursor: pointer;
    }
    .link-action:hover {
      color: #1565c0;
      opacity: 0.8;
    }
    .add-deck-btn {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: linear-gradient(135deg, #1976d2, #1565c0);
      color: white;
      border: none;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      font-size: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(25, 118, 210, 0.18);
      transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
      z-index: 100;
      text-decoration: none;
    }
    .add-deck-btn:hover {
      background: linear-gradient(135deg, #1565c0, #1976d2);
      box-shadow: 0 6px 24px rgba(25, 118, 210, 0.25);
      transform: scale(1.08);
    }
    .add-deck-btn span {
      margin-top: -2px;
    }
    /* Box survolante pour abonnés/abonnements */
    .follow-box {
      display: none;
      position: fixed;
      top: 110px;
      left: 50%;
      transform: translateX(-50%) scale(0.95);
      background: #fff;
      color: #1976d2;
      border: 2px solid #1976d2;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(25, 118, 210, 0.10), 0 0 0 1px #1976d2;
      backdrop-filter: blur(10px);
      padding: 1.8rem;
      width: 90%;
      max-width: 400px;
      z-index: 9999;
      opacity: 0;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    body.theme-dark .follow-box {
      background: #23272f;
      color: #1976d2;
      border-color: #1976d2;
    }
    .follow-box.active {
      transform: translateX(-50%) scale(1);
      opacity: 1;
    }
    .follow-box-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid #1976d2;
    }
    .follow-box-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: #1976d2;
      letter-spacing: -0.5px;
    }
    .follow-box-close {
      background: #e3f2fd;
      border: 1px solid #1976d2;
      color: #1976d2;
      font-size: 1.2rem;
      cursor: pointer;
      padding: 0.4rem;
      border-radius: 12px;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
    }
    .follow-box-close:hover {
      background: #1976d2;
      color: #fff;
      transform: rotate(90deg);
    }
    body.theme-dark .follow-box-close {
      background: #23272f;
      color: #fff;
      border-color: #1976d2;
    }
    body.theme-dark .follow-box-close:hover {
      background: #1976d2;
      color: #fff;
    }
    .follow-box-content {
      max-height: 400px;
      overflow-y: auto;
      padding-right: 0.5rem;
    }
    .follow-box-list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }
    .follow-box-item {
      padding: 0.8rem 1rem;
      border-radius: 10px;
      transition: all 0.2s ease;
      border: 2px solid #1976d2; /* plus visible */
      background: #e3f2fd;
      text-align: center; /* centrer le texte */
      margin-bottom: 0.7rem; /* espacement entre les items */
      box-shadow: 0 2px 8px rgba(25, 118, 210, 0.07);
    }
    body.theme-dark .follow-box-item {
      background: #23272f;
      border-color: #1976d2;
    }
    .follow-box-link {
      color: #1976d2;
      text-decoration: none;
      font-size: 1.1rem;
      transition: all 0.2s ease;
      display: block;
      text-align: center; /* centrer le texte */
      font-weight: 500;
      letter-spacing: 0.5px;
    }
    .follow-box-link:hover {
      color: #1565c0;
    }
  </style>
</head>
<body>
  @include('components/header')
  <div class="main-content">
    <div class="user-stats">
      <div class="stat-item">
        <span class="stat-label">Abonnés</span>
        <span class="stat-value" id="followers-link">{{ followersCount }}</span>
      </div>
      <div class="stat-item">
        <span class="stat-label">Abonnements</span>
        <span class="stat-value" id="following-link">{{ followingCount }}</span>
      </div>
      @if(authUser.id !== user.id)
      <form action="{{ isFollowing ? route('user.unfollow', { id: user.id }) : route('user.follow', { id: user.id }) }}" method="POST" style="margin:0;">
        {{ csrfField() }}
        <button type="submit" class="{{ isFollowing ? 'unfollow-btn' : 'follow-btn' }}">
          {{ isFollowing ? 'Se désabonner' : 'Suivre' }}
        </button>
      </form>
      @endif
    </div>
    <!-- Box survolante pour abonnés -->
    <div id="followers-box" class="follow-box">
      <div class="follow-box-header">
        <span class="follow-box-title">Abonnés ({{ followersCount }})</span>
        <button onclick="closeFollowersBox()" class="follow-box-close" aria-label="Fermer">×</button>
      </div>
      <div class="follow-box-content">
        @if(followersList && followersList.length)
          <ul class="follow-box-list">
            @each(f in followersList)
              <li class="follow-box-item">
                <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
              </li>
            @endeach
          </ul>
        @else
          <span>Aucun abonné.</span>
        @endif
      </div>
    </div>
    <!-- Box survolante pour abonnements -->
    <div id="following-box" class="follow-box">
      <div class="follow-box-header">
        <span class="follow-box-title">Abonnements ({{ followingCount }})</span>
        <button onclick="closeFollowingBox()" class="follow-box-close" aria-label="Fermer">×</button>
      </div>
      <div class="follow-box-content">
        @if(followingList && followingList.length)
          <ul class="follow-box-list">
            @each(f in followingList)
              <li class="follow-box-item">
                <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
              </li>
            @endeach
          </ul>
        @else
          <span>Aucun abonnement.</span>
        @endif
      </div>
    </div>
    <script>
      function showFollowBox(boxId) {
        const box = document.getElementById(boxId);
        box.style.display = 'block';
        setTimeout(() => {
          box.classList.add('active');
        }, 10);
      }
      function hideFollowBox(boxId) {
        const box = document.getElementById(boxId);
        box.classList.remove('active');
        setTimeout(() => {
          box.style.display = 'none';
        }, 300);
      }
      document.getElementById('followers-link').onclick = function(e) {
        e.stopPropagation();
        hideFollowBox('following-box');
        showFollowBox('followers-box');
      };
      document.getElementById('following-link').onclick = function(e) {
        e.stopPropagation();
        hideFollowBox('followers-box');
        showFollowBox('following-box');
      };
      function closeFollowersBox() {
        hideFollowBox('followers-box');
      }
      function closeFollowingBox() {
        hideFollowBox('following-box');
      }
      document.addEventListener('click', function(event) {
        const fb = document.getElementById('followers-box');
        const flb = document.getElementById('following-box');
        if (fb && fb.style.display === 'block' && !fb.contains(event.target) && event.target.id !== 'followers-link') {
          fb.style.display = 'none';
        }
        if (flb && flb.style.display === 'block' && !flb.contains(event.target) && event.target.id !== 'following-link') {
          flb.style.display = 'none';
        }
      });
    </script>
    <h1>Decks de {{ user.username }} : {{ publicDecks.length }}</h1>
    <div class="decks-container">
      <table>
        <thead>
          <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Cartes</th>
          </tr>
        </thead>
        <tbody>
          @if(publicDecks.length)
            @each(deck in publicDecks)
              <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                <td><a style="text-decoration: none; color: #1976d2" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                <td>{{ deck.description }}</td>
                <td>{{ deck.cards.length }}</td>
              </tr>
            @endeach
          @else
            <tr>
              <td colspan="3">Aucun deck public disponible.</td>
            </tr>
          @endif
        </tbody>
      </table>
    </div>
  </div>
  <a href="{{ route('decks.create') }}" class="add-deck-btn" title="Créer un nouveau deck">
    <span>+</span>
  </a>
</body>
</html>
