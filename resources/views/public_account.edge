<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Profil public de {{ user.username }}</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    /* Styles globaux home.edge */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    body {
      background: #fff;
      color: #222;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }
    body.theme-light {
      background: #fff;
      color: #222;
    }
    body.theme-dark {
      background: #0a0c10;
      color: #e0e0e0;
    }
    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
    }
    .user-stats {
      background: #fff;
      border: 2px solid #1976d2;
      box-shadow: 0 8px 30px rgba(25, 118, 210, 0.08);
      border-radius: 16px;
      padding: 1.5rem 2rem;
      margin: 0 auto 2.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 3rem;
      max-width: 600px;
      position: relative;
    }
    body.theme-dark .user-stats {
      background: #181c23;
      border-color: #1976d2;
      box-shadow: 0 8px 30px rgba(25, 118, 210, 0.08);
    }
    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
      padding: 0.5rem 1.5rem;
    }
    .stat-item:not(:last-child):after {
      content: '';
      position: absolute;
      right: -1.5rem;
      top: 50%;
      transform: translateY(-50%);
      height: 70%;
      width: 1px;
      background: linear-gradient(to bottom, transparent, #1976d2 60%, transparent);
    }
    .stat-label {
      font-size: 0.85rem;
      color: #1976d2;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 0.3rem;
    }
    .stat-value {
      font-size: 1.5rem;
      color: #1976d2;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }
    .stat-value:hover {
      color: #1565c0;
      transform: translateY(-2px);
    }
    .stat-value::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 100%;
      height: 2px;
      background: #1976d2;
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    .stat-value:hover::after {
      transform: scaleX(1);
    }
    .follow-btn, .unfollow-btn {
      position: relative;
      padding: 0.8rem 2rem;
      font-size: 0.95rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
      z-index: 1;
    }
    .follow-btn {
      background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(25, 118, 210, 0.12);
      border: 2px solid #1976d2;
    }
    .unfollow-btn {
      background: linear-gradient(135deg, #ff7676 0%, #ff9999 100%);
      color: #fff;
      box-shadow: 0 4px 15px rgba(255, 118, 118, 0.2);
      border: 2px solid #ff7676;
    }
    .follow-btn:hover, .unfollow-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(25, 118, 210, 0.18);
      opacity: 0.95;
    }
    .decks-container {
      width: 100%;
      margin: auto;
    }
    h1 {
      color: #1976d2;
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    table {
      width: 100%;
      text-align: left;
      background: #fff;
      border: 2px solid #1976d2;
      border-radius: 10px;
      overflow: hidden;
      margin-top: 2rem;
      box-shadow: 0 2px 10px rgba(25, 118, 210, 0.08);
    }
    body.theme-dark table {
      background: #181c23;
      border-color: #1976d2;
    }
    th, td {
      padding: 15px;
      border-bottom: 1px solid #1976d2;
    }
    th {
      font-size: 1.2rem;
      font-weight: bold;
      background: #e3f2fd;
      color: #1976d2;
      border-bottom: 2px solid #1976d2;
    }
    body.theme-dark th {
      background: #23272f;
      color: #1976d2;
    }
    td {
      font-size: 1.1rem;
    }
    tr:hover {
      cursor: pointer;
      background: #e3f2fd;
    }
    body.theme-dark tr:hover {
      background: #23272f;
    }
    .link-action {
      color: #1976d2;
      cursor: pointer;
    }
    .link-action:hover {
      color: #1565c0;
      opacity: 0.8;
    }
    .add-deck-btn {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: linear-gradient(135deg, #1976d2, #1565c0);
      color: white;
      border: none;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      font-size: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(25, 118, 210, 0.18);
      transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
      z-index: 100;
      text-decoration: none;
    }
    .add-deck-btn:hover {
      background: linear-gradient(135deg, #1565c0, #1976d2);
      box-shadow: 0 6px 24px rgba(25, 118, 210, 0.25);
      transform: scale(1.08);
    }
    .add-deck-btn span {
      margin-top: -2px;
    }
    /* Box survolante pour abonnés/abonnements */
    #followers-box, #following-box {
      display:none;
      position:fixed;
      top:110px;
      left:50%;
      transform:translateX(-50%);
      background:#fff;
      color:#1976d2;
      border:2px solid #1976d2;
      border-radius:12px;
      box-shadow:0 8px 32px rgba(25,118,210,0.10);
      padding:1.5rem 2rem 1.5rem 1.5rem;
      max-width:350px;
      z-index:9999;
    }
    body.theme-dark #followers-box, body.theme-dark #following-box {
      background: #23272f;
      color: #1976d2;
      border-color: #1976d2;
    }
    #followers-box button, #following-box button {
      background:none;
      border:none;
      color:#1976d2;
      font-size:1.3rem;
      cursor:pointer;
      position:absolute;
      top:8px;
      right:10px;
    }
    #followers-box ul, #following-box ul {
      margin:0 0 0 1.2rem; padding:0;
    }
    #followers-box a, #following-box a {
      color:#1976d2;
      text-decoration:underline;
    }
    #followers-box a:hover, #following-box a:hover {
      color:#1565c0;
    }
  </style>
</head>
<body>
  @include('components/header')
  <div class="main-content">
    <div class="user-stats">
      <div class="stat-item">
        <span class="stat-label">Abonnés</span>
        <span class="stat-value" id="followers-link">{{ followersCount }}</span>
      </div>
      <div class="stat-item">
        <span class="stat-label">Abonnements</span>
        <span class="stat-value" id="following-link">{{ followingCount }}</span>
      </div>
      @if(authUser.id !== user.id)
      <form action="{{ isFollowing ? route('user.unfollow', { id: user.id }) : route('user.follow', { id: user.id }) }}" method="POST" style="margin:0;">
        {{ csrfField() }}
        <button type="submit" class="{{ isFollowing ? 'unfollow-btn' : 'follow-btn' }}">
          {{ isFollowing ? 'Se désabonner' : 'Suivre' }}
        </button>
      </form>
      @endif
    </div>
    <!-- Box survolante pour abonnés -->
    <div id="followers-box">
      <button onclick="closeFollowersBox()" aria-label="Fermer">✖</button>
      <div style="font-size:1.2rem; margin-bottom:0.7rem;"><b>Abonnés ({{ followersCount }})</b></div>
      <div style="color:#1976d2; font-size:1rem; max-height:250px; overflow-y:auto;">
        @if(followersList && followersList.length)
        <ul>
          @each(f in followersList)
          <li>
            <a href="/public-account/{{ f.id }}">{{ f.username }}</a>
          </li>
          @endeach
        </ul>
        @else
        <span>Aucun abonné.</span>
        @endif
      </div>
    </div>
    <!-- Box survolante pour abonnements -->
    <div id="following-box">
      <button onclick="closeFollowingBox()" aria-label="Fermer">✖</button>
      <div style="font-size:1.2rem; margin-bottom:0.7rem;"><b>Abonnements ({{ followingCount }})</b></div>
      <div style="color:#1976d2; font-size:1rem; max-height:250px; overflow-y:auto;">
        @if(followingList && followingList.length)
        <ul>
          @each(f in followingList)
          <li>
            <a href="/public-account/{{ f.id }}">{{ f.username }}</a>
          </li>
          @endeach
        </ul>
        @else
        <span>Aucun abonnement.</span>
        @endif
      </div>
    </div>
    <script>
      document.getElementById('followers-link').onclick = function(e) {
        e.stopPropagation();
        document.getElementById('followers-box').style.display = 'block';
        document.getElementById('following-box').style.display = 'none';
      };
      document.getElementById('following-link').onclick = function(e) {
        e.stopPropagation();
        document.getElementById('following-box').style.display = 'block';
        document.getElementById('followers-box').style.display = 'none';
      };
      function closeFollowersBox() {
        document.getElementById('followers-box').style.display = 'none';
      }
      function closeFollowingBox() {
        document.getElementById('following-box').style.display = 'none';
      }
      document.addEventListener('click', function(event) {
        // Fermer les box si clic en dehors
        const fb = document.getElementById('followers-box');
        const flb = document.getElementById('following-box');
        if (fb && fb.style.display === 'block' && !fb.contains(event.target) && event.target.id !== 'followers-link') {
          fb.style.display = 'none';
        }
        if (flb && flb.style.display === 'block' && !flb.contains(event.target) && event.target.id !== 'following-link') {
          flb.style.display = 'none';
        }
      });
    </script>
    <h1>Decks de {{ user.username }} : {{ publicDecks.length }}</h1>
    <div class="decks-container">
      <table>
        <thead>
          <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Cartes</th>
          </tr>
        </thead>
        <tbody>
          @if(publicDecks.length)
            @each(deck in publicDecks)
              <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                <td><a style="text-decoration: none; color: #1976d2" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                <td>{{ deck.description }}</td>
                <td>{{ deck.cards.length }}</td>
              </tr>
            @endeach
          @else
            <tr>
              <td colspan="3">Aucun deck public disponible.</td>
            </tr>
          @endif
        </tbody>
      </table>
    </div>
  </div>
  <a href="{{ route('decks.create') }}" class="add-deck-btn" title="Créer un nouveau deck">
    <span>+</span>
  </a>
</body>
</html>
