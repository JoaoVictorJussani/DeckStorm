<style>
  /* Styles globaux */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Style du corps */
  body {
    background: #000;
    color: #e0e0e0;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    font-size: 1rem;
  }

  /* Barre de navigation */
  .header-navbar {
    width: 100%;
    height: 80px;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #000;
    border-bottom: 2px solid #00adb5;
    color: white;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
  }

  .header-navbar h2 {
    font-size: 1.8rem;
    font-weight: 700;
  }

  .header-navbar button {
    background: #00adb5;
    color: white;
    border: 2px solid #00adb5;
    padding: 0.7rem 1.2rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    transition: background 0.3s ease;
  }

  .header-navbar button:hover {
    background: #008c95;
  }

  .header-navbar a {
    text-decoration: none;
    color: #00adb5;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .header-navbar img {
    height: 36px;
    width: 36px;
    margin-right: 0.7rem;
    vertical-align: middle;
  }

  /* Dropdown styles */
  .header-dropdown {
    position: relative;
    display: inline-block;
  }
  .header-dropdown-toggle {
    background: #00adb5;
    color: white;
    border: 2px solid #00adb5;
    padding: 0.7rem 1.2rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    transition: background 0.3s ease;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .header-dropdown-toggle:hover, .header-dropdown-toggle:focus {
    background: #008c95;
    color: #fff;
  }
  .header-dropdown-menu {
    display: none;
    position: absolute;
    right: 0;
    background: #222;
    min-width: 180px;
    box-shadow: 0 2px 10px rgba(0,173,181,0.15);
    border: 1px solid #00adb5;
    border-radius: 8px;
    z-index: 100;
    margin-top: 0.5rem;
    padding: 0.5rem 0;
  }
  .header-dropdown.open .header-dropdown-menu {
    display: block;
  }
  .header-dropdown-menu a, .header-dropdown-menu button {
    display: block;
    width: 100%;
    background: none;
    border: none;
    color: #00adb5;
    text-align: left;
    padding: 0.7rem 1.2rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    border-radius: 6px;
    transition: background 0.2s, color 0.2s;
    text-decoration: none;
  }
  .header-dropdown-menu a:hover, .header-dropdown-menu button:hover {
    background: #00adb5;
    color: #000;
  }
  .header-logout-btn {
    color: #ff4d4d;
  }
  .header-logout-btn:hover {
    background: #ff4d4d !important;
    color: #000;
  }
</style>

<div class="header-navbar">
  <a href="{{ route('home') }}"><img src="/images/icone.ico">DeckStorm</a>
  <div style="display: flex; align-items: center; gap: 1rem;">
    <!-- Ic√¥ne id√©e -->
    <button id="idea-btn" title="Aide et tutoriel" style="background: none; border: none; cursor: pointer; font-size: 1.8rem; color: #00adb5; padding: 0;">
      üí°
    </button>
    <span>Bienvenue {{ user?.username }}</span>
    <div class="header-dropdown" id="header-userDropdown">
      <button class="header-dropdown-toggle" onclick="headerToggleDropdown()" aria-haspopup="true" aria-expanded="false" title="Afficher les options du compte">
        <span>‚ñº</span>
      </button>
      <div class="header-dropdown-menu" id="header-dropdownMenu">
        <a href="/account/{{ user?.id }}" title="Voir et g√©rer votre profil et vos decks">Mon compte</a>
        <form action="/logout" method="POST" style="margin:0;">
          {{ csrfField() }}
          <button type="submit" class="header-logout-btn" title="Se d√©connecter du site">Se d√©connecter</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Box survolante d'aide -->
<div id="idea-box" style="display:none; position:fixed; top:90px; right:30px; background:#222; color:#00adb5; border:2px solid #00adb5; border-radius:12px; box-shadow:0 8px 32px rgba(0,0,0,0.25); padding:1.5rem 2rem 1.5rem 1.5rem; max-width:350px; z-index:9999;">
  <button onclick="closeIdeaBox()" style="position:absolute; top:8px; right:10px; background:none; border:none; color:#00adb5; font-size:1.3rem; cursor:pointer;" aria-label="Fermer">‚úñ</button>
  <div style="font-size:1.2rem; margin-bottom:0.7rem;"><b>Astuce DeckStorm</b></div>
  <div style="color:#e0e0e0; font-size:1rem;">
    <ul style="margin:0 0 0 1.2rem; padding:0;">
      <li>Cr√©ez, modifiez et partagez vos decks facilement.</li>
      <li>Utilisez <b>Exercer</b> pour r√©viser vos cartes.</li>
      <li>Ajoutez des cartes avec des questions claires.</li>
      <li>Partagez vos decks publics avec le QR code ou le lien.</li>
      <li>Survolez les boutons pour plus d'infos.</li>
    </ul>
  </div>
</div>

<script>
  function headerToggleDropdown() {
    document.getElementById('header-userDropdown').classList.toggle('open');
  }
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('header-userDropdown');
    if (!dropdown.contains(event.target)) {
      dropdown.classList.remove('open');
    }
    // Fermer la box id√©e si clic en dehors
    const ideaBox = document.getElementById('idea-box');
    const ideaBtn = document.getElementById('idea-btn');
    if (ideaBox && ideaBox.style.display === 'block' && !ideaBox.contains(event.target) && event.target !== ideaBtn) {
      ideaBox.style.display = 'none';
    }
  });

  // Afficher/masquer la box id√©e
  document.getElementById('idea-btn').onclick = function(e) {
    e.stopPropagation();
    const box = document.getElementById('idea-box');
    box.style.display = box.style.display === 'block' ? 'none' : 'block';
  };
  function closeIdeaBox() {
    document.getElementById('idea-box').style.display = 'none';
  }
</script>
