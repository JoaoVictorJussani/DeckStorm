      <li>Survolez les boutons pour plus d'infos.</li>
    </ul>
  </div>
</div>

<script>
  function headerToggleDropdown() {
    document.getElementById('header-userDropdown').classList.toggle('open');
  }
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('header-userDropdown');
    if (!dropdown.contains(event.target)) {
      dropdown.classList.remove('open');
    }
    // Fermer la box id√©e si clic en dehors
    const ideaBox = document.getElementById('idea-box');
    const ideaBtn = document.getElementById('idea-btn');
    if (ideaBox && ideaBox.style.display === 'block' && !ideaBox.contains(event.target) && event.target !== ideaBtn) {
      ideaBox.style.display = 'none';
    }
  });

  // Afficher/masquer la box id√©e
  document.getElementById('idea-btn').onclick = function(e) {
    e.stopPropagation();
    const box = document.getElementById('idea-box');
    box.style.display = box.style.display === 'block' ? 'none' : 'block';
  };
  function closeIdeaBox() {
    document.getElementById('idea-box').style.display = 'none';
  }

  // Fonction de recherche dynamique
  function headerSearchDecks(event) {
    const input = document.getElementById('headerSearch');
    const query = input.value.trim();

    if(event.key === 'Enter' && query.length > 0) {
      window.location.href = '/deck/search?q=' + encodeURIComponent(query);
    }
  }
</script>
