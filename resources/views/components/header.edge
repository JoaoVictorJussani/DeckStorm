<script>
  function headerToggleDropdown() {
    document.getElementById('header-userDropdown').classList.toggle('open');
  }
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('header-userDropdown');
    if (dropdown && !dropdown.contains(event.target)) {
      dropdown.classList.remove('open');
    }
    // Fermer la box idÃ©e si clic en dehors
    const ideaBox = document.getElementById('idea-box');
    const ideaBtn = document.getElementById('idea-btn');
    if (ideaBox && ideaBox.style.display === 'block' && !ideaBox.contains(event.target) && event.target !== ideaBtn) {
      ideaBox.style.display = 'none';
    }
    // Fermer dropdown de notifications si clic en dehors (mais PAS si clic sur la cloche ou le menu)
    const notifDropdown = document.getElementById('notif-dropdown');
    const notifBell = document.getElementById('notif-bell');
    if (
      notifDropdown &&
      notifDropdown.style.display === 'block' &&
      !notifDropdown.contains(event.target) &&
      event.target !== notifBell
    ) {
      notifDropdown.style.display = 'none';
    }
  });

  // Afficher/masquer la box idÃ©e
  document.getElementById('idea-btn').onclick = function(e) {
    e.stopPropagation();
    const box = document.getElementById('idea-box');
    box.style.display = box.style.display === 'block' ? 'none' : 'block';
  };
  function closeIdeaBox() {
    document.getElementById('idea-box').style.display = 'none';
  }

  // Fonction de recherche dynamique
  function headerSearchDecks(event) {
    const input = document.getElementById('headerSearch');
    const query = input.value.trim();

    if(event.key === 'Enter' && query.length > 0) {
      window.location.href = '/deck/search?q=' + encodeURIComponent(query);
    }
  }

  // Theme switch logic
  function setTheme(theme) {
    document.body.classList.remove('theme-light', 'theme-dark');
    document.body.classList.add(theme);
    localStorage.setItem('theme', theme);
    var input = document.getElementById('themeSwitch');
    if (input) {
      input.checked = theme === 'theme-dark';
    }
  }
  function toggleTheme() {
    var isDark = document.getElementById('themeSwitch').checked;
    setTheme(isDark ? 'theme-dark' : 'theme-light');
  }

  // InicializaÃ§Ã£o do tema ao carregar
  document.addEventListener('DOMContentLoaded', function() {
    let theme = localStorage.getItem('theme');
    if (!theme) {
      theme = 'theme-light';
    }
    setTheme(theme);
    // Corrige o estado do switch se o usuÃ¡rio navegar entre pÃ¡ginas
    var input = document.getElementById('themeSwitch');
    if (input) {
      input.onchange = toggleTheme;
      // Garante que o switch estÃ¡ correto conforme o fundo
      input.checked = document.body.classList.contains('theme-dark');
    }

    // Affichage du dot selon notifications et sessionStorage
    const dot = document.getElementById('notif-dot');
    const notificationsCount = {{ notifications?.length || 0 }};
    if (dot) {
      if (notificationsCount > 0 && !sessionStorage.getItem('notifDotHidden')) {
        dot.style.display = 'block';
      } else {
        dot.style.display = 'none';
      }
      if (notificationsCount === 0) {
        sessionStorage.removeItem('notifDotHidden');
      }
    }
  });

  function colorNotifLis() {
    // Coloration des notifications jamais vues en bleu clair
    let seenIds = [];
    try {
      seenIds = JSON.parse(localStorage.getItem('seenNotifIds') || '[]');
    } catch {}
    const notifLis = document.querySelectorAll('#notif-dropdown li[data-notif-id]');
    notifLis.forEach(li => {
      const id = parseInt(li.getAttribute('data-notif-id'));
      if (!seenIds.includes(id)) {
        li.style.background = '#e3f2fd';
      } else {
        li.style.background = '#fff';
      }
    });
  }

  function toggleNotifDropdown() {
    const dd = document.getElementById('notif-dropdown');
    const isOpen = dd.style.display === 'block';
    dd.style.display = isOpen ? 'none' : 'block';
    if (!isOpen) {
      // Affiche le menu, applique la coloration
      colorNotifLis();
      // Retire le point rouge aprÃ¨s ouverture et marque comme "vu" dans sessionStorage
      const dot = document.getElementById('notif-dot');
      if (dot) {
        dot.style.display = 'none';
        sessionStorage.setItem('notifDotHidden', '1');
      }
      // Marquer toutes les notifications affichÃ©es comme "vues" dans localStorage
      const notifLis = dd.querySelectorAll('li[data-notif-id]');
      let seenIds = JSON.parse(localStorage.getItem('seenNotifIds') || '[]');
      notifLis.forEach(li => {
        const id = parseInt(li.getAttribute('data-notif-id'));
        if (!seenIds.includes(id)) seenIds.push(id);
      });
      localStorage.setItem('seenNotifIds', JSON.stringify(seenIds));
      // Mettre Ã  jour le fond des notifications
      notifLis.forEach(li => {
        li.style.background = '#fff';
      });
    }
  }
</script>
