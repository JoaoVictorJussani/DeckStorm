<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Résultats</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    p {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    button {
      background: #00adb5;
      color: #000;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
      margin: 10px;
    }

    button:hover {
      background: #008c95;
      color: white;
    }

    table {
      width: 80%;
      max-width: 600px;
      margin: 1.5rem auto;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #00adb5;
      padding: 0.5rem;
      text-align: left;
    }

    th {
      background: #00adb5;
      color: #000;
    }

    tr:nth-child(even) {
      background: #111;
    }

    h2 {
      margin-top: 2rem;
      color: #ff4d4d;
      text-align: center;
    }
  </style>
</head>
<body>
  <h1>Résultats pour le deck "{{ deck.title }}"</h1>
  @if (mode === 'chronometre')
    <p>Temps écoulé : {{ Math.floor((elapsedTime || 0) / 60) }}m {{ (elapsedTime || 0) % 60 }}s</p>
  @endif
  <p>Score : {{ (results || []).length }} sur {{ deck.cards?.length || 0 }} cartes correctes</p>

  @if (incorrectCards && incorrectCards.length)
    <h2>Cartes ratées</h2>
    <table>
      <thead>
        <tr>
          <th>Question</th>
          <th>Réponse</th>
        </tr>
      </thead>
      <tbody>
        @each(card in incorrectCards)
          <tr>
            <td>{{ card.question }}</td>
            <td>{{ card.answer }}</td>
          </tr>
        @endeach
      </tbody>
    </table>
  @endif

  @if (mode === 'jusquaubout' && incorrectCards && incorrectCards.length)
    <form action="{{ route('exercise.presentQuestion', { deckId: deck.id, questionIndex: 0 }) }}" method="GET">
      <input type="hidden" name="mode" value="jusquaubout" />
      @each(card in incorrectCards)
        <input type="hidden" name="retryCardIds" value="{{ card.id }}" />
      @endeach
      <input type="hidden" name="startTime" value="{{ Date.now() }}" />
      <input type="hidden" name="results" value="[]" />
      <button type="submit">Continuer</button>
    </form>
  @else
    <form action="{{ route('home') }}" method="GET">
      <button type="submit">OK</button>
    </form>
  @endif
</body>
</html>
