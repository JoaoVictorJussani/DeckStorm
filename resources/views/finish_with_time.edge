<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Résultats</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    p {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    button {
      background: #00adb5;
      color: #000;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
      margin: 10px;
    }

    button:hover {
      background: #008c95;
      color: white;
    }

    table {
      width: 80%;
      max-width: 600px;
      margin: 1.5rem auto;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #00adb5;
      padding: 0.5rem;
      text-align: left;
    }

    th {
      background: #00adb5;
      color: #000;
    }

    tr:nth-child(even) {
      background: #111;
    }

    h2 {
      margin-top: 2rem;
      color: #ff4d4d;
      text-align: center;
    }
    
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin-top: 20px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
      justify-content: space-between;
    }

    .navbar a {
      color: #00adb5;
      text-decoration: none;
      font-size: 1.5rem;
      font-weight: 700;
      display: flex;
      align-items: center;
    }

    .navbar img {
      width: 40px;
      height: 40px;
      margin-right: 10px;
    }

    .spacer {
      height: 80px;
    }

    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      background-color: #111;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    .dropdown-menu a {
      color: #00adb5;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }

    .dropdown-menu a:hover {
      background-color: #575757;
    }

    .dropdown.open .dropdown-menu {
      display: block;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="{{ route('home') }}"><img src="/images/icone.ico">DeckStorm</a>
    <div>
      <span>Bienvenue {{ user?.username }}</span>
      <div class="dropdown" id="userDropdown">
        <button class="dropdown-toggle" onclick="toggleDropdown()" aria-haspopup="true" aria-expanded="false">
          <span>▼</span>
        </button>
        <div class="dropdown-menu" id="dropdownMenu">
          <a href="/account/{{ user?.id }}">Mon compte</a>
          <form action="/logout" method="POST" style="margin:0;">
            {{ csrfField() }}
            <button type="submit" class="logout-btn">Se déconnecter</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="spacer"></div>
  <h1>Résultats pour le deck "{{ deck.title }}"</h1>
  @if (mode === 'chronometre')
    <p>Temps écoulé : {{ Math.floor((elapsedTime || 0) / 60) }}m {{ (elapsedTime || 0) % 60 }}s</p>
  @endif
  @if (incorrectCards.length === 0 && mode !== 'jusquaubout' || mode === 'chronometre' || mode === 'basique')
    <p>Score : {{ (results || []).length }} sur {{ deck.cards?.length || 0 }} cartes correctes</p>
  @endif

  @if (mode === 'jusquaubout' && incorrectCards.length === 0)
    <p>Vous avez réussi en {{ attempts || 1 }} passage{{ (attempts || 1) > 1 ? 's' : '' }}</p>
  @endif

  @if (incorrectCards && incorrectCards.length)
    <h2>Cartes ratées</h2>
    <table>
      <thead>
        <tr>
          <th>Question</th>
          <th>Réponse</th>
        </tr>
      </thead>
      <tbody>
        @each(card in incorrectCards)
          <tr>
            <td>{{ card.question }}</td>
            <td>{{ card.answer }}</td>
          </tr>
        @endeach
      </tbody>
    </table>
  @endif

  @if (mode === 'jusquaubout' && incorrectCards && incorrectCards.length)
    <form action="{{ route('exercise.presentQuestion', { deckId: deck.id, questionIndex: 0 }) }}" method="GET">
      <input type="hidden" name="mode" value="jusquaubout" />
      <input type="hidden" name="direction" value="{{ direction }}" />
      @each(card in incorrectCards)
        <input type="hidden" name="retryCardIds" value="{{ card.id }}" />
      @endeach
      <input type="hidden" name="startTime" value="{{ Date.now() }}" />
      <input type="hidden" name="results" value="[]" />
      <input type="hidden" name="attempts" value="{{ attempts || 1 }}" />
      <button type="submit">Continuer</button>
      <button type="button" class="abandon-button" onclick="window.location.href='{{ route('home') }}'">Abandonner</button>
    </form>
  @else
    <form action="{{ route('home') }}" method="GET">
      <button type="submit">OK</button>
    </form>
  @endif
  <script>
    function toggleDropdown() {
      document.getElementById('userDropdown').classList.toggle('open');
    }
    document.addEventListener('click', function(event) {
      const dropdown = document.getElementById('userDropdown');
      if (!dropdown.contains(event.target)) {
        dropdown.classList.remove('open');
      }
    });
  </script>
</body>
</html>
