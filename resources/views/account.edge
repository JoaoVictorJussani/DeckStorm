<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Mon compte</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    :root {
      --primary-color: #6c8947;
      --bg-dark: #0a0c10;
      --bg-light: #111;
      --text-light: #e0e0e0;
      --transition: all 0.3s ease-in-out;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Inter', 'Segoe UI', sans-serif;
    }

    body {
      background: var(--bg-dark);
      color: var(--text-light);
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
      line-height: 1.6;
    }

    .main-content {
      margin-top: 100px;
      padding: 2rem;
      width: 100%;
      max-width: 1400px;
      display: grid;
      grid-template-columns: minmax(300px, 1fr) minmax(600px, 2fr);
      gap: 2rem;
    }

    .profile-section {
      background: linear-gradient(145deg, var(--bg-light) 0%, rgba(17, 17, 17, 0.95) 100%);
      border: 1px solid rgba(108, 137, 71, 0.2);
      border-radius: 16px;
      padding: 2.5rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(10px);
      transition: var(--transition);
    }

    .profile-section:hover {
      border-color: var(--primary-color);
      transform: translateY(-2px);
      box-shadow: 0 8px 30px rgba(108, 137, 71, 0.1);
    }

    .profile-section h2 {
      color: var(--primary-color);
      font-size: 2rem;
      margin-bottom: 2.5rem;
      font-weight: 600;
      letter-spacing: -0.5px;
      position: relative;
      padding-bottom: 0.8rem;
    }

    .profile-section h2::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 3px;
      background: var(--primary-color);
      border-radius: 2px;
    }

    .profile-info-row {
      margin-bottom: 1.5rem;
      padding: 1rem 1.2rem;
      background: rgba(108, 137, 71, 0.05);
      border-radius: 12px;
      transition: var(--transition);
      border: 1px solid transparent;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .profile-info-row:hover {
      background: rgba(108, 137, 71, 0.08);
      border-color: rgba(108, 137, 71, 0.2);
      transform: translateX(5px);
    }

    .profile-label {
      color: var(--primary-color);
      font-weight: 500;
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      opacity: 0.9;
    }

    .profile-value {
      color: var(--text-light);
      font-size: 1.1rem;
      font-family: 'JetBrains Mono', monospace;
      padding: 0.3rem 0.8rem;
      background: rgba(108, 137, 71, 0.1);
      border-radius: 6px;
      min-width: 100px;
      text-align: center;
    }

    .change-password-btn {
      width: 100%;
      background: transparent;
      color: var(--primary-color);
      border: 2px solid var(--primary-color);
      padding: 1rem 1.5rem;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      margin-top: 1rem;
      letter-spacing: 0.5px;
      text-transform: uppercase;
    }

    .change-password-btn:hover {
      background: var(--primary-color);
      color: var(--bg-dark);
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(108, 137, 71, 0.2);
    }

    .change-password-btn:active {
      transform: translateY(0);
    }

    .change-password-form {
      margin-top: 1rem;
      width: 100%;
      display: none;
      flex-direction: column;
      gap: 0.7rem;
    }

    .change-password-form input {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 0.8rem;
      border-radius: 8px;
      border: 1px solid rgba(108, 137, 71, 0.3);
      background: var(--bg-dark);
      color: var(--text-light);
      transition: var(--transition);
    }

    .change-password-form input:focus {
      border-color: var(--primary-color);
      outline: none;
      box-shadow: 0 0 0 2px rgba(108, 137, 71, 0.2);
    }

    .change-password-form button {
      background: #6c8947;
      color: #000;
      border: 2px solid #6c8947;
      padding: 0.6rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      margin-top: 0.5rem;
      transition: background 0.3s, color 0.3s;
    }
    .change-password-form button:hover {
      background: var(--primary-color);
      color: var(--bg-dark);
      border-color: var(--primary-color);
    }

    .profile-message {
      margin-top: 1rem;
      padding: 0.7rem 1rem;
      border-radius: 6px;
      font-size: 1rem;
      text-align: left;
      width: 100%;
    }
    .profile-message.success {
      background: #4caf50;
      color: #fff;
    }
    .profile-message.error {
      background: #ff4d4d;
      color: #fff;
    }
    .decks-section {
      background: var(--bg-light);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    /* Styles pour la barre de recherche */
    .search-container {
      width: 100%;
      margin-bottom: 2rem;
    }

    .search-input {
      width: 100%;
      padding: 1rem 1.5rem;
      font-size: 1rem;
      border: 1px solid rgba(108, 137, 71, 0.2);
      border-radius: 12px;
      background: var(--bg-dark);
      color: var(--text-light);
      margin-bottom: 2rem;
      transition: var(--transition);
    }

    .search-input:focus {
      border-color: var(--primary-color);
      outline: none;
      box-shadow: 0 0 0 2px rgba(108, 137, 71, 0.2);
    }

    .search-input::placeholder {
      color: #666;
    }

    .decks-container {
      width: 95%;
      max-width: 1200px;
      margin: auto;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      border-radius: 12px;
      overflow: hidden;
      background: var(--bg-dark);
      border: 1px solid rgba(108, 137, 71, 0.2);
    }

    th {
      background: rgba(108, 137, 71, 0.1);
      color: var(--primary-color);
      font-size: 1.1rem;
      font-weight: 600;
      padding: 1rem;
      text-align: left;
    }

    td {
      padding: 1rem;
      border-top: 1px solid rgba(108, 137, 71, 0.1);
      transition: var(--transition);
    }

    tr:hover td {
      background: rgba(108, 137, 71, 0.05);
    }

    /* Styles pour les boxes survolantes */
    .follow-box {
      display: none;
      position: fixed;
      top: 110px;
      left: 50%;
      transform: translateX(-50%) scale(0.95);
      background: linear-gradient(135deg, rgba(17, 17, 17, 0.95) 0%, rgba(10, 12, 16, 0.98) 100%);
      color: var(--primary-color);
      border: 1px solid rgba(108, 137, 71, 0.3);
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3),
                  0 0 0 1px rgba(108, 137, 71, 0.1);
      backdrop-filter: blur(10px);
      padding: 1.8rem;
      width: 90%;
      max-width: 400px;
      z-index: 9999;
      opacity: 0;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .follow-box.active {
      transform: translateX(-50%) scale(1);
      opacity: 1;
    }

    .follow-box-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid rgba(108, 137, 71, 0.2);
    }

    .follow-box-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--primary-color);
      letter-spacing: -0.5px;
    }

    .follow-box-close {
      background: rgba(108, 137, 71, 0.1);
      border: 1px solid rgba(108, 137, 71, 0.2);
      color: var(--primary-color);
      font-size: 1.2rem;
      cursor: pointer;
      padding: 0.4rem;
      border-radius: 12px;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
    }

    .follow-box-close:hover {
      background: var(--primary-color);
      color: var(--bg-dark);
      transform: rotate(90deg);
    }

    .follow-box-content {
      max-height: 400px;
      overflow-y: auto;
      padding-right: 0.5rem;
    }

    .follow-box-content::-webkit-scrollbar {
      width: 6px;
    }

    .follow-box-content::-webkit-scrollbar-track {
      background: rgba(108, 137, 71, 0.05);
      border-radius: 10px;
    }

    .follow-box-content::-webkit-scrollbar-thumb {
      background: rgba(108, 137, 71, 0.3);
      border-radius: 10px;
    }

    .follow-box-list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .follow-box-item {
      padding: 0.8rem 1rem;
      border-radius: 10px;
      transition: all 0.2s ease;
      border: 1px solid transparent;
      background: rgba(108, 137, 71, 0.05);
    }

    .follow-box-item:hover {
      background: rgba(108, 137, 71, 0.1);
      border-color: rgba(108, 137, 71, 0.2);
      transform: translateX(5px);
    }

    .follow-box-link {
      color: var(--text-light);
      text-decoration: none;
      font-size: 1.1rem;
      transition: all 0.2s ease;
      display: block;
    }

    .follow-box-link:hover {
      color: var(--primary-color);
    }

    .add-deck-btn {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: linear-gradient(135deg, #6c8947, #7b995c);
      color: white;
      border: none;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      font-size: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(108, 137, 71, 0.4);
      transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
      z-index: 100;
      text-decoration: none;
    }
    .add-deck-btn:hover {
      background: linear-gradient(135deg, #7b995c, #6c8947);
      box-shadow: 0 6px 24px rgba(108, 137, 71, 0.5);
      transform: scale(1.08);
    }
    .add-deck-btn span {
      margin-top: -2px;
    }

    @media (max-width: 1024px) {
      .main-content {
        grid-template-columns: 1fr;
      }
      
      .profile-section {
        max-width: 600px;
        margin: 0 auto;
      }
    }
  </style>
</head>
<body>
  @include('components/header')
  <div class="main-content">
    <!-- 1/3 : Section profil utilisateur -->
    <div class="profile-section">
      <h2>Mon profil</h2>
      <div class="profile-info-row">
        <span class="profile-label">Nom d'utilisateur :</span>
        <span class="profile-value">{{ user.username }}</span>
      </div>
      <div class="profile-info-row">
        <span class="profile-label">AbonnÃ©s :</span>
        <span class="profile-value" id="followers-link" style="cursor:pointer; text-decoration:underline;">
          {{ followersCount }}
        </span>
      </div>
      <div class="profile-info-row">
        <span class="profile-label">Abonnements :</span>
        <span class="profile-value" id="following-link" style="cursor:pointer; text-decoration:underline;">
          {{ followingCount }}
        </span>
      </div>
      <div class="profile-info-row">
        <span class="profile-label">Mot de passe :</span>
        <span class="profile-value">
          ********
        </span>
      </div>
      <button class="change-password-btn" onclick="toggleChangePasswordForm()">Changer le mot de passe</button>
      <form id="changePasswordForm" class="change-password-form" action="/account/{{ user.id }}/change-password" method="POST" style="display:none;">
        {{ csrfField() }}
        <input type="password" name="old_password" placeholder="Ancien mot de passe" required />
        <input type="password" name="new_password" placeholder="Nouveau mot de passe" required minlength="8" />
        <input type="password" name="confirm_new_password" placeholder="Confirmer le nouveau mot de passe" required minlength="8" />
        <button type="submit">Valider</button>
      </form>
      @if(flashMessages.has('profile_success'))
        <div class="profile-message success">{{ flashMessages.get('profile_success') }}</div>
      @endif
      @if(flashMessages.has('profile_error'))
        <div class="profile-message error">{{ flashMessages.get('profile_error') }}</div>
      @endif
    </div>
    <!-- 2/3 : Section decks utilisateur -->
    <div class="decks-section">
      <h1>
        Mes decks : 
        <span id="deckCount">{{ userDecks.length }}</span>
      </h1>
      <div class="decks-container">
        <div class="search-container">
          <input 
            type="text" 
            id="deckSearch" 
            class="search-input" 
            placeholder="Rechercher dans mes decks..."
            onkeyup="searchDecks()"
          >
        </div>
        <table>
          <thead>
            <tr>
              <th>Titre</th>
              <th>Description</th>
              <th>Cartes</th>
              <th>VisibilitÃ©</th>
            </tr>
          </thead>
          <tbody id="decksTableBody">
            @if(userDecks.length)
              @each(deck in userDecks)
                <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                  <td><a style="text-decoration: none; color: white" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                  <td>{{ deck.description }}</td>
                  <td>{{ deck.cards.length }}</td>
                  <td>
                    <span title="{{ deck.visibility === 'public' ? 'Public' : 'PrivÃ©' }}">
                      {{ deck.visibility === 'public' ? 'ðŸ”“' : 'ðŸ”’' }}
                    </span>
                  </td>
                </tr>
              @endeach
            @else
              <tr>
                <td colspan="4">Aucun deck disponible.</td>
              </tr>
            @endif
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Box survolante pour abonnÃ©s -->
  <div id="followers-box" class="follow-box">
    <div class="follow-box-header">
      <span class="follow-box-title">AbonnÃ©s</span>
      <button onclick="closeFollowersBox()" class="follow-box-close" aria-label="Fermer">Ã—</button>
    </div>
    <div class="follow-box-content">
      @if(followersList && followersList.length)
        <ul class="follow-box-list">
          @each(f in followersList)
            <li class="follow-box-item">
              <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
            </li>
          @endeach
        </ul>
      @else
        <span>Aucun abonnÃ©.</span>
      @endif
    </div>
  </div>

  <!-- Box survolante pour abonnements -->
  <div id="following-box" class="follow-box">
    <div class="follow-box-header">
      <span class="follow-box-title">Abonnements</span>
      <button onclick="closeFollowingBox()" class="follow-box-close" aria-label="Fermer">Ã—</button>
    </div>
    <div class="follow-box-content">
      @if(followingList && followingList.length)
        <ul class="follow-box-list">
          @each(f in followingList)
            <li class="follow-box-item">
              <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
            </li>
          @endeach
        </ul>
      @else
        <span>Aucun abonnement.</span>
      @endif
    </div>
  </div>
  <a href="{{ route('decks.create') }}" class="add-deck-btn" title="CrÃ©er un nouveau deck">
    <span>+</span>
  </a>
  <script>
    function toggleChangePasswordForm() {
      const form = document.getElementById('changePasswordForm');
      form.style.display = form.style.display === 'none' ? 'flex' : 'none';
    }
    function showFollowBox(boxId) {
      const box = document.getElementById(boxId);
      box.style.display = 'block';
      // Petit dÃ©lai pour permettre l'animation
      setTimeout(() => {
        box.classList.add('active');
      }, 10);
    }

    function hideFollowBox(boxId) {
      const box = document.getElementById(boxId);
      box.classList.remove('active');
      // Attendre la fin de l'animation avant de cacher
      setTimeout(() => {
        box.style.display = 'none';
      }, 300);
    }

    document.getElementById('followers-link').onclick = function(e) {
      e.stopPropagation();
      hideFollowBox('following-box');
      showFollowBox('followers-box');
    };
    document.getElementById('following-link').onclick = function(e) {
      e.stopPropagation();
      hideFollowBox('followers-box');
      showFollowBox('following-box');
    };
    function closeFollowersBox() {
      hideFollowBox('followers-box');
    }
    function closeFollowingBox() {
      hideFollowBox('following-box');
    }
    document.addEventListener('click', function(event) {
      // Fermer les box si clic en dehors
      const fb = document.getElementById('followers-box');
      const flb = document.getElementById('following-box');
      if (fb && fb.style.display === 'block' && !fb.contains(event.target) && event.target.id !== 'followers-link') {
        fb.style.display = 'none';
      }
      if (flb && flb.style.display === 'block' && !flb.contains(event.target) && event.target.id !== 'following-link') {
        flb.style.display = 'none';
      }
    });

    function searchDecks() {
      const input = document.getElementById('deckSearch');
      const filter = input.value.toLowerCase();
      const tbody = document.getElementById('decksTableBody');
      const rows = tbody.getElementsByTagName('tr');
      let visibleCount = 0;

      for (let row of rows) {
        const titleCell = row.getElementsByTagName('td')[0];
        const descriptionCell = row.getElementsByTagName('td')[1];
        
        if (titleCell && descriptionCell) {
          const title = titleCell.textContent || titleCell.innerText;
          const description = descriptionCell.textContent || descriptionCell.innerText;
          
          if (title.toLowerCase().indexOf(filter) > -1 || description.toLowerCase().indexOf(filter) > -1) {
            row.style.display = '';
            visibleCount++;
          } else {
            row.style.display = 'none';
          }
        }
      }
      // Met Ã  jour dynamiquement le nombre de decks affichÃ©s
      document.getElementById('deckCount').textContent = visibleCount;
    }
  </script>
</body>
</html>
