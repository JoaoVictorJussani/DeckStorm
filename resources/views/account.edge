<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Mon compte</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }

    /* Dropdown styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-toggle {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .dropdown-toggle:hover, .dropdown-toggle:focus {
      background: #008c95;
      color: #fff;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #00adb5;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
      padding: 0.5rem 0;
    }
    .dropdown.open .dropdown-menu {
      display: block;
    }
    .dropdown-menu a, .dropdown-menu button {
      display: block;
      width: 100%;
      background: none;
      border: none;
      color: #00adb5;
      text-align: left;
      padding: 0.7rem 1.2rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
      text-decoration: none;
    }
    .dropdown-menu a:hover, .dropdown-menu button:hover {
      background: #00adb5;
      color: #000;
    }
    .dropdown-menu .logout-btn {
      color: #ff4d4d;
    }
    .dropdown-menu .logout-btn:hover {
      background: #ff4d4d;
      color: #000;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
      display: flex;
      flex-direction: row;
      gap: 2rem;
      justify-content: center;
      align-items: flex-start;
    }

    .profile-section {
      flex: 1 1 30%;
      max-width: 350px;
      background: #111;
      border: 2px solid #00adb5;
      border-radius: 12px;
      padding: 2rem 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.15);
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      min-width: 260px;
    }
    .profile-section h2 {
      color: #00adb5;
      font-size: 2rem;
      margin-bottom: 1.5rem;
      text-align: left;
      width: 100%;
    }
    .profile-info-row {
      margin-bottom: 1.2rem;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .profile-label {
      color: #00adb5;
      font-weight: 600;
      font-size: 1.1rem;
    }
    .profile-value {
      color: #e0e0e0;
      font-size: 1.1rem;
      font-family: monospace;
      letter-spacing: 1px;
    }
    .change-password-btn {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.5rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      margin-top: 1rem;
      transition: background 0.3s, color 0.3s;
    }
    .change-password-btn:hover {
      background: #00adb5;
      color: #000;
    }
    .change-password-form {
      margin-top: 1rem;
      width: 100%;
      display: none;
      flex-direction: column;
      gap: 0.7rem;
    }
    .change-password-form input {
      width: 100%;
      padding: 0.7rem;
      border-radius: 6px;
      border: 2px solid #00adb5;
      background: #000;
      color: #e0e0e0;
      font-size: 1rem;
    }
    .change-password-form button {
      background: #00adb5;
      color: #000;
      border: 2px solid #00adb5;
      padding: 0.6rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      margin-top: 0.5rem;
      transition: background 0.3s, color 0.3s;
    }
    .change-password-form button:hover {
      background: #008c95;
      color: #fff;
    }
    .profile-message {
      margin-top: 1rem;
      padding: 0.7rem 1rem;
      border-radius: 6px;
      font-size: 1rem;
      text-align: left;
      width: 100%;
    }
    .profile-message.success {
      background: #4caf50;
      color: #fff;
    }
    .profile-message.error {
      background: #ff4d4d;
      color: #fff;
    }
    .decks-section {
      flex: 2 1 60%;
      min-width: 320px;
    }

    /* Styles pour la barre de recherche */
    .search-container {
      width: 100%;
      margin-bottom: 2rem;
    }

    .search-input {
      width: 100%;
      padding: 12px 20px;
      font-size: 1.1rem;
      border: 2px solid #00adb5;
      border-radius: 8px;
      background: #111;
      color: #e0e0e0;
      transition: all 0.3s ease;
    }

    .search-input:focus {
      outline: none;
      box-shadow: 0 0 5px #00adb5;
    }

    .search-input::placeholder {
      color: #666;
    }

    .decks-container {
      width: 95%;
      max-width: 1200px;
      margin: auto;
    }

    table {
      width: 100%;
      text-align: left;
      background: #000;
      border: 2px solid #00adb5;
      border-radius: 10px;
      overflow: hidden;
      margin-bottom: 2rem;
    }

    th, td {
      padding: 15px;
      border-bottom: 1px solid #00adb5;
    }

    th {
      font-size: 1.4rem;
      font-weight: bold;
      background: #000;
      color: #00adb5;
      border-bottom: 2px solid #00adb5;
    }

    td {
      font-size: 1.2rem;
    }

    tr:hover {
      background: #111;
      cursor: pointer;
    }
    @media (max-width: 900px) {
      .main-content {
        flex-direction: column;
        align-items: stretch;
      }
      .profile-section, .decks-section {
        max-width: 100%;
        min-width: 0;
      }
    }
    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
    }

    /* Styles pour les boxes survolantes */
    .follow-box {
      display: none;
      position: fixed;
      top: 110px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(34, 34, 34, 0.95);
      color: #00adb5;
      border: 2px solid #00adb5;
      border-radius: 12px;
      box-shadow: 0 8px 32px rgba(0, 173, 181, 0.3);
      padding: 1.5rem;
      width: 90%;
      max-width: 400px;
      z-index: 9999;
      backdrop-filter: blur(8px);
    }

    .follow-box-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
      padding-bottom: 0.8rem;
      border-bottom: 1px solid #00adb5;
    }

    .follow-box-title {
      font-size: 1.4rem;
      font-weight: 700;
      color: #00adb5;
    }

    .follow-box-close {
      background: none;
      border: none;
      color: #00adb5;
      font-size: 1.5rem;
      cursor: pointer;
      padding: 0.3rem;
      border-radius: 50%;
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background 0.2s ease;
    }

    .follow-box-close:hover {
      background: rgba(0, 173, 181, 0.2);
    }

    .follow-box-content {
      max-height: 300px;
      overflow-y: auto;
      padding-right: 0.5rem;
    }

    .follow-box-content::-webkit-scrollbar {
      width: 8px;
    }

    .follow-box-content::-webkit-scrollbar-track {
      background: #222;
      border-radius: 4px;
    }

    .follow-box-content::-webkit-scrollbar-thumb {
      background: #00adb5;
      border-radius: 4px;
    }

    .follow-box-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .follow-box-item {
      padding: 0.8rem;
      border-radius: 6px;
      transition: background 0.2s ease;
    }

    .follow-box-item:hover {
      background: rgba(0, 173, 181, 0.1);
    }

    .follow-box-link {
      color: #e0e0e0;
      text-decoration: none;
      font-size: 1.1rem;
      transition: color 0.2s ease;
    }

    .follow-box-link:hover {
      color: #00adb5;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="{{ route('home') }}"><img src="/images/icone.ico">DeckStorm</a>
    <div>
      <span>Bienvenue {{ user?.username }}</span>
      <div class="dropdown" id="userDropdown">
        <button class="dropdown-toggle" onclick="toggleDropdown()" aria-haspopup="true" aria-expanded="false">
          <span>â–¼</span>
        </button>
        <div class="dropdown-menu" id="dropdownMenu">
          <a href="/account/{{ user?.id }}">Mon compte</a>
          <form action="/logout" method="POST" style="margin:0;">
            {{ csrfField() }}
            <button type="submit" class="logout-btn">Se dÃ©connecter</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    function toggleDropdown() {
      document.getElementById('userDropdown').classList.toggle('open');
    }
    document.addEventListener('click', function(event) {
      const dropdown = document.getElementById('userDropdown');
      if (!dropdown.contains(event.target)) {
        dropdown.classList.remove('open');
      }
    });

    function toggleChangePasswordForm() {
      const form = document.getElementById('changePasswordForm');
      form.style.display = form.style.display === 'flex' ? 'none' : 'flex';
    }
  </script>
  <div class="main-content">
    <!-- 1/3 : Section profil utilisateur -->
    <div class="profile-section">
      <h2>Mon profil</h2>
      <div class="profile-info-row">
        <span class="profile-label">Nom d'utilisateur :</span>
        <span class="profile-value">{{ user.username }}</span>
      </div>
      <div class="profile-info-row">
        <span class="profile-label">AbonnÃ©s :</span>
        <span class="profile-value" id="followers-link" style="cursor:pointer; text-decoration:underline;">
          {{ followersCount }}
        </span>
      </div>
      <div class="profile-info-row">
        <span class="profile-label">Abonnements :</span>
        <span class="profile-value" id="following-link" style="cursor:pointer; text-decoration:underline;">
          {{ followingCount }}
        </span>
      </div>
      <div class="profile-info-row">
        <span class="profile-label">Mot de passe :</span>
        <span class="profile-value">
          ********
        </span>
      </div>
      <button class="change-password-btn" onclick="toggleChangePasswordForm()">Changer le mot de passe</button>
      <form id="changePasswordForm" class="change-password-form" action="/account/{{ user.id }}/change-password" method="POST" style="display:none;">
        {{ csrfField() }}
        <input type="password" name="old_password" placeholder="Ancien mot de passe" required />
        <input type="password" name="new_password" placeholder="Nouveau mot de passe" required minlength="8" />
        <input type="password" name="confirm_new_password" placeholder="Confirmer le nouveau mot de passe" required minlength="8" />
        <button type="submit">Valider</button>
      </form>
      @if(flashMessages.has('profile_success'))
        <div class="profile-message success">{{ flashMessages.get('profile_success') }}</div>
      @endif
      @if(flashMessages.has('profile_error'))
        <div class="profile-message error">{{ flashMessages.get('profile_error') }}</div>
      @endif
    </div>
    <!-- 2/3 : Section decks utilisateur -->
    <div class="decks-section">
      <h1>Mes decks : {{ userDecks.length }}</h1>
      <div class="decks-container">
        <div class="search-container">
          <input 
            type="text" 
            id="deckSearch" 
            class="search-input" 
            placeholder="Rechercher dans mes decks..."
            onkeyup="searchDecks()"
          >
        </div>
        <table>
          <thead>
            <tr>
              <th>Titre</th>
              <th>Description</th>
              <th>Cartes</th>
              <th>VisibilitÃ©</th>
            </tr>
          </thead>
          <tbody id="decksTableBody">
            @if(userDecks.length)
              @each(deck in userDecks)
                <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                  <td><a style="text-decoration: none; color: white" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                  <td>{{ deck.description }}</td>
                  <td>{{ deck.cards.length }}</td>
                  <td>
                    <span title="{{ deck.visibility === 'public' ? 'Public' : 'PrivÃ©' }}">
                      {{ deck.visibility === 'public' ? 'ðŸ”“' : 'ðŸ”’' }}
                    </span>
                  </td>
                </tr>
              @endeach
            @else
              <tr>
                <td colspan="4">Aucun deck disponible.</td>
              </tr>
            @endif
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Box survolante pour abonnÃ©s -->
  <div id="followers-box" class="follow-box">
    <div class="follow-box-header">
      <span class="follow-box-title">AbonnÃ©s</span>
      <button onclick="closeFollowersBox()" class="follow-box-close" aria-label="Fermer">Ã—</button>
    </div>
    <div class="follow-box-content">
      @if(followersList && followersList.length)
        <ul class="follow-box-list">
          @each(f in followersList)
            <li class="follow-box-item">
              <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
            </li>
          @endeach
        </ul>
      @else
        <span>Aucun abonnÃ©.</span>
      @endif
    </div>
  </div>

  <!-- Box survolante pour abonnements -->
  <div id="following-box" class="follow-box">
    <div class="follow-box-header">
      <span class="follow-box-title">Abonnements</span>
      <button onclick="closeFollowingBox()" class="follow-box-close" aria-label="Fermer">Ã—</button>
    </div>
    <div class="follow-box-content">
      @if(followingList && followingList.length)
        <ul class="follow-box-list">
          @each(f in followingList)
            <li class="follow-box-item">
              <a href="/public-account/{{ f.id }}" class="follow-box-link">{{ f.username }}</a>
            </li>
          @endeach
        </ul>
      @else
        <span>Aucun abonnement.</span>
      @endif
    </div>
  </div>
  <script>
    // ...existing code...
    document.getElementById('followers-link').onclick = function(e) {
      e.stopPropagation();
      document.getElementById('followers-box').style.display = 'block';
      document.getElementById('following-box').style.display = 'none';
    };
    document.getElementById('following-link').onclick = function(e) {
      e.stopPropagation();
      document.getElementById('following-box').style.display = 'block';
      document.getElementById('followers-box').style.display = 'none';
    };
    function closeFollowersBox() {
      document.getElementById('followers-box').style.display = 'none';
    }
    function closeFollowingBox() {
      document.getElementById('following-box').style.display = 'none';
    }
    document.addEventListener('click', function(event) {
      // ...existing code...
      // Fermer les box si clic en dehors
      const fb = document.getElementById('followers-box');
      const flb = document.getElementById('following-box');
      if (fb && fb.style.display === 'block' && !fb.contains(event.target) && event.target.id !== 'followers-link') {
        fb.style.display = 'none';
      }
      if (flb && flb.style.display === 'block' && !flb.contains(event.target) && event.target.id !== 'following-link') {
        flb.style.display = 'none';
      }
    });

    function searchDecks() {
      const input = document.getElementById('deckSearch');
      const filter = input.value.toLowerCase();
      const tbody = document.getElementById('decksTableBody');
      const rows = tbody.getElementsByTagName('tr');

      for (let row of rows) {
        const titleCell = row.getElementsByTagName('td')[0];
        const descriptionCell = row.getElementsByTagName('td')[1];
        
        if (titleCell && descriptionCell) {
          const title = titleCell.textContent || titleCell.innerText;
          const description = descriptionCell.textContent || descriptionCell.innerText;
          
          if (title.toLowerCase().indexOf(filter) > -1 || description.toLowerCase().indexOf(filter) > -1) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        }
      }
    }
  </script>
</body>
</html>
