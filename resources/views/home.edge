        {{ flashMessages.get('success') }}
      </div>
    @endif

    @if(flashMessages.has('error'))
      <div class="flash-message flash-error">
        {{ flashMessages.get('error') }}
      </div>
    @endif

    <script>
      /* Script pour le tri des colonnes */
      let sortDirection = {}; // Suivi de la direction de tri pour chaque colonne

      function sortTable(tableId, columnIndex, isNumeric = false) {
        const table = document.getElementById(tableId);
        const tbody = table.querySelector('tbody');
        const rows = Array.from(tbody.rows);

        // Basculer la direction de tri
        sortDirection[tableId] = sortDirection[tableId] || {};
        sortDirection[tableId][columnIndex] = !sortDirection[tableId][columnIndex];

        rows.sort((a, b) => {
          const aText = a.cells[columnIndex].innerText.trim();
          const bText = b.cells[columnIndex].innerText.trim();

          if (isNumeric) {
            return sortDirection[tableId][columnIndex]
              ? parseInt(aText) - parseInt(bText)
              : parseInt(bText) - parseInt(aText);
          } else {
            return sortDirection[tableId][columnIndex]
              ? aText.localeCompare(bText)
              : bText.localeCompare(aText);
          }
        });

        // Mettre Ã  jour les lignes du tableau
        rows.forEach(row => tbody.appendChild(row));

        // Mettre Ã  jour les indicateurs de flÃ¨che
        const headers = table.querySelectorAll('th');
        headers.forEach((header, index) => {
          const arrow = header.querySelector('.sort-arrow');
          if (arrow) {
            arrow.innerHTML = index === columnIndex
              ? (sortDirection[tableId][columnIndex] ? 'â†“' : 'â†‘')
              : '';
          }
        });

        // RafraÃ®chir la pagination pour afficher la page 1 avec le nouvel ordre triÃ©
        if (tableId === 'userDecksTable') {
          paginateTable('userDecksTable', 'userDecksTbody', 'userDecksPagination', 10, true);
        } else if (tableId === 'publicDecksTable') {
          paginateTable('publicDecksTable', 'publicDecksTbody', 'publicDecksPagination', 10, true);
        }
      }

      // Pagination logic for both tables
      function paginateTable(tableId, tbodyId, paginationId, pageSize = 10, resetPage = false) {
        const tbody = document.getElementById(tbodyId);
        const rows = Array.from(tbody.querySelectorAll('tr'));
        let currentPage = paginateTable.currentPages?.[tbodyId] || 1;
        const totalPages = Math.ceil(rows.length / pageSize);

        // Si resetPage est demandÃ© (aprÃ¨s un tri), on revient Ã  la page 1
        if (resetPage) currentPage = 1;
        paginateTable.currentPages = paginateTable.currentPages || {};
        paginateTable.currentPages[tbodyId] = currentPage;

        function renderPage(page) {
          // Hide all rows
          rows.forEach(row => row.style.display = 'none');
          // Show only rows for the current page
          const start = (page - 1) * pageSize;
          const end = start + pageSize;
          rows.slice(start, end).forEach(row => row.style.display = '');
          // Update pagination controls
          const pagination = document.getElementById(paginationId);
          pagination.innerHTML = '';
          if (totalPages > 1) {
            const left = document.createElement('button');
            left.textContent = 'â†';
            left.className = 'pagination-btn';
            left.disabled = page === 1;
            left.onclick = () => { if (paginateTable.currentPages[tbodyId] > 1) { paginateTable.currentPages[tbodyId]--; renderPage(paginateTable.currentPages[tbodyId]); } };
            pagination.appendChild(left);

            const pageInfo = document.createElement('span');
            pageInfo.textContent = `Page ${page} / ${totalPages}`;
            pageInfo.className = 'pagination-info';
            pagination.appendChild(pageInfo);

            const right = document.createElement('button');
            right.textContent = 'â†’';
            right.className = 'pagination-btn';
            right.disabled = page === totalPages;
            right.onclick = () => { if (paginateTable.currentPages[tbodyId] < totalPages) { paginateTable.currentPages[tbodyId]++; renderPage(paginateTable.currentPages[tbodyId]); } };
            pagination.appendChild(right);
          }
        }

        renderPage(currentPage);
      }

      document.addEventListener('DOMContentLoaded', () => {
        sortTable('userDecksTable', 0);
        sortTable('publicDecksTable', 0);
        // Les appels Ã  paginateTable sont faits dans sortTable pour garantir le tri sur toutes les pages
      });
    </script>

