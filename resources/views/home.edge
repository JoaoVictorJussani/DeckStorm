      background: #00adb5;
      color: black;
    }

    /* Messages flash */
    .flash-message {
      width: 100%;
      max-width: 800px;
      margin: 0 auto 2rem auto;
      padding: 1rem;
      border-radius: 8px;
      text-align: center;
      font-weight: 600;
      animation: fadeIn 0.3s ease;
    }

    .flash-success {
      background: rgba(0, 173, 181, 0.2);
      border: 2px solid #00adb5;
      color: #00adb5;
    }

    .flash-error {
      background: rgba(255, 77, 77, 0.2);
      border: 2px solid #ff4d4d;
      color: #ff4d4d;
    }

    /* Pagination styles */
    .pagination-btn {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.5rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      margin: 0 0.5rem;
      transition: background 0.3s, color 0.3s;
      min-width: 44px;
      min-height: 44px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      user-select: none;
    }
    .pagination-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      background: #222;
      color: #888;
      border-color: #222;
    }
    .pagination-info {
      color: #00adb5;
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 1rem;
      user-select: none;
    }
    /* Ajout d'un espacement sous la pagination */
    #userDecksPagination,
    #publicDecksPagination {
      margin-bottom: 4rem;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
