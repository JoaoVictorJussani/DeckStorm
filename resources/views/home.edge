<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Accueil</title>
  <link rel="shortcut icon" href="/images/icone.ico" type="image/x-icon">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      min-height: 100vh;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .navbar img {
      height: 36px;
      width: 36px;
      margin-right: 0.7rem;
      vertical-align: middle;
    }

    .main-content {
      margin-top: 100px;
      padding: 2rem;
    }

    /* Styles pour la barre de recherche et le switch */
    .search-container {
      max-width: 800px;
      margin: 0 auto 2rem auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .search-wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .search-input {
      width: 100%;
      padding: 12px 20px;
      font-size: 1.1rem;
      border: 2px solid #00adb5;
      border-radius: 8px;
      background: #111;
      color: #e0e0e0;
      transition: all 0.3s ease;
    }

    .search-input:focus {
      outline: none;
      box-shadow: 0 0 5px #00adb5;
    }

    .search-input::placeholder {
      color: #666;
    }

    /* Styles du switch/slider */
    .search-switch-container {
      display: flex;
      justify-content: center;
      margin-bottom: 1rem;
    }

    .search-switch {
      background: #111;
      border: 2px solid #00adb5;
      border-radius: 25px;
      padding: 4px;
      width: 320px;
      height: 40px;
      position: relative;
      cursor: pointer;
      display: flex;
      align-items: center;
      transition: all 0.3s ease;
    }

    .switch-option {
      width: 50%;
      text-align: center;
      font-size: 0.95rem;
      color: #e0e0e0;
      z-index: 1;
      transition: color 0.3s ease;
      padding: 5px 0;
      font-weight: 600;
    }

    .switch-slider {
      position: absolute;
      left: 4px;
      top: 4px;
      width: calc(50% - 4px);
      height: calc(100% - 8px);
      background: #00adb5;
      border-radius: 20px;
      transition: transform 0.3s ease;
    }

    .search-switch[data-mode="author"] .switch-slider {
      transform: translateX(calc(100% + 4px));
    }

    .search-switch[data-mode="author"] .switch-option:last-child {
      color: #000;
    }

    .search-switch[data-mode="content"] .switch-option:first-child {
      color: #000;
    }

    .decks-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    .deck-card {
      background: #111;
      border: 2px solid #00adb5;
      border-radius: 10px;
      padding: 1.5rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      cursor: pointer;
    }

    .deck-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.2);
    }

    .deck-title {
      color: #00adb5;
      font-size: 1.4rem;
      margin-bottom: 1rem;
      font-weight: bold;
    }

    .deck-description {
      color: #e0e0e0;
      margin-bottom: 1rem;
      line-height: 1.4;
    }

    .deck-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #888;
      font-size: 0.9rem;
    }

    .deck-author {
      color: #00adb5;
      text-decoration: none;
    }

    .no-decks {
      text-align: center;
      color: #666;
      font-size: 1.2rem;
      margin-top: 2rem;
    }

    /* Dropdown styles */
    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-toggle {
      background: #00adb5;
      color: white;
      border: none;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background: #222;
      min-width: 180px;
      box-shadow: 0 2px 10px rgba(0,173,181,0.15);
      border: 1px solid #00adb5;
      border-radius: 8px;
      z-index: 100;
      margin-top: 0.5rem;
    }

    .dropdown.open .dropdown-menu {
      display: block;
    }

    /* Styles pour le bouton d'ajout */
    .add-deck-btn {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: #00adb5;
      color: white;
      border: none;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      font-size: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      box-shadow: 0 4px 12px rgba(0, 173, 181, 0.3);
      transition: all 0.3s ease;
      z-index: 100;
      text-decoration: none;
    }

    .add-deck-btn:hover {
      transform: scale(1.1);
      background: #008c95;
      box-shadow: 0 6px 16px rgba(0, 173, 181, 0.4);
    }

    .add-deck-btn span {
      margin-top: -2px;
    }
  </style>
</head>
<body>
  @include('components/header')

  <div class="main-content">
    <div class="search-container">
      <div class="search-switch" id="searchSwitch" data-mode="content">
        <div class="switch-option">Titre & Description</div>
        <div class="switch-option">Auteur</div>
        <div class="switch-slider"></div>
      </div>
      <input 
        type="text" 
        id="deckSearch" 
        class="search-input" 
        placeholder="Rechercher des decks publics..."
        onkeyup="searchDecks()"
      >
    </div>

    <div class="decks-grid" id="decksContainer">
      @if(publicDecks.length)
        @each(deck in publicDecks)
          <div class="deck-card" onclick="window.location.href='/deck/{{ deck.id }}'">
            <div class="deck-title">{{ deck.title }}</div>
            <div class="deck-description">{{ deck.description }}</div>
            <div class="deck-info">
              <span>{{ deck.cards.length }} cartes</span>
              <a href="/public-account/{{ deck.user.id }}" class="deck-author">{{ deck.user.username }}</a>
            </div>
          </div>
        @endeach
      @else
        <div class="no-decks">Aucun deck public disponible</div>
      @end
    </div>

    @if(auth.isAuthenticated)
      <a href="/deck/create" class="add-deck-btn" title="Ajouter un nouveau deck">
        <span>+</span>
      </a>
    @endif
  </div>

  <script>
    const searchSwitch = document.getElementById('searchSwitch');
    const searchInput = document.getElementById('deckSearch');

    searchSwitch.addEventListener('click', () => {
      const currentMode = searchSwitch.getAttribute('data-mode');
      const newMode = currentMode === 'content' ? 'author' : 'content';
      searchSwitch.setAttribute('data-mode', newMode);
      
      // Update placeholder based on mode
      searchInput.placeholder = newMode === 'content' 
        ? "Rechercher par titre ou description..." 
        : "Rechercher par nom d'auteur...";
        
      // Trigger search with new mode
      searchDecks();
    });

    function searchDecks() {
      const input = document.getElementById('deckSearch');
      const filter = input.value.toLowerCase();
      const searchMode = document.getElementById('searchSwitch').getAttribute('data-mode');
      const decks = document.getElementsByClassName('deck-card');

      for (let deck of decks) {
        let match = false;
        
        if (searchMode === 'content') {
          const title = deck.querySelector('.deck-title').textContent;
          const description = deck.querySelector('.deck-description').textContent;
          match = title.toLowerCase().includes(filter) || 
                 description.toLowerCase().includes(filter);
        } else {
          const author = deck.querySelector('.deck-author').textContent;
          match = author.toLowerCase().includes(filter);
        }

        deck.style.display = match ? '' : 'none';
      }

      // Update no results message
      const visibleDecks = Array.from(decks).filter(d => d.style.display !== 'none').length;
      const noDecksMessage = document.querySelector('.no-decks');
      if (noDecksMessage) {
        noDecksMessage.style.display = visibleDecks === 0 ? 'block' : 'none';
      }
    }

    document.addEventListener('click', function(event) {
      const dropdown = document.getElementById('userDropdown');
      if (dropdown && !dropdown.contains(event.target)) {
        dropdown.classList.remove('open');
      }
    });
  </script>
</body>
</html>
