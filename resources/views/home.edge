  <!-- Campo CSRF escondido para uso no JS -->
  <input type="hidden" id="csrfToken" value="{{ csrfField() | safe }}" style="display:none;" />


  <a href="{{ route('decks.create') }}" class="add-deck-btn" title="Cr√©er un nouveau deck">
    <span>+</span>
  </a>


  <script>
    async function toggleLike(deckId, button, context) {
      try {
        const isLiked = button.classList.contains('liked');
        const endpoint = `/api/decks/${deckId}/${isLiked ? 'unlike' : 'like'}`;
        // Extrai o token CSRF do campo hidden
        let csrfTokenInput = document.querySelector('input[name="_csrf"]');
        if (!csrfTokenInput) {
          // fallback para o campo escondido criado acima
          const temp = document.getElementById('csrfToken');
          if (temp) {
            // O csrfField() retorna um input, precisamos extrair o valor do atributo value
            // Exemplo: <input type="hidden" name="_csrf" value="TOKEN">
            const match = temp.outerHTML.match(/value="([^"]+)"/);
            if (match) csrfTokenInput = { value: match[1] };
          }
        }
        const csrfToken = csrfTokenInput ? csrfTokenInput.value : '';

        const response = await fetch(endpoint, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': csrfToken
          }
        });

        if (response.ok) {
          const data = await response.json();
          button.classList.toggle('liked');
          // Atualiza o emoji do cora√ß√£o
          const heartEmoji = button.querySelector('.heart-emoji');
          heartEmoji.textContent = button.classList.contains('liked') ? '‚ù§Ô∏è' : 'ü§ç';
          // Atualiza o contador
          const countElement = button.querySelector('.like-count');
          countElement.textContent = data.likesCount;
        }
      } catch (error) {
        console.error('Erreur lors du like:', error);
      }
    }
  </script>
