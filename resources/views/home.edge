      }
      #decksListContainer th, #decksListContainer td {
        padding: 8px 5px;
      }
      #toggleViewBtn {
        padding: 0.5rem 0.8rem;
        font-size: 1rem;
      }
      .add-deck-btn {
        width: 48px;
        height: 48px;
        font-size: 1.5rem;
        bottom: 1rem;
