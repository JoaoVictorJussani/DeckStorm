      }
      .decks-grid {
        gap: 1rem;
      }
      #decksListContainer table {
        font-size: 0.98rem;
      }
    }
    @media (max-width: 600px) {
      .main-content {
        margin-top: 80px;
        padding: 0.5rem;
      }
      .search-container {
        gap: 0.5rem;
      }
