              <th onclick="sortTable('publicDecksTable', 2, true)">Cartes <span class="sort-arrow"></span></th>
              <th onclick="sortTable('publicDecksTable', 3)">CrÃ©Ã© par <span class="sort-arrow"></span></th>
            </tr>
          </thead>
          <tbody id="publicDecksTbody">
            @if(publicDecks.length)
