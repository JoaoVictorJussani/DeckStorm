    }

    .deck-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: #888;
      font-size: 0.95rem;
      margin-top: 0.5rem;
    }

    .deck-author {
      color: #1976d2;
      text-decoration: underline;
      font-weight: 500;
      transition: color 0.2s;
    }
    .deck-author:hover, .deck-author:focus {
      color: #1565c0;
      outline: none;
    }

    .no-decks {
