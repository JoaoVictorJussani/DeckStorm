        Rechercher
      </button>
    </form>

    <!-- Tableau des decks personnels -->
    <div class="decks-container">
      <table id="userDecksTable">
        <thead>
          <tr>
            <th onclick="sortTable('userDecksTable', 0)">Titre <span class="sort-arrow">â†“</span></th>
            <th onclick="sortTable('userDecksTable', 1)">Description <span class="sort-arrow"></span></th>
            <th onclick="sortTable('userDecksTable', 2, true)">Cartes <span class="sort-arrow"></span></th>
            <th onclick="sortTable('userDecksTable', 3)">VisibilitÃ© <span class="sort-arrow"></span></th>
          </tr>
        </thead>
        <tbody>
          @if(userDecks.length)
            @each(deck in userDecks)
