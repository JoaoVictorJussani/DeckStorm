      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    /* Formulaire de recherche */
    .search-form {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
      width: 100%;
      max-width: 800px;
      margin-left: auto;
      margin-right: auto;
    }

    .search-input {
      flex: 1;
      padding: 0.8rem 1.2rem;
      border: 2px solid #00adb5;
      border-radius: 8px;
      background: rgba(0, 173, 181, 0.1);
      color: #e0e0e0;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .search-input:focus {
      outline: none;
      background: rgba(0, 173, 181, 0.2);
      box-shadow: 0 0 0 3px rgba(0, 173, 181, 0.3);
    }

    .search-input::placeholder {
      color: #666;
    }

    .search-button {
      padding: 0.8rem 1.5rem;
      background: #00adb5;
      color: #000;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      transition: all 0.3s ease;
      white-space: nowrap;
    }

    .search-button:hover {
      background: #008c95;
      transform: translateY(-1px);
    }

    /* Messages flash */
    .flash-message {
      width: 100%;
      max-width: 800px;
      margin: 0 auto 2rem auto;
      padding: 1rem;
      border-radius: 8px;
      text-align: center;
      font-weight: 600;
      animation: fadeIn 0.3s ease;
    }

    .flash-success {
      background: rgba(0, 173, 181, 0.2);
      border: 2px solid #00adb5;
      color: #00adb5;
    }

    .flash-error {
      background: rgba(255, 77, 77, 0.2);
      border: 2px solid #ff4d4d;
      color: #ff4d4d;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <!-- Barre de navigation -->
