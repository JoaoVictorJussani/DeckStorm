              <a href="/public-account/{{ deck.user.id }}" class="deck-author" onclick="event.stopPropagation();">{{ deck.user.username }}</a>
            </div>
          </div>
        @end
      </div>
    </div>

    <!-- Top Creators by Followers -->
    <div class="top-section">
      <h2 class="section-title">Cr√©ateurs les plus suivis</h2>
      <div class="top-grid">
        @each(creator in topCreatorsByFollowers)
          <div class="top-item" onclick="window.location.href='/public-account/{{ creator.id }}'" title="Voir le profil de {{ creator.username }}">
            <div class="deck-title">{{ creator.username }}</div>
            <div class="creator-stat" title="Nombre total d'abonn√©s">üë• {{ creator.$extras.followers_count }} abonn√©s</div>
          </div>
