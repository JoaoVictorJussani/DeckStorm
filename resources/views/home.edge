      </div>
    </div>

    <!-- Top Creators by Decks -->
    <div class="top-section">
      <h2 class="section-title">Cr√©ateurs avec le plus de decks</h2>
      <div class="top-grid">
        @each(creator in topCreatorsByDecks)
          <div class="top-item" onclick="window.location.href='/public-account/{{ creator.id }}'" title="Voir le profil de {{ creator.username }}">
            <div class="deck-title">{{ creator.username }}</div>
            <div class="creator-stat" title="Nombre total de decks publics">üìö {{ creator.$extras.decks_count }} decks</div>
          </div>
        @end
      </div>
    </div>
  </div>

  <a href="{{ route('decks.create') }}" class="add-deck-btn" title="Cr√©er un nouveau deck de cartes">
    <span>+</span>
  </a>
</body>
</html>
