<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Visualisation du deck</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar button {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
    }

    .deck-details {
      width: 95%;
      max-width: 600px;
      margin: auto;
      background: #000;
      padding: 2rem;
      border-radius: 12px;
      border: 2px solid #00adb5;
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }

    .deck-details p {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .button-container {
      text-align: center;
      margin-top: 2rem;
    }

    .button-container button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 10px;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .button-container button:hover {
      background: #00adb5;
      color: black;
    }
  </style>
</head>
<body>
    <div class="navbar">
        <a href="{{ route('home') }}">Flashcards</a>
        <div>
          <span>Bienvenue {{ user?.username }}</span>
          <form action="/logout" method="POST" style="display: inline;">
            {{ csrfField() }}
            <button type="submit">Se déconnecter</button>
          </form>
        </div>
      </div>

  <div class="main-content">
    <h1>{{ deck.title }}</h1>
    <div class="deck-details">
      <p><strong>Description:</strong> {{ deck.description }}</p>
    </div>

    <div class="button-container">
      <button onclick="window.location.href='{{ route('decks.edit', { id: deck.id }) }}'">Modifier</button>
      <button onclick="confirmDelete()">Supprimer</button>
    </div>
  </div>

  <script>
    function confirmDelete() {
      if (confirm('Êtes-vous sûr de vouloir supprimer ce deck ?')) {
        document.getElementById('delete-form').submit();
      }
    }
  </script>

  <form id="delete-form" action="{{ route('decks.delete', { id: deck.id }) }}" method="POST" style="display: none;">
    {{ csrfField() }}
  </form>
</body>
</html>
