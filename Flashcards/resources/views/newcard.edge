<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Nouvelle Carte</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    form {
      width: 100%;
      max-width: 500px;
      background: #000;
      padding: 2rem;
      border: 2px solid #00adb5;
      border-radius: 12px;
      box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
    }

    label {
      display: block;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }

    input, textarea {
      width: 100%;
      padding: 0.8rem;
      margin-bottom: 1.5rem;
      border: 2px solid #00adb5;
      border-radius: 8px;
      background: #000;
      color: #e0e0e0;
      font-size: 1rem;
    }

    input:focus, textarea:focus {
      outline: none;
      border-color: #00adb5;
    }

    .button-container {
      display: flex;
      justify-content: space-between;
    }

    button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    button:hover {
      background: #00adb5;
      color: black;
    }

    /* Add red button styles for "Supprimer" and "Abandonner" */
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }

    .message.error {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #ff4d4d; /* Red background */
      color: #fff;
    }

    .message.success {
      margin-bottom: 1rem;
      padding: 1rem;
      border-radius: 5px;
      text-align: center;
      background-color: #4caf50; /* Green background */
      color: #fff;
    }
  </style>
</head>
<body>
  <h1>Ajouter une nouvelle carte</h1>
  <div class="form-container">
    
    <form action="{{ route('cards.store', { deckId: deck.id }) }}" method="POST">
      {{ csrfField() }}
      @if (flashMessages.has('error'))
        <div class="message error">
          {{ flashMessages.get('error') }}
        </div>
      @endif
      @if (flashMessages.has('success'))
        <div class="message success">
          {{ flashMessages.get('success') }}
        </div>
      @endif
      <label for="question">Question :</label>
      <input type="text" id="question" name="question" value="{{ session.get('old.question', '') }}" />
      <label for="answer">RÃ©ponse :</label>
      <textarea id="answer" name="answer">{{ session.get('old.answer', '') }}</textarea>
      <div class="button-container">
        <button type="submit">OK</button>
        <button type="button" class="abandon-button" onclick="window.location.href='{{ route('decks.show', { id: deck.id }) }}'">Abandonner</button>
      </div>
    </form>
  </div>
</body>
</html>
