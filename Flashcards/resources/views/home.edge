<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>HomePage</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    .navbar {
      width: 100%;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #000;
      border-bottom: 2px solid #00adb5;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }

    .navbar h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }

    .navbar button {
      background: #00adb5;
      color: white;
      border: 2px solid #00adb5;
      padding: 0.7rem 1.2rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s ease;
    }

    .navbar button:hover {
      background: #008c95;
    }

    .navbar a {
      text-decoration: none;
      color: #00adb5;
      font-size: 1.5rem;
      font-weight: bold;
    }

    .main-content {
      margin-top: 120px;
      text-align: center;
      padding: 3rem 2rem;
      width: 100%;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
    }

    .decks-container {
      width: 95%;
      max-width: 1200px;
      margin: auto;
    }

    table {
      width: 100%;
      text-align: left;
      background: #000;
      border: 2px solid #00adb5;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 15px;
      border-bottom: 1px solid #00adb5;
    }

    th {
      font-size: 1.4rem;
      font-weight: bold;
      background: #000;
      color: #00adb5;
      border-bottom: 2px solid #00adb5;
    }

    td {
      font-size: 1.2rem;
    }

    tr:hover {
      cursor: pointer;
    }

    .button-container {
      text-align: center;
      margin-top: 2rem;
      margin-bottom: 3rem;
    }

    .add-button {
      background: #000;
      color: #00adb5;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .add-button:hover {
      background: #00adb5;
      color: black;
    }

    /* Add red button styles for "Supprimer" and "Abandonner" */
    .abandon-button {
      background: #000;
      color: #ff4d4d;
      border: 2px solid #ff4d4d;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.1rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
    }

    .abandon-button:hover {
      background: #ff4d4d;
      color: black;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="{{ route('home') }}">Flashcards</a>
    <div>
      <span>Bienvenue {{ user?.username }}</span>
      <form action="/logout" method="POST" style="display: inline;">
        {{ csrfField() }}
        <button type="submit" class="abandon-button">Se dÃ©connecter</button>
      </form>
    </div>
  </div>

  <div class="main-content">
    <h1>Mes decks</h1>

    <div class="decks-container">
      <table>
        <thead>
          <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Cartes</th>
            <th>VisibilitÃ©</th> <!-- Add a new column for visibility -->
          </tr>
        </thead>
        <tbody>
          @if(userDecks.length)
            @each(deck in userDecks)
              <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                <td><a style="text-decoration: none; color: white" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                <td>{{ deck.description }}</td>
                <td>{{ deck.cards.length }}</td> <!-- Display the number of cards -->
                <td>
                  <span title="{{ deck.visibility === 'public' ? 'Public' : 'PrivÃ©' }}">
                    {{ deck.visibility === 'public' ? 'ðŸ”“' : 'ðŸ”’' }}
                  </span>
                </td> <!-- Display lock icon based on visibility -->
              </tr>
            @endeach
          @else
            <tr>
              <td colspan="4">Aucun deck disponible.</td>
            </tr>
          @endif
        </tbody>
      </table>
    </div>

    <div class="button-container">
      <button class="add-button" onclick="window.location.href='{{ route('decks.create') }}'">+ Ajouter</button>
    </div>

    <div class="public-decks">
      <h2>Decks publics : {{ publicDecks.length }}</h2>
      <form action="{{ route('search.publicDecks') }}" method="GET" style="margin-bottom: 1rem;">
        <input 
          type="text" 
          name="query" 
          placeholder="Rechercher un deck public..." 
          value="{{ query || '' }}" 
          style="width: 100%; padding: 0.5rem; border: 2px solid #00adb5; border-radius: 5px; background: #000; color: #e0e0e0;" 
        />
        <button 
          type="submit" 
          style="margin-top: 0.5rem; background: #00adb5; color: #000; border: none; padding: 0.5rem 1rem; border-radius: 5px; cursor: pointer;">
          Rechercher
        </button>
      </form>
      <div class="decks-container">
        <table>
          <thead>
            <tr>
              <th>Titre</th>
              <th>Description</th>
              <th>Cartes</th>
              <th>CrÃ©Ã© par</th>
            </tr>
          </thead>
          <tbody>
            @if(publicDecks.length)
              @each(deck in publicDecks)
                <tr onclick="window.location.href='/deck/{{ deck.id }}'">
                  <td><a style="text-decoration: none; color: white" href="/deck/{{ deck.id }}">{{ deck.title }}</a></td>
                  <td>{{ deck.description }}</td>
                  <td>{{ deck.cards.length }}</td>
                  <td>{{ deck.user.username }}</td> <!-- Display the creator's username -->
                </tr>
              @endeach
            @else
              <tr>
                <td colspan="4">Aucun deck public disponible.</td>
              </tr>
            @endif
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
