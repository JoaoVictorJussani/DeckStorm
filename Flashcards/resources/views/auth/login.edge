<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Connexion</title>
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background: #000;
        color: #e0e0e0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        font-size: 1rem;
      }

      .container {
        width: 95%;
        max-width: 400px;
        background: #000;
        padding: 2rem;
        border-radius: 12px;
        border: 2px solid #00adb5;
        box-shadow: 0 5px 15px rgba(0, 173, 181, 0.3);
        text-align: center;
      }

      h2 {
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #00adb5;
        font-weight: 700;
      }

      .error {
        color: #ff4d4d;
        margin-bottom: 1rem;
      }

      input {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 2px solid #00adb5;
        font-size: 1rem;
        background: #000;
        color: #e0e0e0;
        margin-top: 10px;
      }

      button {
        background: #000;
        color: #00adb5;
        border: 2px solid #00adb5;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.1rem;
        font-weight: 600;
        margin-top: 20px;
        transition: background 0.3s ease, color 0.3s ease;
      }

      button:hover {
        background: #00adb5;
        color: black;
      }

      p {
        margin-top: 1rem;
      }

      a {
        color: #00adb5;
        text-decoration: none;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Connexion</h2>

      @if (session.has('error'))
        <p class="error">{{ session.get('error') }}</p>
      @endif
      
      <form action="/login" method="POST">
        {{ csrfField() }}
        <input type="text" name="username" placeholder="Nom d'utilisateur" required />
        <input type="password" name="password" placeholder="Mot de passe" required />
        <button type="submit">Connexion</button>
      </form>

      <p>Vous n'avez pas de compte ? <a href="/register">s'inscrire</a></p>
    </div>
  </body>
</html>
