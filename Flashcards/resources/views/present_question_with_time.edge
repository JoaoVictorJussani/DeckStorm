<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Question</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: #000;
      color: #e0e0e0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      font-size: 1rem;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      color: #00adb5;
      font-weight: 700;
      text-align: center;
    }

    p {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .card-container {
      perspective: 1000px;
      margin: 10px 0;
      display: inline-block;
      position: relative;
    }

    .card {
      width: 300px;
      height: 150px;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
      cursor: pointer;
    }

    .card.is-flipped {
      transform: rotateY(180deg);
    }

    .card-face {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #00adb5;
      border-radius: 10px;
      background: #000;
      color: #e0e0e0;
      font-size: 1.2rem;
      text-align: center;
    }

    .card-face.front {
      background: #00adb5;
      color: #000;
    }

    .card-face.back {
      transform: rotateY(180deg);
      position: relative;
    }

    .card-buttons {
      position: absolute;
      bottom: 10px;
      right: 10px;
      display: flex;
      gap: 10px;
    }

    .card-buttons button {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .check-button {
      background: #4caf50;
      color: white;
    }

    .check-button:hover {
      background: #3e8e41;
    }

    .cross-button {
      background: #ff4d4d;
      color: white;
    }

    .cross-button:hover {
      background: #d43c3c;
    }

    button {
      background: #00adb5;
      color: #000;
      border: 2px solid #00adb5;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: 600;
      transition: background 0.3s ease, color 0.3s ease;
      margin-top: 20px;
    }

    button:hover {
      background: #008c95;
      color: white;
    }
  </style>
</head>
<body>
  <h1>Question {{ questionIndex + 1 }} sur {{ deck.cards.length }}</h1>
  <p>Temps écoulé : <span id="elapsed-time"></span></p>

  <div class="card-container">
    <div class="card" onclick="flipCard(this)">
      <div class="card-face front">
        {{ card.question }}
      </div>
      <div class="card-face back">
        {{ card.answer }}
        <div class="card-buttons">
          <button class="check-button" onclick="markCard(true)">✔</button>
          <button class="cross-button" onclick="markCard(false)">✘</button>
        </div>
      </div>
    </div>
  </div>

  <form 
    action="{{ questionIndex + 1 < deck.cards.length 
      ? route('exercise.presentQuestion', { deckId: deck.id, questionIndex: questionIndex + 1 }) 
      : route('exercise.finish', { deckId: deck.id }) }}" 
    method="{{ questionIndex + 1 < deck.cards.length ? 'GET' : 'POST' }}" id="next-form" style="display: none;"> <!-- Initially hidden -->
    {{ csrfField() }}
    <input type="hidden" name="startTime" value="{{ startTime }}" />
    <input type="hidden" name="elapsedTime" value="0" />
    <input type="hidden" name="results" id="results" value="" /> <!-- Results will be serialized here -->
    <input type="hidden" name="mode" value="timed" /> <!-- Pass the mode -->
    <button type="submit" onclick="prepareResults()">{{ questionIndex + 1 < deck.cards.length ? 'Suivant' : 'Terminer' }}</button>
  </form>

  <script>
    const startTime = parseInt('{{ startTime }}', 10); // Ensure startTime is parsed as an integer
    const results = JSON.parse(localStorage.getItem('exerciseResults') || '[]'); // Load results from localStorage or initialize

    function flipCard(cardElement) {
      cardElement.classList.toggle('is-flipped');
    }

    function markCard(isCorrect) {
      results[{{ questionIndex }}] = isCorrect; // Save the result for the current question index
      localStorage.setItem('exerciseResults', JSON.stringify(results)); // Persist results in localStorage
      document.getElementById('results').value = JSON.stringify(results); // Ensure results are passed to the server
      document.getElementById('next-form').style.display = 'block'; // Show the "Suivant" or "Terminer" button
    }

    function prepareResults() {
      document.getElementById('results').value = JSON.stringify(results); // Ensure results are passed to the server
      if ({{ questionIndex + 1 }} === {{ deck.cards.length }}) {
        localStorage.removeItem('exerciseResults'); // Clear localStorage on the last question
      }
    }

    setInterval(() => {
      if (!isNaN(startTime)) {
        const elapsedTime = Math.floor((Date.now() - startTime) / 1000);
        document.querySelector('input[name="elapsedTime"]').value = elapsedTime; // Pass elapsed time
        document.getElementById('elapsed-time').textContent = `${Math.floor(elapsedTime / 60)}m ${elapsedTime % 60}s`;
      } else {
        document.getElementById('elapsed-time').textContent = '0m 0s'; // Fallback if startTime is invalid
      }
    }, 1000);
  </script>
</body>
</html>
